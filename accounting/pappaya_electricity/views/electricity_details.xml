                                 type="object"  class="oe_highlight"/>


                        <field name="state" widget="statusbar" statusbar_visible="draft,co_approval,approved"/>
                </header>
                <sheet>
                    <group string="ACD/Security Deposit Proposal">
                        <group>
                            <field name="branch_id" required="1" options='{"no_open": True, "no_create": True}'/>
                        </group>
                        <group>
                            <field name="service_number" required="1" options='{"no_open": True, "no_create": True}' domain="[('branch_id','=',branch_id),('state','=','approved')]"/>
                        </group>
                        <group>
