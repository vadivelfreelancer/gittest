    <record id="electricity_master_form" model="ir.ui.view">
        <field name="name">Electricity Details</field>
        <field name="model">electricity.details</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                        <button name="button_submit" string="Submit"
                                 type="object"  class="oe_highlight" attrs="{'invisible': [('state','!=', 'draft')]}"/>
                    <button name="approval_by_zonal" string="Approval By Zonal" groups="pappaya_electricity.group_zonal_approval"
                                 type="object"  class="oe_highlight" attrs="{'invisible': [('state','!=', 'zonal_approval')]}"/>
                        <button name="approval_by_rfo" string="Approvals By RFO" groups="pappaya_electricity.group_rfo_approval"
                                 type="object" class="oe_highlight" attrs="{'invisible': [('state','!=', 'rfo_approval')]}"/>
                        <button name="button_reject" string="Reject"
                                 type="object"  class="oe_highlight" attrs="{'invisible': [('state','not in', ['zonal_approval', 'rfo_approval'])]}"/>
                        <button name="button_cancel" string="Cancel"
                                 type="object"  class="oe_highlight" attrs="{'invisible': [('state','!=', 'draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,zonal_approval,rfo_approval,approved"/>
                </header>
                <sheet>
                     <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                    options='{"terminology": "archive"}'/>
                            </button>
                     </div>
                        <group col="4">
                            <field name="branch_id" required="1" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('state', '=', 'rejected')]}"/>
                            <field name="building_id" required="1" domain="[('branch_id','=',branch_id)]" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('state', '=', 'rejected')]}"/>
                            <field name="owner_id" required="1" domain="[('building_id','=',building_id)]" widget="selection" attrs="{'readonly': [('state', '=', 'rejected')]}"/>
                            <field name="block_id" required="1" domain="[('building_id','=',building_id)]" widget="selection" attrs="{'readonly': [('state', '=', 'rejected')]}"/>
                            <field name="floor_id" required="1" domain="[('block_id','=',block_id)]"  options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('state', '=', 'rejected')]}"/>
                            <field name="service_number" attrs="{'readonly': [('state', '=', 'rejected')]}"/>
                            <field name="billing_duration" attrs="{'readonly': [('state', '=', 'rejected')]}"/>
                            <field name="service_user" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('state', '=', 'rejected')]}"/>
                            <field name="bill_due_gap" attrs="{'readonly': [('state', '=', 'rejected')]}"/>
                            <field name="ero" options='{"no_open": True, "no_create": True}'/>
                            <field name="division_id" options='{"no_open": True, "no_create": True}'/>
                        </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
