    <!--electricity bill master-->
     <record id="electricity_bill_form" model="ir.ui.view">
        <field name="name">Electricity Bill</field>
        <field name="model">electricity.bill</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                   <header>
                        <button name="button_confirm" string="Confirm"
                                 type="object"  class="oe_highlight" attrs="{'invisible': [('state','!=', 'draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,reversed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="branch_id" required="1" options='{"no_open": True, "no_create": True}'/>
                            <field name="owner_id" required="1" />
                            <field name="floor_id" required="1" options='{"no_open": True, "no_create": True}' domain="[('building_id','=',building_id)]"/>
                            <field name="from_date" required="1"/>
                        </group>
                        <group>
                            <field name="service_number" domain="[('branch_id','=',branch_id),('state','=','approved')]" required="1" options='{"no_open": True, "no_create": True}'/>
                            <field name="building_id" required="1"  domain="[('branch_id','=',branch_id)]"/>
                            <field name="trans_date" required="1" />
                            <field name="to_date" required="1" />
                        </group>
                        <group>
                         <div>
                             <label for="month" string="Month"
                                    style="font-weight: bold !important;margin-right:107px;margin-left: 0px;"/>
                             <field name="month" style="width:110px" required="1"/>
                             <field name="year" style="width:110px;margin-left: 34px;" required="1"/>
                         </div>
                        </group>
                          <group>
                            <field name="bill_date" required="1" />
                            <field name="bill_due_date" required="1" />
                        </group>
                        <group>
                             <field name="present_reading" required="1" />
                             <field name="previous_reading" required="1" />
                             <field name="no_units"/>
                        </group>
                         <group>
                             <field name="bill_number" required="1" />
                             <field name="branch_number_id" required="1"  options='{"no_open": True, "no_create": True}'/>
                        </group>
                    </group>
                    <group>
                        <field name="bill_upload"/>
                    </group>
                    <group>
                            <div>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="bill_amount"/>
                                    <field name="discount_type" widget="radio" options="{'horizontal': true}" class="col-md-8 oe_inline"/>
                                    <field name="discount_amount"/>
                                    <field name="bill_amount_after_discount"/>
                                    <field name="acd"/>
                                    <field name="mis_amount"/>
                                    <field name="net_amount" class="oe_subtotal_footer_separator"/>
                                </group>
                            </div>
                        </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
