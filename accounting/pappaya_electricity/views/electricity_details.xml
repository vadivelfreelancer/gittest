                        </group>
                    </group>
                    <group string="ACD/Security Deposit Details">
                            <group>
                                <field name="building_id" required="1" options='{"no_open": True, "no_create": True}' domain="[('branch_id','=',branch_id)]"/>
                                <field name="floor_id" required="1" options='{"no_open": True, "no_create": True}' domain="[('building_id','=',building_id)]"/>
                            </group>
                            <group>
