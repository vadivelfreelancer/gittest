<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		<record id="view_pappaya_talent_exam_tree" model="ir.ui.view">
			<field name="name">pappaya.talent.exam.tree</field>
			<field name="model">pappaya.talent.exam</field>
			<field name="arch" type="xml">
				<tree string="Talent Exam">
					<field name="talent_exam_no"/>
					<field name="name"/>
					<field name="course_id" />
					<field name="group_id" />
					<field name="batch_id" />
                    <field name="school_id"/>
				</tree>
			</field>
		</record>
		
		<record id="view_pappaya_talent_exam_form" model="ir.ui.view">
			<field name="name">pappaya.talent.exam.form</field>
			<field name="model">pappaya.talent.exam</field>
			<field name="arch" type="xml">
				<form string="Talent Exam">
					<sheet>
                        <field name="image" widget="image" class="oe_avatar" />
                        <div class="oe_title">
                            <h2><table>
                                <tr>
                                    <td><field name="sur_name" placeholder="Sur Name" style="padding-right:6px"/></td>
                                    <td><field name="name" required="1" placeholder="Name" style="padding-right:6px"/></td>
                                </tr>
                                </table>
                            </h2>
                        </div>
						<group>
                            <group>
                                <field name="talent_exam_no" readonly="1" />
                                <field name="exam_date" required="1"/>
                                <field name="gender" required="1"/>
                                <field name="dob" required="1"/>
                                <field name="blood_group_id"  options="{'no_open': True,'no_create':True}"/>
                                <field name="caste_id"  options="{'no_open': True,'no_create':True}"/>
                                <field name="payment_mode" required="1"/>
								<field name="cheque_dd_no" attrs="{'invisible': [('payment_mode','=','cash' )],'required':[('payment_mode','!=','cash' )]}"/>
								<field name="mark" required="1"/>
							</group>
                            <group>
                                <field name="school_id" domain="[('type','=', 'branch')]" required="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="exam_name" required="1"/>
                                <field name="exam_center" />
                                <field name="academic_year_id" options="{'no_open': True,'no_create':True}" required="1"/>
                                <field name="course_id" required="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="group_id" options="{'no_open': True,'no_create':True}" required="1"/>
                                <field name="batch_id" options="{'no_open': True,'no_create':True}" required="1"/>
                                <field name="course_type" required="1"/>
                                <field name="bank_id" options="{'no_open': True,'no_create':True}"
                                               attrs="{'invisible': [('payment_mode','=','cash' )], 'required':[('payment_mode','!=','cash' )]}"/>
                            </group>
						</group>
                        <notebook colspan="4">
                            <page string="General Information">
                                <group>
                                     <group>
                                        <field name="father_name" required="1"/>
                                        <field name="father_mobile" required="1"/>
                                        <field name="father_email"/>
                                         <label for="street" string="Address"/>
                                         <div class="o_address_format">
                                             <field name="street" placeholder="Street..." class="o_address_street" required="1"/>
                                             <field name="street2" placeholder="Street 2..." class="o_address_street" />
                                             <field name="city_id" placeholder="City" class="o_address_city" required="1" options="{'no_open': True,'no_create':True}"/>
                                             <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True,'no_create':True}" required="1"/>
                                             <field name="zip" placeholder="Pin Code" class="o_address_zip" required="1"/>
                                             <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True,'no_create':True}" required="1"/>
                                         </div>
                                    </group>
                                    <group>
                                         <field name="mother_name" required="1"/>
                                        <field name="mother_mobile"/>
                                        <field name="mother_email"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="view_pappaya_talent_exam_search" model="ir.ui.view">
			<field name="name">pappaya.talent.exam.search</field>
			<field name="model">pappaya.talent.exam</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Talent Exam">
					<field name="name"/>
                    <field name="talent_exam_no"/>
					<field name="school_id"/>
					<field name="course_id" />
					<field name="group_id" />
					<field name="batch_id" />
					<newline/>
					<group expand="0" string="Group By...">
                        <filter string="Branch" name="school_id" domain="[]" context="{'group_by':'school_id'}"/>
						<filter string="Course" name="course_id" domain="[]" context="{'group_by':'course_id'}"/>
						<filter string="Group" name="group_id" domain="[]" context="{'group_by':'group_id'}"/>
						<filter string="Batch" name="batch_id" domain="[]" context="{'group_by':'batch_id'}"/>
                    </group>
				</search>
			</field>
		</record>


		<record model="ir.actions.act_window" id="action_pappaya_talent_exam">
			<field name="name">Talent Exam</field>
			<field name="res_model">pappaya.talent.exam</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_pappaya_talent_exam_search"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new Talent Exam.
				</p>
			</field>
		</record>
		
	</data>
</odoo>