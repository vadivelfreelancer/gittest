<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_pappaya_uniform_item_tree" model="ir.ui.view">
            <field name="name">pappaya.uniform.item.tree</field>
            <field name="model">pappaya.uniform.item</field>
            <field name="arch" type="xml">
                <tree string="Uniform Item" delete="false">
                    <field name="id" groups="base.group_system" invisible="1"/>
                    <field name="name" />
                    <field name="is_active" />
                    <field name="academic_year_id" />
                    <field name="school_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_pappaya_uniform_item_form" model="ir.ui.view">
            <field name="name">pappaya.uniform.item.form</field>
            <field name="model">pappaya.uniform.item</field>
            <field name="arch" type="xml">
                <form string="Uniform Item" duplicate="0" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" default_focus="1" required="1"/>
                                <field name="status"/>
                                <field name="is_active" invisible="1"/>
                            </group>
                            <group>
                                <field name="school_id" options="{'no_open': True,'no_create':True}" domain="[('type','=','branch')]"/>
                                <field name="academic_year_id" options="{'no_open': True,'no_create':True}" domain="[('is_active','=',True)]" required="1"/>
                                <field name="user_sl_no"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pappaya_uniform_item_search" model="ir.ui.view">
            <field name="name">pappaya.uniform.item.search</field>
            <field name="model">pappaya.uniform.item</field>
            <field name="arch" type="xml">
                <search string="Uniform Item">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <filter string="Archived" name="inactive" domain="[('is_active','=',False)]"/>
                    <separator />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

        <record id="action_pappaya_uniform_item_form" model="ir.actions.act_window">
            <field name="name">Uniform Item</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pappaya.uniform.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pappaya_uniform_item_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Uniform Item.
                </p>
            </field>
        </record>

    </data>
</odoo>