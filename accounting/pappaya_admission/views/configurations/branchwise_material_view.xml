<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_branchwise_material_tree" model="ir.ui.view">
            <field name="name">branchwise.material.tree</field>
            <field name="model">branchwise.material</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Branchwise Material">
                    <field name="branch_id"/>
                    <field name="academic_year_id"/>
                    <field name="course_package_id"/>
                </tree>
            </field>
        </record>

        <record id="view_branchwise_material_form" model="ir.ui.view">
            <field name="name">branchwise.material.form</field>
            <field name="model">branchwise.material</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Branchwise Material">
                    <sheet>
                        <group>
                            <group>
                                <field name="branch_id" domain="[('type','=','branch')]" options="{'no_open': True,'no_create':True}" required="1"/>
                                <field name="course_package_id" options="{'no_open': True,'no_create':True}" required="1"/>
                            </group>
                            <group>
                                <field name="academic_year_id" options="{'no_open': True,'no_create':True}" required="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Material">
                                <separator/>
                                <button class="btn-primary" type="action" name="%(pappaya_admission.action_wizard_material_set_add)d" string="Add Material Set"/>
                                <field name="branchwise_material_line_ids">
                                    <tree editable="bottom" delete="false">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id" domain="[('select_type','=','product'),('is_assigned','=',False)]" options="{'no_open': True,'no_create':True}" required="1"/>
                                        <field name="from_material_set" readonly="1"/>
                                        <field name="product_uom_qty" required="1"/>
                                        <field name="product_uom" invisible="1"/>
                                        <field name="price_unit" required="1"/>
                                        <field name="price_subtotal" readonly="1"/>
                                        <field name="material_id" invisible="1"/>
                                        <field name="branch_id" invisible="1"/>
                                        <field name="academic_year_id" invisible="1"/>
                                        <field name="course_package_id" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group colspan="4" col="4">
                                            <field name="product_id" domain="[('select_type','=','product')]" options="{'no_open': True,'no_create':True}" required="1"/>
                                            <field name="from_material_set" readonly="1"/>
                                            <field name="product_uom_qty" required="1"/>
                                            <field name="price_unit" required="1"/>
                                            <field name="price_subtotal" readonly="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_branchwise_material_search" model="ir.ui.view">
            <field name="name">branchwise.material.search</field>
            <field name="model">branchwise.material</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Branchwise Material">
                    <field name="branch_id"/>
                    <field name="academic_year_id"/>
                    <field name="course_package_id"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_branchwise_material_view">
            <field name="name">Branchwise Material</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">branchwise.material</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_branchwise_material_search"/>
        </record>
        
	<record id="view_product_normal_form__admission_inherit" model="ir.ui.view">
		<field name="name">product.product.admission.form.inherit</field>
		<field name="model">product.product</field>
		<field name="inherit_id" ref="product.product_normal_form_view"/>
		<field name="arch" type="xml">
			<field name="barcode" position="after">
				<field name="is_assigned" invisible="1"/>
			</field>
		</field>
	</record>

    </data>
</odoo>
