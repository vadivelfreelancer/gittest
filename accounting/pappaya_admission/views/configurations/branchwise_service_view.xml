<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_pappaya_branch_wise_service_tree" model="ir.ui.view">
            <field name="name">pappaya.branch.wise.service.tree</field>
            <field name="model">pappaya.branch.wise.service</field>
            <field name="arch" type="xml">
                <tree string="Branchwise Service" delete="false">
                    <field name="id" groups="base.group_system" invisible="1"/>
                    <field name="name" />
                    <field name="vehicle_id"/>
                    <field name="academic_year_id"/>
                    <field name="school_id"/>
                </tree>
            </field>
        </record>

        <record id="view_pappaya_branch_wise_service_form" model="ir.ui.view">
            <field name="name">pappaya.branch.wise.service.form</field>
            <field name="model">pappaya.branch.wise.service</field>
            <field name="arch" type="xml">
                <form string="Branchwise Service" duplicate="0" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" default_focus="1" required="1"/>
                                <field name="vehicle_id" options="{'no_open': True,'no_create':True}" required="1"
                                       domain="[('school_id','=', school_id)]"/>
                                <field name="transport_incharge_ids" domain="[('branch_id','=', school_id)]" options="{'no_open': True,'no_create':True}" widget="many2many_tags"
                                       readonly="1" />
                            </group>
                            <group>
                                <field name="school_id" options="{'no_open': True,'no_create':True}"
                                       domain="[('type','=','branch')]" required="1"/>
                                <field name="academic_year_id" options="{'no_open': True,'no_create':True}" required="1"
                                       domain="[('is_active','=',True)]"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pappaya_branch_wise_service_search" model="ir.ui.view">
            <field name="name">pappaya.branch.wise.service.search</field>
            <field name="model">pappaya.branch.wise.service</field>
            <field name="arch" type="xml">
                <search string="Branchwise Service">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <separator />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

        <record id="action_pappaya_branch_wise_service_form" model="ir.actions.act_window">
            <field name="name">Branchwise Service</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pappaya.branch.wise.service</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pappaya_branch_wise_service_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Branchwise Service.
                </p>
            </field>
        </record>

    </data>
</odoo>