<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!--Email template -->
        <record id="email_template_grade_joining_document_followup" model="mail.template">
            <field name="name">Grade Joining Followup - Send by Email</field>
            <field name="subject">Grade Joining Documents - Followup</field>
            <field name="email_from">noreply@pappaya.com</field>
            <field name="email_to">${object.father_email or object.mother_email | safe}</field>
            <field name="model_id" ref="model_pappaya_admission"/>
            <!--<field name="mail_server_id" eval="1" />-->
            <field name="auto_delete" eval="True"/>
			<field name="body_html"><![CDATA[
				<div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
					<p>Dear Parent,</p></br>

					<p>Please submit the following documents at the earliest</p></br>
                    <ul>
					 % for line in object.enq_grade_doc_o2m:
					    % if not line.document_file:
                        <p><li>${line.document_name}</li></p>
                        % endif
                     % endfor
                     </ul>
					<p>Thanks & Regards,</p></br>
                    <p>${object.branch_id.name}</p>
					</br>
					<p><small><b>Note:</b> This is a system generated email. Please do not reply to this.</small></p>
				</div>
		   ]]></field>
		</record>

    </data>
</odoo>
