<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_pappaya_asset_tree" model="ir.ui.view">
			<field name="name">pappaya.asset.tree</field>
			<field name="model">pappaya.asset</field>
			<field name="arch" type="xml">
				<tree string="Asset">
					<field name="name" />
					<field name="description"/>
				</tree>
			</field>
		</record>

		<record id="view_pappaya_asset_form" model="ir.ui.view">
			<field name="name">pappaya.asset.form</field>
			<field name="model">pappaya.asset</field>
			<field name="arch" type="xml">
				<form string="Asset" duplicate="0">
					<sheet>
                        <group>
                        	<group>
                        		<field name="name" default_focus="1" required="1"/>
                        	</group>
                        	<group>
								<field name="description"/>
                        	</group>
                        </group>
					</sheet>
					<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
				</form>
			</field>
		</record>
		
		<record id="view_pappaya_asset_search" model="ir.ui.view">
            <field name="name">pappaya.asset.search</field>
            <field name="model">pappaya.asset</field>
            <field name="arch" type="xml">
                <search string="Asset">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <separator />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

		<record id="action_pappaya_assets_form" model="ir.actions.act_window">
			<field name="name">Asset</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.asset</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_pappaya_asset_search"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new Asset.
				</p>
			</field>
		</record>

	</data>
</odoo>