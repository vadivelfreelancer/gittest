<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_pappaya_employee_type_tree" model="ir.ui.view">
			<field name="name">pappaya.employee.type.tree</field>
			<field name="model">pappaya.employee.type</field>
			<field name="arch" type="xml">
				<tree string="Employee Type">
					<field name="id" groups="base.group_system" invisible="1"/>
					<field name="name" />
					<field name="school_id" invisible="1"/>
				</tree>
			</field>
		</record>

		<record id="view_pappaya_employee_type_form" model="ir.ui.view">
			<field name="name">pappaya.employee.type.form</field>
			<field name="model">pappaya.employee.type</field>
			<field name="arch" type="xml">
				<form string="Employee Type" duplicate="0" delete="false">
					<sheet>
                        <group>
                        	<group>
                        		<field name="name" default_focus="1"/>
                        		<field name="description"/>
                        	</group>
                        	<group>
								<field name="code" required="1"/>
                        		<field name="school_id" domain="[('type','=','branch')]" options="{'no_open': True,'no_create':True}" required="1" invisible="1" />
                        	</group>
                        </group>
					</sheet>
					<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
				</form>
			</field>
		</record>
		
		<record id="view_pappaya_employee_type_search" model="ir.ui.view">
            <field name="name">pappaya.employee.type.search</field>
            <field name="model">pappaya.employee.type</field>
            <field name="arch" type="xml">
                <search string="Employee Type">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <separator />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

		<record id="action_pappaya_employee_type_form" model="ir.actions.act_window">
			<field name="name">Employee Type</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.employee.type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_pappaya_employee_type_search"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new Employee Type.
				</p>
			</field>
		</record>

	</data>
</odoo>