        </record>
        
        <record id="pappaya_view_hr_job_tree" model="ir.ui.view">
            <field name="name">pappaya.hr.job.tree</field>
            <field name="model">hr.job</field>
            <field name="arch" type="xml">
                <tree string="Job" decoration-bf="message_needaction==True">
                	<field name="emp_no_ref" invisible="1"/>
                    <field name="company_id" string="Branch" invisible="1"/>
                    <field name="entity_id" options="{'no_open': True,'no_create':True}"/>
                    <field name="office_type_id"/>
                    <field name="category_id"/>
                    <field name="sub_category_id"/>
                    <field name="department_id"/>
                    <field name="name" string="Designation"/>
                    <field name="code"/>
                    <field name="description" string="Description"/>
                    <field name="is_budget_applicable"/>
                    <field name="is_budget_applicable_from_job" invisible="1"/>
                    <field name="message_needaction" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="pappaya_hr_job_view_kanban" model="ir.ui.view">
            <field name="name">pappaya.hr.job.kanban</field>
            <field name="model">hr.job</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div>
                                    <strong><field name="name"/></strong>
                                </div>
                                <div>
                                    <span><field name="department_id"/></span>
                                </div>
                                <!-- <div>
                                    <span>Vacancies : <field name="expected_employees"/></span>
                                    <span class="pull-right label label-default"><field name="state"/>
                                    </span>
                                </div> -->
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="pappaya_view_job_filter" model="ir.ui.view">
            <field name="name">pappaya.hr.job.search</field>
            <field name="model">hr.job</field>
            <field name="arch" type="xml">
                <search string="Jobs">
                    <field name="name" string="Job"/>
                    <!-- <filter domain="[('state','=','open')]" string="In Position"/>
                    <filter domain="[('state','=','recruit')]" string="In Recruitment" name="in_recruitment"/>
                     -->
                     <field name="department_id"/>
                    <separator/>
                    <!-- <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction','=',True)]"/>
                     -->
                    <group expand="0" string="Group By">
                        <filter string="Department" domain="[]" context="{'group_by':'department_id'}"/>
                    <!--     <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Company" domain="[]" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                     -->
                	</group>
                </search>
            </field>
        </record>

        <record id="pappaya_action_hr_job" model="ir.actions.act_window">
            <field name="name">Designation Mapping</field>
            <field name="res_model">hr.job</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="pappaya_view_job_filter"/>
			<field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('pappaya_view_hr_job_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('pappaya_view_hr_job_form')})]" />
            <!-- <field name="context">{"search_default_Current":1}</field> -->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new Designation.
                </p>
            </field>
        </record>

        <!--Employees -> Configuration -> Employee Tags-->

        <record id="hr.view_employee_category_form" model="ir.ui.view">
            <field name="name">hr.employee.category.form.inherit</field>
            <field name="model">hr.employee.category</field>
            <field name="arch" type="xml">
                <form string="Employee Tags">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

	</data>
</odoo>