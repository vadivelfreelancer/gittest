<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <!--Employees -> Configuration -> Category-->

		<record id="view_hr_employee_category_tree" model="ir.ui.view">
			<field name="name">pappaya.employee.category.tree</field>
			<field name="model">pappaya.employee.category</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Category">
					<field name="name" />
					<field name="code" />
				</tree>
			</field>
		</record>

		<record id="view_hr_employee_category_form" model="ir.ui.view">
			<field name="name">pappaya.employee.category.form</field>
			<field name="model">pappaya.employee.category</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Category">
					<sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="code" required="1"/>
                            </group>
                            <group/>
                        </group>
					</sheet>
				</form>
			</field>
		</record>

        <record id="view_hr_employee_category_search" model="ir.ui.view">
			<field name="name">pappaya.employee.category.search</field>
			<field name="model">pappaya.employee.category</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Category">
					<field name="name" />
					<field name="code" />
					<group expand="0" string="Group By...">
                        <filter name="name" string="Name" domain="[]" context="{'group_by':'name'}" />
                        <filter name="code" string="Code" domain="[]" context="{'group_by':'code'}" />
                    </group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_hr_employee_category_view">
			<field name="name">Category</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.employee.category</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_employee_category_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Category.
                </p>
            </field>
		</record>
		
        <!-- Employees -> Configuration -> Job Positions -->
        
