<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
    
    	<record id="view_hr_employee_gross_update_form" model="ir.ui.view">
            <field name="name">Employee Gross Update Form </field>
            <field name="model">hr.employee.gross</field>
            <field name="arch" type="xml">
                <form string="Employee Gross Update" create="false">
                    <header>
                        <button icon="fa-cogs" string="Update Gross" name="update_employee_gross" type="object" class="oe_highlight"  />
                    </header>
                    <group colspan="4" >
                        <field name="gross_amount" required="1"/>
                        <field name="update_reason" required="1"/>
                    </group>
                    <footer></footer>
               </form>
            </field>
        </record>

        <record id="action_hr_employee_update_gross" model="ir.actions.act_window">
            <field name="name">Employee Gross Update</field>
            <field name="res_model">hr.employee.gross</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_employee_gross_update_form"/>
            <field name="target">new</field>
        </record>

