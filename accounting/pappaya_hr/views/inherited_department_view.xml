<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- hr.department -->
		<record id="pappaya_hr_view_department_form" model="ir.ui.view">
			<field name="name">hr.department.form</field>
			<field name="model">hr.department</field>
			<field name="inherit_id" ref="hr.view_department_form"/>
			<field name="arch" type="xml">
				<xpath expr="//group[1]" position="replace">
					<group col="4">
						<field name="name" string="Department Name" required="1"/>
						<field name="code" required="0" />
						<field name="company_id" invisible="1" options="{'no_open': True,'no_create':True}"/>
					</group>
				</xpath>
			</field>
		</record>
		
