<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_pappaya_employee_dynamic_stage_tree" model="ir.ui.view">
			<field name="name">employee.dynamic.stage.tree</field>
			<field name="model">employee.dynamic.stage</field>
			<field name="arch" type="xml">
				<tree string="Employee Dynamic Stage">
					<field name="menu"/>
				</tree>
			</field>
		</record>

		<record id="view_pappaya_employee_dynamic_stage_form" model="ir.ui.view">
			<field name="name">employee.dynamic.stage.form</field>
			<field name="model">employee.dynamic.stage</field>
			<field name="arch" type="xml">
				<form string="Employee Dynamic Stage" >
					<sheet>
                        <group>
                        	<group>
                        		<field name="menu" required="1"/>
                        		
                        	</group>
                        	<field name="line_ids">
                        		<tree editable="bottom">
                        			<field name="stage_name" required="1" />
                        			<field name="sequence_no" required="1" />
                        			<field name="action_type" required="1" />
                        			<field name="groups_id" widget="many2many_tags" domain="[('category_id','in',['HR and Payroll Management'])]" options="{'no_open': True,'no_create':True}"/>
                        			<field name="active_id"/>
                        		</tree>
                        	</field>
                        </group>
					</sheet>
					 <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>   
				</form>
			</field>
		</record>
		
		<record id="view_pappaya_employee_dynamic_stage_search" model="ir.ui.view">
            <field name="name">employee.dynamic.stage.search</field>
            <field name="model">employee.dynamic.stage</field>
            <field name="arch" type="xml">
                <search string="Employee Dynamic Stage">
                    <field name="menu"/>
                    <separator />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

		<record id="action_pappaya_employee_dynamic_stage_form" model="ir.actions.act_window">
			<field name="name">Dynamic Workflow</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">employee.dynamic.stage</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_pappaya_employee_dynamic_stage_search"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new Employee Dynamic Stage.
				</p>
			</field>
		</record>

	</data>
</odoo>