<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <template id="pappaya_hr_report_custom_header_layout">
            <div class="header">
                <div class="row">
                    <div class="col-xs-12" style="text-align:center; padding-top:20px">
                        <img t-attf-src="/pappaya_hr/static/description/narayana_logo.jpg" style="max-height: 350px; max-width: 200px;"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="pappaya_hr_report_custom_footer_layout">
            <div class="footer">
                <table>
                    <thead>
                        <tr>
                            <td class="col-xs-5 pull-left" style="font-size:12px;">
                                <strong>Dated On: </strong> <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%b-%Y %H:%M:%S')"/>
                            </td>
                            <td class="col-xs-2 pull-right" style="font-size:12px;">
                                <strong>Generated By:  </strong> <span t-esc="user.name"/>
                            </td>
                        </tr>
                    </thead>
                </table>
            </div>
        </template>

        <template id="pappaya_hr_report_custom_layout">
         <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <div class="article">
                <t t-call="pappaya_hr.pappaya_hr_report_custom_header_layout"/>
                <t t-raw="0"/>
                <t t-call="pappaya_hr.pappaya_hr_report_custom_footer_layout"/>
            </div>
        </template>

    </data>
</odoo>