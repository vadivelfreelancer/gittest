<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="employee_transfer" model="ir.ui.view">
        <field name="name">Employee Transfer</field>
        <field name="model">employee.transfer</field>
        <field name="arch" type="xml">
            <form string="Employee Transfer" duplicate="0">
                <header>
                    <button name="init_transfer" string="Initiate Transfer" class="oe_highlight" type="object" states="draft" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo,pappaya_base.hr_principal_hod,pappaya_base.hr_deans"/>
                    <button name="approve_transfer" string="Approve Transfer" class="oe_highlight" type="object" states="initiate" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>
                    <button name="cancel_transfer" string="Cancel" type="object" attrs="{'invisible':[('state','not in','initiate')]}" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,initiate,transfered" />
                </header>
                <sheet>
                    <div class="oe_title oe_left">
                        <h2>
                            <field name="name" force_save="1" class="oe_inline" placeholder="Name"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                        	<field name="type" required="1" force_save="1" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                        	<field name="emp_id" required="1" force_save="1" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            <field name="employee_id" required="1" attrs="{'readonly':[('state', '!=', 'draft')]}" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}"/>
                            <field name="organization_id"  invisible="1" force_save="1" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}"/>
                            <field name="current_branch_id" readonly="1" force_save="1" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}" string="From Branch"/>
                            <field name="current_department_id" readonly="1" force_save="1" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}"/>
                            <field name="current_designation_id" readonly="1" force_save="1" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}"/>
                        </group>
                        <group>
                            <field name="date" required="1" attrs="{'readonly' : [('state', '!=', 'draft')]}"/>
                            <field name="to_branch_id" domain="[('type','=','branch'),('id','!=',current_branch_id),('parent_id','=',to_branch_entity_id)]" attrs="{'required':[('type','=','external')],'invisible':[('type','=','internal')],'readonly' : [('state', '!=', 'draft')] }" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}" string="To Branch"/>
                            <field name="to_branch_entity_id" invisible="1"/>
                            <field name="to_branch_office_type" invisible="1"/>
                            <field name="to_department_id" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}" force_save="1" attrs="{'required':['|',('state','!=','draft'),('type','!=','external')],'readonly':[('state', '=', 'transfered')]}"/>
                            <field name="to_designation_id" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}" force_save="1" attrs="{'required':['|',('state','!=','draft'),('type','!=','external')],'readonly':[('state', '=', 'transfered')]}"/>
                            <field name="is_budget_applied" invisible="1"/>
                            <field name="subject_id" options="{'no_open': True,'no_create':True}" attrs="{'invisible':[('is_budget_applied','=',False)],'required':[('is_budget_applied','=',True)]}" force_save="1"/>
                            <!--<field name="to_designation_id" required="1" domain="[('department_id','=',to_department_id),('id','!=',current_designation_id)]"  options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}" force_save="1" attrs="{'readonly':[('state', '!=', 'draft')]}"/>-->

                            <field name="transfer_number" readonly="1" attrs="{'invisible' : [('transfer_number', '=', False)]}"/>
                            <!-- <field name="responsible" readonly="1"/> -->
                            <field name="employee_id_all" invisible="1"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Internal Notes" >
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="employee_transfer_tree" model="ir.ui.view">
        <field name="name">Employee Transfer Tree</field>
        <field name="model">employee.transfer</field>
        <field name="arch" type="xml">
            <tree string="Employee Transfer" decoration-info="state == 'draft'" decoration-muted="state in ('done','cancel')">
                <field name="type"/>
                <field name="transfer_number"/>
                <field name="emp_id"/>
                <field name="employee_id"/>
                <!--<field name="name"/>-->
                <field name="current_branch_id" string="From Branch"/>
                <field name="to_branch_id" string="To Branch"/>
                <field name="date"/>
                <field name="state" string="Status"/>
                <field name="to_branch_office_type" invisible="1"/>
                <field name="is_budget_applied" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_transfer_search" model="ir.ui.view">
        <field name="name">employee.transfer.search</field>
        <field name="model">employee.transfer</field>
        <field name="priority" eval="8" />
        <field name="arch" type="xml">
            <search string="Job Description">
                <field name="current_branch_id" />
                <field name="employee_id" />
                <field name="to_branch_id" />
                <field name="emp_id" />
                <group expand="0" string="Group By...">
                    <filter name="employee_id" string="Employee" domain="[]" context="{'group_by':'employee_id'}" />
                    <filter name="current_branch_id" string="From Branch" domain="[]" context="{'group_by':'current_branch_id'}" />
                    <filter name="to_branch_id" string="To Branch" domain="[]" context="{'group_by':'to_branch_id'}" />
                    <filter name="to_department_id" string="To Department" domain="[]" context="{'group_by':'to_department_id'}" />
                    <filter name="to_designation_id" string="To Designation" domain="[]" context="{'group_by':'to_designation_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_employee_transfer" model="ir.actions.act_window">
        <field name="name">Employee Transfer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.transfer</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_employee_transfer_search" />
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Transfer.
            </p><p>
                Use this menu to browse previous transfer. To record new
                transfer, you may use the create button.
            </p>
        </field>
    </record>
    
    <record id="sequence_pappayaemployee_transfer_form" model="ir.sequence">
            <field name="name">Pappaya Employee Transfer Form</field>
            <field name="code">pappaya.employee.transfer</field>
            <field name="padding">7</field>
            <field name="company_id" eval="False"/>
        </record>

    <menuitem id="menu_action_pappaya_transfer"  parent="hr.menu_hr_root" action="action_employee_transfer" name="Transfer"
              sequence="6" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo,pappaya_base.hr_principal_hod,pappaya_base.hr_deans"/>


    <!-- Shortcuts in Employee -->
    <record id="act_hr_employee_transfer_request" model="ir.actions.act_window">
        <field name="name">Employee Transfers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.transfer</field>
        <field name="src_model">hr.employee</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
        <field name="domain">[('employee_id','=',active_id)]</field>
        <field name="view_id" eval="employee_transfer_tree"/>
    </record>


    <!-- HR employee inherit Transfer -->
    <record id="view_employee_form_transfer_inherit" model="ir.ui.view">
        <field name="name">hr.employee.transfer.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(act_hr_employee_transfer_request)d"
                    type="action"
                    class="oe_stat_button"
                    icon="fa-arrows-h"
                    groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo,pappaya_base.hr_principal_hod,pappaya_base.hr_deans">
                    <field name="transfers_count" widget="statinfo" string="Transfers"/>
                </button>
            </xpath>
        </field>
    </record>
    
</odoo>
