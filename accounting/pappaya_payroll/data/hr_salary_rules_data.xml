<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    
    
    	<!--  -->
        
        <record id="seq_exit_salary_slip" model="ir.sequence">
            <field name="name">Exit Salary Slip</field>
            <field name="code">exit.salary.slip</field>
            <field name="prefix">EXIT/SLIP/</field>
            <field name="padding">3</field>
        </record>

        <!-- Salary Rules -->

        <record id="hr_salary_rule_lop" model="hr.salary.rule">
            <field name="name">Loss of Pay</field>
            <field name="sequence" eval="50"/>
            <field name="code">LOP</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = - (payslip.lop_hours* ((contract.wage/payslip.total_work_days)/ employee.emp_work_hours.total_work_hours))</field>
        </record>

        <record id="hr_salary_rule_leave_encashment" model="hr.salary.rule">
            <field name="name">Leave Encashment</field>
            <field name="sequence" eval="15"/>
            <field name="code">LE</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.LE and (inputs.LE.amount)</field>
        </record>

        <record id="hr_salary_rule_advance_salary" model="hr.salary.rule">
            <field name="name">Advance Salary</field>
            <field name="sequence" eval="190"/>
            <field name="code">ADV</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.ADV and - (inputs.ADV.amount)</field>
        </record>

        <record id="hr_salary_rule_gratuity" model="hr.salary.rule">
            <field name="name">Gratuity</field>
            <field name="sequence" eval="20"/>
            <field name="code">GRA</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.GRA and (inputs.GRA.amount)</field>
        </record>

    </data>
</odoo>
