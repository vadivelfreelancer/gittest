<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <template id="pappaya_narayana_payroll_report_custom_header_layout">
            <div class="header">
                <div class="row">
                    <div class="col-xs-3" style="text-align:center; padding-top:5px; padding-left:15px;">
                        <img t-if="o.employee_id.branch_id.parent_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.employee_id.branch_id.parent_id.logo)" style="height:100px; max-height:130px; width:110px; max-width:130px; margin-left:20px;"/>
                        <!--<img t-attf-src="/pappaya_hr_recruitment/static/description/nspira_logo.png" style="max-height: 200px; max-width: 100px;"/>-->
                    </div>
                    <div class="col-xs-7" style="text-align:center; padding-top:30px; padding-left:60px; vertical-align:middle;">
                        <strong><span class="text-uppercase" t-field="o.employee_id.branch_id.parent_id.name"/></strong><br/>
                        <strong><span t-esc="o.get_name_for_payslip()"/></strong>
                    </div>
                </div>
            </div>
        </template>

        <template id="pappaya_narayana_payroll_report_custom_footer_layout">
            <div class="footer">
                <table>
                    <thead>
                        <tr>
                            <td class="col-xs-3 pull-left" style="font-size:9px;">
                                <!--<strong>Generated On: </strong> <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>-->
                            </td>
                        </tr>
                    </thead>
                </table>
            </div>
        </template>

        <template id="pappaya_payroll_nspira_report_custom_layout">
         <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <div class="article">
                <t t-call="pappaya_payroll.pappaya_narayana_payroll_report_custom_header_layout"/>
                <t t-raw="0"/>
                <t t-call="pappaya_payroll.pappaya_narayana_payroll_report_custom_footer_layout"/>
            </div>
        </template>

    </data>
</odoo>