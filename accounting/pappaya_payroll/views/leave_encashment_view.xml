<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
		<record id="view_leave_encashment_request_form" model="ir.ui.view">
			<field name="name">view.leave.encashment.request.form</field>
			<field name="model">leave.encashment.request</field>
			<field name="arch" type="xml">
				<form string="Leave Encashment Request" duplicate="0" delete="0">
					<header>
						<button name="button_request" string="Request" states="draft" type="object" class="oe_highlight" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>
						<button name="button_approve" string="Approve" states="requested" type="object" groups="pappaya_base.hr_operations_head,pappaya_base.hr_cpo" class="oe_highlight" />
						<button name="button_reject" string="Reject" states="requested,approved" type="object" groups="pappaya_base.hr_operations_head,pappaya_base.hr_cpo" class="oe_highlight"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,requested,approved" readonly="1" />
						<button name="button_reset" string="Reset" states="cancelled" type="object" class="oe_highlight" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>
						<button name="button_cancel" string="Cancel" states="requested" type="object" class="oe_highlight" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>
					</header>
					<sheet>
						<div class="oe_title">
							<h3>
								<field name="name" readonly="1" force_save="1"/>
							</h3>
						</div>
						<group>
							<group>
								<field name="employee_id" required="1" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="emp_id" readonly="1"/>
								<field name="type" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="leave_balance_count" readonly="1" force_save="1"/>
								<field name="encashment_amount" readonly="1" attrs="{'invisible':[('type','=','carry_forward')]}" force_save="1"/>
							</group>
							<group>
								<field name="requested_date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="year" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="carryforward_year" attrs="{'invisible':[('type','!=','carry_forward')],'required':[('type','=','carry_forward')],'readonly':[('state','!=','draft')]}"/>
								<field name="payslip_id" invisible="1" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}"/>
							</group>
						</group>
						<notebook>
							<page string="Leave details">
								<field name="lines" >
									<tree editable="bottom" delete="false" create="false">
										<field name="leave_id" invisible="1" />
										<field name="holiday_status_id" readonly="1" force_save="1" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}"/>
										<field name="leave_balance" readonly="1" force_save="1"/>
									</tree>
									<form>
										<field name="holiday_status_id" options="{'no_create':True, 'no_create_and_edit':True, 'no_open':True}"/>
										<field name="leave_balance"/>
									</form>
								</field>
								<field name="previous_holidays_ids" widget="one2many_list" invisible="1"/>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
				</form>
			</field>
		</record>
    
        <record id="view_leave_encashment_request_tree" model="ir.ui.view">
            <field name="name">view.leave.encashment.request.tree</field>
            <field name="model">leave.encashment.request</field>
            <field name="arch" type="xml">
                 <tree string="Leave Encashment Request">
                    <field name="emp_id"/>
                    <field name="employee_id"/>
                    <field name="requested_date"/>
                    <field name="year"/>
                    <field name="type"/>
                    <field name="state" string="Status"/>
                </tree>
            </field>
        </record>

		<record id="view_leave_encashment_request_search" model="ir.ui.view">
			<field name="name">view.leave.encashment.request.search</field>
			<field name="model">leave.encashment.request</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Leave Encashment Request">
					<field name="emp_id" />
					<field name="employee_id" />
					<field name="year" />
					<field name="type" />
					<field name="state" />
					<group expand="0" string="Group By...">
                        <filter name="year" string="Year" domain="[]" context="{'group_by':'year'}" />
                        <filter name="type" string="Type" domain="[]" context="{'group_by':'type'}" />
                        <filter name="state" string="Status" domain="[]" context="{'group_by':'state'}" />
                    </group>
				</search>
			</field>
		</record>
    
        <record id="action_leave_encashment_request" model="ir.actions.act_window">
            <field name="name">Encashment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">leave.encashment.request</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
			<field name="search_view_id" ref="view_leave_encashment_request_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define Leave Encashment.
                </p>
            </field>
        </record>    
    
        <menuitem id="menu_action_leave_encashment_request"  parent="hr.menu_hr_root" action="action_leave_encashment_request" sequence="10" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>

    </data>
</odoo>