<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_payment_release_tree" model="ir.ui.view">
			<field name="name">payment.release.tree</field>
			<field name="model">payment.release</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Payment Release" duplicate="false" delete="false">
					<field name="month_id"/>
					<field name="date_start"/>
					<field name="date_end"/>
					<field name="region_ids" widget="many2many_tags" />
					<field name="state_ids" widget="many2many_tags" />
					<field name="district_ids" widget="many2many_tags" />
					<field name="office_type_ids" widget="many2many_tags" context="{'special_display_name': True}" />
					<field name="branch_ids" widget="many2many_tags"/> 
					<field name="state"/>
				</tree>
			</field>
		</record>

		<record id="view_payment_release_form" model="ir.ui.view">
			<field name="name">payment.release.form</field>
			<field name="model">payment.release</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Payment Release" duplicate="false" delete="false">
					<header>
						<button name="action_submit" string="Request" type="object" attrs="{'invisible':[('state','!=','draft')]}" groups="pappaya_base.hr_cpo,pappaya_base.payroll_operation,pappaya_base.payroll_head"/>
                        <button name="payment_release" string="Payment Release" type="object" attrs="{'invisible':[('state','!=','request')]}" groups="pappaya_base.hr_cpo,pappaya_base.payroll_operation,pappaya_base.payroll_head"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,request,verified" />
					</header>
					<sheet>
						<group>
							<group>
								<field name="month_id" options="{'no_open': True,'no_create':True}" required="1" attrs="{'readonly':[('state','!=','draft')]}" />
							</group>
                            <group>
                                <label for="date_start" string="Period" style="font-weight: bold !important;margin-right:1px;margin-left: 0px;min-width: 200px;"/>
			                    <div>
									<field name="date_start" class="oe_inline" readonly="1" force_save="1"/> - <field name="date_end" class="oe_inline" readonly="1" force_save="1"/>
			                    </div>
                            </group>
						</group>
						<group string="Generate By">
							<group>
								<field name="region_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="state_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="district_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="office_type_ids" context="{'special_display_name': True}" widget="many2many_tags" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="branch_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
							</group>
							<group>
								<label for="salary_range" string="Salary Range" style="font-weight: bold !important;margin-right:1px;margin-left: 0px;min-width: 200px;"/>
								<div>
									<field name="operators" style="width:50px" attrs="{'readonly':[('state','!=','draft')]}"/>
									<field name="salary_range" style="width:200px" attrs="{'readonly':[('state','!=','draft')]}"/>
								</div>
								<field name="department_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="designation_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
							</group>
						</group>

                        <field name="hr_payslip_ids" attrs="{'readonly':[('state','!=','draft')]}" open="false"></field>

					</sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" invisible="1"/>
                        <field name="message_ids" widget="mail_thread" invisible="1"/>
                    </div>
				</form>
			</field>
		</record>

		<record id="view_payment_release_search" model="ir.ui.view">
			<field name="name">payment.release.search</field>
			<field name="model">payment.release</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Payment Release">
					<field name="month_id"/>
					<field name="date_start" />
					<field name="date_end" />
					<field name="state" />
					<group expand="0" string="Group By...">
                        <filter name="month_id" string="Month" domain="[]" context="{'group_by':'month_id'}" />
                        <filter name="state" string="Status" domain="[]" context="{'group_by':'state'}" />
                    </group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_open_payment_release_view">
			<field name="name">Payment Release</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">payment.release</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_payment_release_search" />
			<field name="view_ids" eval="[(5, 0, 0),
                              (0, 0, {'view_mode': 'tree', 'view_id': ref('view_payment_release_tree')}),
                              (0, 0, {'view_mode': 'form', 'view_id': ref('view_payment_release_form')})]" />
			<field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to configure Payment Release.
                </p>
            </field>
		</record>

       <menuitem id="menu_action_open_payment_release_view" parent="hr_payroll.menu_hr_payroll_root" action="action_open_payment_release_view"
				 groups="pappaya_base.hr_cpo,pappaya_base.payroll_operation,pappaya_base.payroll_head" sequence="-2"/>
    </data>
</odoo>
