<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<template id="apply" inherit_id="website_hr_recruitment.apply" name="Job Apply Now Inherit">

		<xpath expr="//div[@class='form-group form-field']" position="before">
			<div class="form-group form-field o_website_form_required_custom_mobile_no">
				<div class="col-md-3 col-sm-4 text-right">
					<label class="control-label" for="partner_mobile">Your Mobile Number</label>
				</div>
				<div class="col-md-7 col-sm-8">
					<input type="text" class="form-control o_website_form_input" name="partner_mobile" required=""/>
				</div>
			</div>
            <div class="form-group form-field o_website_form_required_custom_doj">
				<div class="col-md-3 col-sm-4 text-right">
					<label class="control-label" for="partner_mobile">Joining Date</label>
				</div>
				<div class="col-md-7 col-sm-8">
					<input type="text" class="form-control o_website_form_input o_website_form_date" name="date_of_joining" required=""/>
				</div>
			</div>
		</xpath>

	</template>

</odoo>