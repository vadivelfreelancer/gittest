<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
		<record id="view_numberhours_subject_tree" model="ir.ui.view">
			<field name="name">pappaya.number.hours.subject.tree</field>
			<field name="model">pappaya.number.hours.subject</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Weekly Subject Hours" delete="0" duplicate="0">
					<field name="fiscal_year_id"/>
					<field name="state_id" />
					<field name="program_id" />
					<field name="segment_id" />
				</tree>
			</field>
		</record>

		<record id="view_numberhours_subject_form" model="ir.ui.view">
			<field name="name">pappaya.number.hours.subject.form</field>
			<field name="model">pappaya.number.hours.subject</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Weekly Subject Hours" delete="0" duplicate="0">
					<sheet>
						<group>
							<group>
                                <field name="state_id" options="{'no_open': True,'no_create':True}" required="1"/>
                                <field name="fiscal_year_id" options="{'no_open': True,'no_create':True}" readonly="1" force_save="1"/>
							</group>
                            <group>
                                <field name="program_id" options="{'no_open': True,'no_create':True}" required="1"/>
								<field name="segment_id" options="{'no_open': True,'no_create':True}" required="1"/>
                                <field name="active" readonly="0"/>
                            </group>
						</group>
						<button name="get_subject_details" type="object" string="Get Details" class="oe_highlight" attrs="{'invisible': [('subject_line_ids','!=',[])]}" invisible="1"/>
						<label for="subject_details_get" class="btn btn-sm btn-primary" attrs="{'invisible': [('subject_line_ids','!=',[])]}"/>
						<field name="subject_details_get" invisible="1"/>
						<field name="subject_line_ids">
							<tree string="Weekly Subject Hours" editable="bottom" create="false" delete="0">
								<field name="class_id" options="{'no_open': True,'no_create':True}" readonly="1" force_save="1"/>
								<field name="subject_id" options="{'no_open': True,'no_create':True}" readonly="1" force_save="1"/>
								<field name="number_hours"/>
							</tree>
							<form string="Weekly Subject Hours">
								<group>
									<group>
										<field name="class_id" options="{'no_open': True,'no_create':True}"/>
										<field name="subject_id" options="{'no_open': True,'no_create':True}"/>
									</group>
									<group>
										<field name="number_hours"/>
									</group>
								</group>
							</form>
						</field>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_numberhours_subject_search" model="ir.ui.view">
			<field name="name">pappaya.number.hours.subject.search</field>
			<field name="model">pappaya.number.hours.subject</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Weekly Subject Hours">
					<field name="name" />
					<field name="state_id" />
					<field name="program_id" />
                    <field name="segment_id" />
					<group expand="0" string="Group By...">
						<filter name="state_id" string="State" domain="[]" context="{'group_by':'state_id'}" />
						<filter name="program_id" string="Program" domain="[]" context="{'group_by':'program_id'}" />
                        <filter name="segment_id" string="Segment" domain="[]" context="{'group_by':'segment_id'}" />
                    </group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_open_number_hours_subject_view">
			<field name="name">Weekly Subject Hours</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.number.hours.subject</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_numberhours_subject_search" />
			<field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to configure Weekly Subject Hours.
                </p>
            </field>
		</record>

    </data>
</odoo>
