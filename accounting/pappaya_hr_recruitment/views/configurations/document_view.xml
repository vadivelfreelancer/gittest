<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_recruitment_document_tree" model="ir.ui.view">
            <field name="name">recruitment.document.tree</field>
            <field name="model">recruitment.document</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="document">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_recruitment_document_form" model="ir.ui.view">
            <field name="name">recruitment.document.form</field>
            <field name="model">recruitment.document</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="document">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_recruitment_document_search" model="ir.ui.view">
            <field name="name">recruitment.document.search</field>
            <field name="model">recruitment.document</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="document">
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_recruitment_document_view">
            <field name="name">Document</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">recruitment.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_recruitment_document_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Recruitment document.
                </p>
            </field>
        </record>


        <!--    Stage Tree View     -->

        <record model="ir.ui.view" id="hr_recruitment.hr_recruitment_stage_tree">
            <field name="name">hr.recruitment.stage.tree</field>
            <field name="model">hr.recruitment.stage</field>
            <field name="arch" type="xml">
                <tree string="Stages">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="job_id"/>
                </tree>
            </field>
        </record>

        <!--    Stage Search View     -->

        <record id="hr_recruitment_stage_search" model="ir.ui.view">
            <field name="name">hr.recruitment.stage.search</field>
            <field name="model">hr.recruitment.stage</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Stages">
                    <field name="name"/>
                    <field name="job_id"/>
                </search>
            </field>
        </record>

    </data>
</odoo>