         <!--Email template -->

        <record id="email_template_edi_recruitment_offer_letter" model="mail.template">
            <field name="name">Job Offer - Send by Email</field>
            <field name="subject">Job Offer</field>
            <field name="email_to">${object.email_from}</field>
            <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
            <field name="mail_server_id" eval="1" />
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="pappaya_hr_recruitment.job_offer_letter"/>
            <field name="report_name">${object.partner_name}</field>
            <field name="lang">${object.user_id.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
				<div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

				    <p><b>Hi ${object.partner_name},</b></p></br>

                    <p>It was our pleasure to meet and get to know you.</p></br>

                    <p>We would like to offer you a position at ${object.company_id.name} as ${object.job_id.name}.</p></br>

                    <p>Your expected starting date is ${object.availability}.</p></br>

                    <p>If you have any questions, feel free to reply to this email or call.</p></br>

                    <p>We are looking forward to having you as a team member and helping you reach your full potential at ${object.company_id.name}.</p>

					<b>
						Please upload the relevant documents through the below link, <br>
						 <br>
						${object.access_url}  <br>
						 <br>
						Use the below credentials for login,  <br>
						Username:  <br>
						Password:  <br>
					</b>
					<br>
                    <b><p>Regards,</p>
                    <p> HR Manager</p></b>
				</div>
	       ]]></field>
	        </record>
        	
        	
