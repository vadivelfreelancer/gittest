<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!--Rental Agreement-->

		<record id="view_rental_agreement_tree" model="ir.ui.view">
			<field name="name">Rent Agreement Tree</field>
			<field name="model">rental.agreement</field>
			<field name="arch" type="xml">
				<tree string="Rental Agreement">
					<field name="branch_id"/>
				</tree>
			</field>
		</record>

		<record id="view_rental_agreement_form" model="ir.ui.view">
			<field name="name">Rent Agreement Form</field>
			<field name="model">rental.agreement</field>
			<field name="arch" type="xml">
				<form string="Rental Agreement">
					<sheet>
						<group>
							<field name="branch_id" domain="[('type','=','branch')]" options="{'no_open': True, 'no_create': True}" required="1"/>
                        </group>
                        <group>
							<field name="rental_line_ids" options="{'no_open': True, 'no_create': True}">
                                <tree editable="bottom" delete="false" create="false">
                                    <field name="agreement_id" invisible="1" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="branch_id"  domain="[('type','=','branch')]" invisible="1" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="building_id" domain="[('branch_id','=',branch_id),('building_type','!=','own')]" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="total_area"/>
                                    <field name="rent"/>
                                    <field name="expiry_date"/>
									<field name="filename"/>
                                    <field name="attachment" filename="filename"/>
                                </tree>
                            </field>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_rental_agreement_view">
			<field name="name">Building Rental Agreement</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">rental.agreement</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

    </data>
</odoo>
