<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		
        
        <record id="view_building_advance_rental_arrears_tree" model="ir.ui.view">
			<field name="name">building.advance.rental.arrears.tree</field>
			<field name="model">building.advance.rental.arrears</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Building Advance Rental Arrears">
				    <field name="name" />
				    <field name="apex_id"/>
				    <field name="branch_id"/>
				    <field name="building_id"/>
				    <field name="owner_id"/>
				    <field name="building_advance_id"/>
				    <field name="arrear_advance" />
				    <field name="state"/>
				</tree>
			</field>
		</record>

		<record id="view_building_advance_rental_arrears_form" model="ir.ui.view">
			<field name="name">building.advance.rental.arrears.form</field>
			<field name="model">building.advance.rental.arrears</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="building_advance Rental Arrears">
					<header>
						<button name="act_proposal" states="draft" type="object" string="Proposal" class="oe_highlight"/>
						<button name="act_approval" states="proposed" type="object" string="Approval" class="oe_highlight"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,proposed,approved"/>
					</header>
					<sheet>
						<div class="oe_title">
                       		<h1>
                           		<strong><field name="name" readonly="1"/></strong>
                       		</h1>
                        </div>
						<group colspan="4" col="4">
							<field name="apex_id" required="1" options="{'no_open': True, 'no_create': True}"/>
							<field name="branch_id" required="1" options="{'no_open': True, 'no_create': True}"/>
                            <field name="building_id" required="1" domain="[('branch_id','=',branch_id),('building_type','!=','own')]" options="{'no_open': True, 'no_create': True}"/>
                             <field name="owner_id" required="1" domain="[('building_id','=',building_id)]" widget="selection"/>
                            <field name="building_advance_id" required="1" domain="[('building_id','=',building_id),('owner_id','=',owner_id)]" options="{'no_open': True, 'no_create': True}"/>
                            <field name="arrear_advance" />
                            <field name="date" required="1"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="view_building_advance_rental_arrears_search" model="ir.ui.view">
			<field name="name">building.advance.rental.arrears.search</field>
			<field name="model">building.advance.rental.arrears</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Building Advance Rental Arrears">
					<field name="apex_id"/>
                    <field name="branch_id"/>
                    <field name="building_id"/>
                    <field name="owner_id"/>
                    <field name="building_advance_id"/>
					<field name="state"/>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_building_advances_rental_arrears_view">
			<field name="name">Building Advance Rental Arrears</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">building.advance.rental.arrears</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_building_advance_rental_arrears_search"/>
		</record>

	</data>
</odoo>
