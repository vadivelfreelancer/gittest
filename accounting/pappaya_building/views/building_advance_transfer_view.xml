<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		
        
        <record id="view_building_advance_transfer_tree" model="ir.ui.view">
			<field name="name">building.advance.transfer.tree</field>
			<field name="model">building.advance.transfer</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Building Advance Transfer">
				    <field name="name" />
					<field name="apex_id"/>
                    <field name="from_branch_id"/>
                    <field name="from_building_id"/>
                    <field name="from_owner_id"/>
                    <field name="from_building_advance_id"/>
                    <field name="to_branch_id"/>
                    <field name="to_building_id"/>
                    <field name="to_owner_id"/>
                    <field name="to_building_advance_id"/>
                    <field name="building_advance_amount"/>
					<field name="state"/>
				</tree>
			</field>
		</record>

		<record id="view_building_advance_transfer_form" model="ir.ui.view">
			<field name="name">building.advance.transfer.form</field>
			<field name="model">building.advance.transfer</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Building Advance Transfer">
					<header>
						<button name="act_proposal" states="draft" type="object" string="Proposal" class="oe_highlight"/>
						<button name="act_approval" states="proposed" type="object" string="Approval" class="oe_highlight"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,proposed,approved"/>
					</header>
					<sheet>
						<div class="oe_title">
                       		<h1>
                           		<strong><field name="name" readonly="1"/></strong>
                       		</h1>
                        </div>
						<group colspan="4" col="4">
							<field name="apex_id" required="1" options="{'no_open': True, 'no_create': True}"/>
							<field name="date" required="1"/>
							<field name="from_branch_id" required="1" options="{'no_open': True, 'no_create': True}"/>
                            <field name="from_building_id" required="1" domain="[('branch_id','=',from_branch_id),('building_type','!=','own')]" options="{'no_open': True, 'no_create': True}"/>
                            <field name="from_owner_id" required="1" domain="[('building_id','=',from_building_id)]" widget="selection" />
                            <field name="from_building_advance_id" required="1" domain="[('building_id','=',from_building_id),('owner_id','=',from_owner_id)]" options="{'no_open': True, 'no_create': True}"/>
							<field name="to_branch_id" required="1" options="{'no_open': True, 'no_create': True}"/>
                            <field name="to_building_id" required="1" domain="[('branch_id','=',to_branch_id),('building_type','!=','own')]" options="{'no_open': True, 'no_create': True}"/>
                            <field name="to_owner_id" required="1" domain="[('building_id','=',to_building_id)]" widget="selection" />
                            <field name="to_building_advance_id" domain="[('building_id','=',to_building_id),('owner_id','=',to_owner_id)]"  options="{'no_open': True, 'no_create': True}"/>
                            <field name="building_advance_amount" required="1"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="view_building_advance_transfer_search" model="ir.ui.view">
			<field name="name">building.advance.transfer.search</field>
			<field name="model">building.advance.transfer</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Building Advance Transfer">
					<field name="apex_id"/>
                    <field name="from_branch_id"/>
                    <field name="from_building_id"/>
                    <field name="to_branch_id"/>
                    <field name="building_advance_amount"/>
                    <field name="to_building_id"/>
					<field name="state"/>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_building_advances_transfer_view">
			<field name="name">Building Advance Transfer</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">building.advance.transfer</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_building_advance_transfer_search"/>
		</record>

	</data>
</odoo>
