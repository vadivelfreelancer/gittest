<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		
        
        <record id="view_rental_arrears_tree" model="ir.ui.view">
			<field name="name">rental.arrears.tree</field>
			<field name="model">rental.arrears</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Rental Arrears">
				    <field name="name" />
				    <field name="apex_id"/>
				    <field name="branch_id"/>
				    <field name="building_id"/>
				    <field name="state"/>
				</tree>
			</field>
		</record>

		<record id="view_rental_arrears_form" model="ir.ui.view">
			<field name="name">rental.arrears.form</field>
			<field name="model">rental.arrears</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Rental Arrears">
					<header>
						<button name="act_proposal" states="draft" type="object" string="Proposal" class="oe_highlight"/>
						<button name="act_approval" states="proposed" type="object" string="Approval" class="oe_highlight"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,proposed,approved"/>
					</header>
					<sheet>
						<div class="oe_title">
                       		<h1>
                           		<strong><field name="name" readonly="1"/></strong>
                       		</h1>
                        </div>
						<group colspan="4" col="4">
							<field name="apex_id" required="1" options="{'no_open': True, 'no_create': True}"/>
							<field name="branch_id" required="1" options="{'no_open': True, 'no_create': True}"/>
                            <field name="building_id" required="1" domain="[('branch_id','=',branch_id),('building_type','!=','own')]" options="{'no_open': True, 'no_create': True}"/>
						</group>
						<group colspan="4" col="8">
						<field name="from_month" required="1"/>
						<field name="from_year" required="1" nolabel="1"/>
						<field name="to_month" required="1"/>
						<field name="to_year" required="1" nolabel="1"/>
						</group>
						<div align="center">
						<button name="search_rent_arrears" type="object" string="Search" class="oe_highlight"/>
						</div>
						<separator string="" />
						<field name="rental_ids" />
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="view_rental_arrears_line_tree" model="ir.ui.view">
			<field name="name">Rental Arrears Line Tree</field>
			<field name="model">rental.arrears.line</field>
			<field name="arch" type="xml">
				<tree editable="bottom">
				    <field name="sno" />
				    <field name="owner_name"/>
                    <field name="rent_amt"/>
					<field name="maintenence_amt"/>
					<field name="rent_arrears_amt" />
					<field name="gst_amt"/>
					<field name="tds_amt"/>
					<field name="rental_arrear_id" invisible="1" />
					<field name="owner_id" invisible="1" />
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_rental_arrears_view">
			<field name="name">Rental Arrears</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">rental.arrears</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_rental_arrears_line_view">
			<field name="name">Rental Arrears Line</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">rental.arrears.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

	</data>
</odoo>
