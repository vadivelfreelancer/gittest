<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="view_item_head_master_tree" model="ir.ui.view">
			<field name="name">item.head.master.tree</field>
			<field name="model">item.head.master</field>
			<field name="arch" type="xml">
				<tree string="Item Head Master">
					<field name="name"/>
					<field name="description"/>
					<field name="status"/>
				</tree>
			</field>
		</record>

        <record id="view_item_head_master_form" model="ir.ui.view">
			<field name="name">item.head.master.form</field>
			<field name="model">item.head.master</field>
			<field name="arch" type="xml">
				<form string="Item Head Master">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
								<field name="description" required="1"/>
								<field name="status" required="1"/>
                            </group>
                        </group>
                    </sheet>

				</form>
			</field>
		</record>

         <record id="view_item_head_master_search" model="ir.ui.view">
			<field name="name">item.head.master.search</field>
			<field name="model">item.head.master</field>
			<field name="arch" type="xml">
				<search string="Item Head Master">
					<field name="name"/>
					<field name="description"/>
					<field name="status"/>
				</search>
			</field>
		</record>

		<record id="action_item_head_master_view" model="ir.actions.act_window">
			<field name="name">Item Head Master</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">item.head.master</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_item_head_master_search"/>
		</record>
	</data>
</odoo>
