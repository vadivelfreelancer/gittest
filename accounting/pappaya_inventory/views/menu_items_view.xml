<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="view_menu_items_tree" model="ir.ui.view">
			<field name="name">menu.items.master.tree</field>
			<field name="model">menu.items.master</field>
			<field name="arch" type="xml">
				<tree string="Menu Items">
					<field name="menu_items"/>
                    <field name="status"/>
				</tree>
			</field>
		</record>

        <record id="view_menu_items_form" model="ir.ui.view">
			<field name="name">menu.items.master.form</field>
			<field name="model">menu.items.master</field>
			<field name="arch" type="xml">
				<form string="Menu Items">
                    <sheet>
                        <group>
                            <group>
                                <field name="menu_items" required="1"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </sheet>

				</form>
			</field>
		</record>

         <record id="view_menu_items_search" model="ir.ui.view">
			<field name="name">menu.items.master.search</field>
			<field name="model">menu.items.master</field>
			<field name="arch" type="xml">
				<search string="Menu Items">
					<field name="menu_items"/>
                    <field name="status"/>
				</search>
			</field>
		</record>

		<record id="action_menu_items_view" model="ir.actions.act_window">
			<field name="name">Menu Items</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">menu.items.master</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_menu_items_search"/>
		</record>
	</data>
</odoo>
