<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="view_menu_tree" model="ir.ui.view">
			<field name="name">menu.master.tree</field>
			<field name="model">menu.master</field>
			<field name="arch" type="xml">
				<tree string="Menu">
					<field name="menu"/>
					<field name="status"/>
				</tree>
			</field>
		</record>

        <record id="view_menu_form" model="ir.ui.view">
			<field name="name">menu.master.form</field>
			<field name="model">menu.master</field>
			<field name="arch" type="xml">
				<form string="Menu">
                    <sheet>
                        <group>
                            <group>
                                <field name="menu" required="1"/>
								<field name="status"  required="1" />
                            </group>
                        </group>
                    </sheet>

				</form>
			</field>
		</record>

         <record id="view_menu_view_search" model="ir.ui.view">
			<field name="name">menu.master.search</field>
			<field name="model">menu.master</field>
			<field name="arch" type="xml">
				<search string="Menu">
					<field name="menu"/>
					<field name="status"/>
				</search>
			</field>
		</record>

		<record id="action_menu_view" model="ir.actions.act_window">
			<field name="name">Menu</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">menu.master</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_menu_view_search"/>
		</record>
	</data>
</odoo>
