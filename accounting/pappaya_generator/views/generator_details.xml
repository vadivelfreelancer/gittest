     <record id="generator_capacity_details_master_action" model="ir.actions.act_window">
            <field name="name">Generator Capacity Details</field>
            <field name="res_model">generator.capacity.details</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
