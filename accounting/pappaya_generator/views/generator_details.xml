<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--generator company details master-->
    <record id="generator_company_details_master_form" model="ir.ui.view">
        <field name="name">Generator Company Details </field>
        <field name="model">generator.company.details</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Generator Company Details">
                        <group>
                            <field name="name"/>
                            <field name="address1"/>
                            <field name="address2"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
     <record id="generator_company_details_master_tree" model="ir.ui.view">
        <field name="name">Generator Company Details </field>
        <field name="model">generator.company.details</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address1"/>
                <field name="address2"/>
            </tree>
        </field>
     </record>
     <record id="generator_company_details_master_action" model="ir.actions.act_window">
            <field name="name">Generator Company Details</field>
            <field name="res_model">generator.company.details</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
     </record>
     
     <record id="generator_bill_approval_action" model="ir.actions.act_window">
            <field name="name">Generator Bill Approval</field>
            <field name="res_model">generator.bill.details</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', 'in', ['approval'])]</field>
            <field name="context">{'create': False,'edit': False}</field>
     </record>
    
    <record id="generator_fuel_bill_approval_action" model="ir.actions.act_window">
            <field name="name">Generator Fuel Bill Approval</field>
            <field name="res_model">fuel.bill.transaction</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', 'in', ['approval'])]</field>
            <field name="context">{'create': False,'edit': False}</field>
     </record>
     
    <menuitem id="generator_main_menu" name="Generator" sequence="1"/>
    <menuitem id="generator_main_sub_menu" parent="generator_main_menu" name="Generator Details" sequence="2"/>
    <menuitem id="generator_main_sub2_menu" parent="generator_main_menu" name='Transactions' sequence="2"/>
     <menuitem id="generator_company_details_menu" parent="generator_main_sub_menu" action="generator_company_details_master_action" name="Generator Company Details" sequence="3"/>
    <menuitem id="approval_main_menu" parent="generator_main_menu" name="Approvals" sequence="1"/>
    <menuitem id="generator_bill_approval_main_sub_menu" parent="approval_main_menu" action="generator_bill_approval_action" name="Generator Bill Approval" sequence="1"/>
    <menuitem id="generator_fuel_bill_approval_main_sub_menu" parent="approval_main_menu" action="generator_fuel_bill_approval_action" name="Generator Fuel Bill Approval" sequence="2"/>


    <!--generator capacity details master-->
