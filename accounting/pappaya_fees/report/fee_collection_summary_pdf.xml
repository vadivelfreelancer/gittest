<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<template id="report_fee_collect_summary_receipt">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-foreach="o.get_school_header()" t-as="l">
                        <div class="header">
                            <div class="row">
                                <div class="col-xs-2" style="text-align:center;">
                                    <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo" style="height:110px;max-height:130px;width:110px;max-width:130px;margin-left:20px;"/>
                                </div>
                                <div class="col-xs-10">
                                    <div style="font-weight:700;font-size:20px; text-align:center;">
                                        <t t-if="l['school_id']"> <strong><span t-esc="l['school_id']"/></strong></t>
                                    </div>
                                    <div style="font-size:15px; text-align:center;">
                                        <t t-if="l['street']"> <span t-esc="l['street']"/>,</t>
                                        <t t-if="l['street2']"> <span t-esc="l['street2']"/>,</t>
                                        <t t-if="l['city']"> <span t-esc="l['city']"/> </t>-
                                        <t t-if="l['zip']"> <span t-esc="l['zip']"/></t>
                                    </div>
                                    <div style="font-size:15px; text-align:center;">
                                        <t t-if="l['phone']"> Tel: <span t-esc="l['phone']"/>,</t>
                                        <t t-if="l['fax']"> Fax: <span t-esc="l['fax']"/>,</t>
                                        <t t-if="l['email']"> Email: <span t-esc="l['email']"/></t>
                                    </div>
                                    <div style="font-size:14px; text-align:center;">
                                        <t t-if="l['website']"> Website: <span t-esc="l['website']"/></t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-foreach="o.get_school()" t-as="soc">
                        <div class="header">
                            <div class="row">
                                <div class="col-xs-2" style="text-align:center;">
                                    <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo" style="height:110px;max-height:130px;width:110px;max-width:130px;margin-left:20px;"/>
                                </div>
                                <div class="col-xs-10">
                                    <br/><br/>
                                    <div style="font-weight:600;font-size:22px;text-align:center;">
                                        <t t-if="soc['school_id']"> <strong><span t-esc="soc['school_id']"/></strong></t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
					<div class="page">
						<style>
							.row1 {
								text-align:center;
								font-size:18px;
								border-top:1px solid black;
								padding-top:10px;
								padding-bottom:30px
								}
							.row2 {
								text-align:left;
								font-size:16px;
								padding-bottom:5px
								}
							.table-condensed {
								width:100%;
								border:1px solid black;
								font-size:12px;
								}
							.result1 td {
								text-align:center;
								vertical-align:middle;
								border-right:1px solid black;
								border-bottom:1px solid black;
								font-size:12px;
								}
							.result2 td {
								text-align:center;
								font-size:12px;
								vertical-align:middle;
								border-right:1px solid black;
								border-bottom:1px solid black;
								}
							   .DIS_watermark_report{
								background:url('/theme_pappaya/static/src/img/logo_dis.png') no-repeat center center; position:fixed; width:100%; height:100%; pointer-events: none; opacity:0.15; z-index:9999}
								}
						</style>
						<div class="row1">
							<strong>Fee Collection Summary</strong> <br/>
							<strong>For the period of  <t t-if="o.from_date"><span t-esc="time.strftime('%d/%b/%Y', time.strptime(o.from_date,'%Y-%m-%d'))"/></t>
							to <t t-if="o.to_date"><span t-esc="time.strftime('%d/%b/%Y', time.strptime(o.to_date,'%Y-%m-%d'))"/></t></strong>
						</div>
						<div>
							<table class="table-condensed">
								<thead>
									<tr class="result1">
										<td><strong>S.No</strong></td>
										<td><strong>Date of Transaction</strong></td>
										<td><strong>Branch</strong></td>
										<td><strong>Cash</strong></td>
										<td><strong>Cheque</strong></td>
										<td><strong>DD</strong></td>
										<td><strong>Neft/RTGS</strong></td>
										<td><strong>Card</strong></td>
										<td><strong>Total Amount</strong></td>
									</tr>
								</thead>
								<tbody>
									<t t-set="sum_cash_total" t-value="0" />
									<t t-set="sum_cheque_total" t-value="0" />
									<t t-set="sum_dd_total" t-value="0" />
									<t t-set="sum_neft_total" t-value="0" />
									<t t-set="sum_card_total" t-value="0" />
									<t t-set="sum_total_total" t-value="0" />
									<t t-foreach="o.get_data()" t-as="l">
										<tr class="result2">
											<td class="text-center"><span t-esc="l['s_no']"/></td>
											<td class="text-center"><span t-esc="l['date']"/></td>
											<td class="text-center"><span t-esc="l['school']"/></td>
											<td class="text-center">
												<span t-esc=" '%.2f' % l['cash']"/>
												<t t-set="sum_cash_total" t-value="sum_cash_total+l['cash']" />
											</td>
											<td class="text-center">
												<span t-esc=" '%.2f' % l['cheque']"/>
												<t t-set="sum_cheque_total" t-value="sum_cheque_total+l['cheque']" />
											</td>
											<td class="text-center">
												<span t-esc=" '%.2f' % l['dd']"/>
												<t t-set="sum_dd_total" t-value="sum_dd_total+l['dd']" />
											</td>
											<td class="text-center">
												<span t-esc=" '%.2f' % l['neft']"/>
												<t t-set="sum_neft_total" t-value="sum_neft_total+l['neft']" />
											</td>
											<td class="text-center">
												<span t-esc=" '%.2f' % l['card']"/>
												<t t-set="sum_card_total" t-value="sum_card_total+l['card']" />
											</td>
											<td class="text-center">
												<span t-esc=" '%.2f' % l['total']"/>
												 <t t-set="sum_total_total" t-value="sum_total_total+l['total']" />
											</td>
										</tr>
									</t>
									<tr class="result2">
										<td class="text-right" colspan="3"><strong>Total</strong></td>
										<td class="text-center"><t t-esc=" '%.2f' % sum_cash_total"/></td>
										<td class="text-center"><t t-esc=" '%.2f' % sum_cheque_total"/></td>
										<td class="text-center"><t t-esc=" '%.2f' % sum_dd_total"/></td>
										<td class="text-center"><t t-esc=" '%.2f' % sum_neft_total"/></td>
										<td class="text-center"><t t-esc=" '%.2f' % sum_card_total"/></td>
										<td class="text-center"><t t-esc=" '%.2f' % sum_total_total"/></td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
					<div class="footer">
						<table>
							<thead>
								<tr>
									<td class="col-xs-5 pull-left" style="font-size:16px;">
										<strong>Dated On: </strong> <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%b/%Y %H:%M:%S')"/>
									</td>
									<td class="col-xs-2 pull-right" style="font-size:16px;">
										<strong>Generated By: </strong> <span t-esc="user.name"/>
									</td>
								</tr>
							</thead>
						</table>
					</div>
				</t>
			 </t>
		</template>

		<report
			id="print_fee_collection_summary_details"
			model="fee.collection.summary"
			string="Fee collection summary"
			report_type="qweb-pdf"
			name="pappaya_fees.report_fee_collect_summary_receipt"
			file="pappaya_fees.report_fee_collect_summary_receipt"
			attachment_use="False"
		/>

		<!-- <record id="pappaya_fees.print_fee_collection_summary_details" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="pappaya_core.paperformat_euro_landscape"/>
        </record> -->
	
    </data>
</openerp>


