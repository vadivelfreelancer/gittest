<?xml version="1.0"?>
<odoo>
    <data>

		<record model="ir.ui.view" id="fee_refund_summary_report_view">
			<field name="name">fee.refund.summary.form</field>
			<field name="model">fee.refund.summary</field>
			<field name="arch" type="xml">
				<form string="Fee Refund">
					<group>
						<group>
							<field name="society_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True}" />
							<field name="school_ids" widget="many2many_tags" domain="[('type','=','branch')]" options="{'no_open': True,'no_create':True}" />
							<field name="from_date" class="asterik"/>
							<field name="to_date" class="asterik"/>
						</group>
						<group/>
					</group>
					<footer>
						<button string="PDF" name="generate_pdf_report" class="oe_highlight" type="object"/>
						<button name="fees_refund_excel_report" type="object" string="Excel" class="oe_highlight" />
						<button string="Cancel" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="fee_refund_report_act">
            <field name="name">Fees Refund</field>
            <field name="res_model">fee.refund.summary</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="fee_refund_summary_report_view" />
            <field name="target">new</field>
        </record>

    </data>
</odoo>
