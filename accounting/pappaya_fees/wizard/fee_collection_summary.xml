<?xml version="1.0"?>
<odoo>
    <data>

		<record model="ir.ui.view" id="fee_collection_summary_report_view">
			<field name="name">fee.collection.summary.form</field>
			<field name="model">fee.collection.summary</field>
			<field name="arch" type="xml">
				<form string="Fee Collection Summary">
					<group>
						<group>
							<field name="school_ids" widget="many2many_tags" domain="[('type','=','branch')]" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
							<field name="academic_year_id" options="{'no_open': True,'no_create':True}" />
							<field name="from_date" required="1" class="asterik"/>
							<field name="to_date" required="1" class="asterik"/>
						</group>
						<group/>
					</group>
					<footer>
						<button invisible="1" string="PDF" name="generate_pdf_report" class="oe_highlight" type="object"/>
						<button string="Excel" name="fees_collection_detail_excel_report" type="object" class="oe_highlight" />
						<button string="Cancel" special="cancel" />
					</footer>
				</form>
			 </field>
		</record>

		<record model="ir.actions.act_window" id="fee_collection_summary_report_act">
            <field name="name">Fee Collection Summary</field>
            <field name="res_model">fee.collection.summary</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="fee_collection_summary_report_view" />
            <field name="target">new</field>
        </record>
	
    </data>
</odoo>
