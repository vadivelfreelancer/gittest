<?xml version="1.0"?>
<odoo>
    <data>

		<record  id="view_bank_ledger_school_wise_form" model="ir.ui.view">
			<field name="name">Cash Book Form</field>
			<field name="model">bank.ledger.school.wise</field>
			<field name="arch" type="xml">
				<form string="Cash Book">
					 <group col="4" colspan="4" >
                         <field name="school_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True}" domain="[('type','=','branch')]"/>
                         <field name="academic_year_id" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
                         <field name="bank_account_id" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
                     </group>
					 <footer>
						 <button name="bank_ledger_school_wise_detail_excel_report" type="object" string="Excel" class="oe_highlight"/>
						 <button string="Cancel" special="cancel" />
					</footer>
			 	</form>
			</field>
		</record>

		<record  id="action_bank_ledger_school_wise" model="ir.actions.act_window">
            <field name="name">Cash Book Branch Wise</field>
            <field name="res_model">bank.ledger.school.wise</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_bank_ledger_school_wise_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
