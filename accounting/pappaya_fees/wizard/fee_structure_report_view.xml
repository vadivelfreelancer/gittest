<?xml version="1.0"?>
<odoo>
    <data>

		<record model="ir.ui.view" id="fee_structure_report_view">
			<field name="name">fee.structure.report.form</field>
			<field name="model">fee.structure.report</field>
			<field name="arch" type="xml">
				<form string="fee.structure.report">
					 <group>
						 <group>
							 <field name="school_ids" widget="many2many_tags" required="1" class="asterik" domain="[('type','=','branch')]" options="{'no_open': True,'no_create':True}" />
							 <field name="academic_year_id" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
						 </group>
					 </group>
					 <footer>
						 <button string="PDF" name="generate_pdf_report" class="oe_highlight" type="object"/>
						 <button string="Cancel" special="cancel" />
					</footer>
			 	</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="fee_structure_report_act">
            <field name="name">Fee Structure Report</field>
            <field name="res_model">fee.structure.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="fee_structure_report_view" />
            <field name="target">new</field>
        </record>
	
    </data>
</odoo>
