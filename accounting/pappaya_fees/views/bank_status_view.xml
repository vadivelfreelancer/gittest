<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="bank_status_form" model="ir.ui.view">
			<field name="name">Payment Status Form</field>
			<field name="model">bank.status</field>
			<field name="arch" type="xml">
				<form string="Payment Status" duplicate="0">
					<sheet>
                        <group>
                            <group>
                                <field name="society_id" options="{'no_open': True,'no_create':True}" domain="[('type','=','society')]" required="1" class="asterik"/>
                                <field name="academic_year_id" domain="[('school_id', '=', school_id)]" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
                            </group>
                            <group>
                                <field name="school_id" options="{'no_open': True,'no_create':True}" domain="[('type','=','branch')]"  required="1" class="asterik"/>
                            </group>
                            <group>
                                <field name="payment_mode" required="1" class="asterik"/>
                                <field name="from_date" required="1" class="asterik"/>
                                <field name="created_on" invisible="1" options="{'no_open': True,'no_create':True}"/>
                            </group>
                            <group>
                                <field name="bank_status" required="1" class="asterik"/>
                                <field name="to_date" required="1" class="asterik"/>
                                <field name="created_by" invisible="1" options="{'no_open': True,'no_create':True}"/>
                            </group>
                        </group>
                        <!--Cheque-->
                        <separator string="Cheque" attrs="{'invisible': [('payment_mode','not in',['cheque/dd'])],'required': [('payment_mode','in',['cheque/dd'])]}" class="asterik"/>
                        <group attrs="{'invisible': [('payment_mode','not in',['cheque/dd'])]}">
                            <div>
                                <!--<button name="action_uncleared" type="object" class="oe_right oe_highlight" string="Uncleared" confirm="Are you sure you want to Uncleared the status?" attrs="{'invisible': [('bank_status','not in',['cleared'])]}" groups="pappaya_core.group_pappaya_state_level_officer,pappaya_core.group_pappaya_state_level_fin_admin,pappaya_core.group_pappaya_national_level_officer,pappaya_core.group_pappaya_national_level_fin_admin"/>-->
                                <button name="action_cleared" type="object" class="oe_right oe_highlight" string="Cleared" attrs="{'invisible': [('bank_status','not in',['uncleared'])]}" groups="pappaya_core.group_pappaya_state_level_officer,pappaya_core.group_pappaya_state_level_fin_admin,pappaya_core.group_pappaya_national_level_officer,pappaya_core.group_pappaya_national_level_fin_admin"/>
                            </div>
                        </group>
                        <field name="cheque_ids" open="false" attrs="{'invisible': [('payment_mode','not in',['cheque/dd'])],'required': [('payment_mode','in',['cheque/dd'])]}">
                            <tree create="false" editable="bottom" delete="false" open="false">
                                <field name="is_select" attrs="{'readonly': [('receipt_status','=','cleared')]}"/>
                                <field name="receipt_date" readonly="1"/>
                                <field name="name" string="Receipt No" readonly="1"/>
                                <field name="school_code" readonly="1"/>
                                <field name="grade_id" readonly="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="enrollment_number" readonly="1"/>
                                <field name="student_id" readonly="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="cheque_dd" readonly="1" string="Ref No"/>
                                <field name="bank_name" readonly="1"/>
                                <field name="total" readonly="1" string="Paid Amount"/>
                                <field name="receipt_status" readonly="1"/>
                            </tree>
                        </field>
                        <!--DD-->
                        <separator string="Demand Draft (DD)" attrs="{'invisible': [('payment_mode','not in',['dd'])],'required': [('payment_mode','in',['dd'])]}" class="asterik"/>
                        <group attrs="{'invisible': [('payment_mode','not in',['dd'])]}">
                            <div>
                                <!--<button name="action_uncleared" type="object" class="oe_right oe_highlight" string="Uncleared" confirm="Are you sure you want to Uncleared the status?" attrs="{'invisible': [('bank_status','not in',['cleared'])]}" groups="pappaya_core.group_pappaya_state_level_officer,pappaya_core.group_pappaya_state_level_fin_admin,pappaya_core.group_pappaya_national_level_officer,pappaya_core.group_pappaya_national_level_fin_admin"/>-->
                                <button name="action_cleared" type="object" class="oe_right oe_highlight" string="Cleared" attrs="{'invisible': [('bank_status','not in',['uncleared'])]}" groups="pappaya_core.group_pappaya_school_level_officer,pappaya_core.group_pappaya_school_level_fin_admin,pappaya_core.group_pappaya_state_level_officer,pappaya_core.group_pappaya_state_level_fin_admin,pappaya_core.group_pappaya_national_level_officer,pappaya_core.group_pappaya_national_level_fin_admin"/>
                            </div>
                        </group>
                        <field name="dd_ids" open="false" attrs="{'invisible': [('payment_mode','not in',['dd'])],'required': [('payment_mode','in',['dd'])]}">
                            <tree create="false" open="false" editable="bottom" delete="false">
                                <field name="is_select" attrs="{'readonly': [('receipt_status','=','cleared')]}"/>
                                <field name="receipt_date" readonly="1"/>
                                <field name="name" string="Receipt No" readonly="1"/>
                                <field name="school_code" readonly="1"/>
                                <field name="grade_id" readonly="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="enrollment_number" readonly="1"/>
                                <field name="student_id" readonly="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="cheque_dd" readonly="1" string="Ref No"/>
                                <field name="bank_name" readonly="1"/>
                                <field name="total" readonly="1" string="Paid Amount"/>
                                <field name="receipt_status" readonly="1"/>
                            </tree>
                        </field>
                        <!--POS-->
                        <separator string="PoS" attrs="{'invisible': [('payment_mode','not in',['card'])],'required': [('payment_mode','in',['card'])]}" class="asterik"/>
                        <group attrs="{'invisible': [('payment_mode','not in',['card'])]}">
                            <div>
                                <!--<button name="action_uncleared" type="object" class="oe_right oe_highlight" string="Uncleared" confirm="Are you sure you want to Uncleared the status?" attrs="{'invisible': [('bank_status','not in',['cleared'])]}" groups="pappaya_core.group_pappaya_state_level_officer,pappaya_core.group_pappaya_state_level_fin_admin,pappaya_core.group_pappaya_national_level_officer,pappaya_core.group_pappaya_national_level_fin_admin"/>-->
                                <button name="action_cleared" type="object" class="oe_right oe_highlight" string="Cleared" attrs="{'invisible': [('bank_status','not in',['uncleared'])]}" groups="pappaya_core.group_pappaya_state_level_officer,pappaya_core.group_pappaya_state_level_fin_admin,pappaya_core.group_pappaya_national_level_officer,pappaya_core.group_pappaya_national_level_fin_admin"/>
                            </div>
                        </group>
                        <field name="pos_ids" open="false" attrs="{'invisible': [('payment_mode','not in',['card'])],'required': [('payment_mode','in',['card'])]}">
                            <tree create="false" open="false" editable="bottom" delete="false">
                                <field name="is_select" attrs="{'readonly': [('receipt_status','=','cleared')]}"/>
                                <field name="receipt_date" readonly="1"/>
                                <field name="name" string="Receipt No" readonly="1"/>
                                <field name="school_code" readonly="1"/>
                                <field name="grade_id" readonly="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="enrollment_number" readonly="1"/>
                                <field name="student_id" readonly="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="cheque_dd" readonly="1" string="Ref No"/>
                                <field name="bank_name" readonly="1"/>
                                <field name="total" readonly="1" string="Paid Amount"/>
                                <field name="receipt_status" readonly="1"/>
                            </tree>
                        </field>

                        <group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" attrs="{'invisible': [('payment_mode','not in',['card','cheque/dd','dd'])]}">
                                <field name="cleared_amt"/>
                                <field name="uncleared_amt"/>
                                <field name="total_amt" class="oe_subtotal_footer_separator"/>
                            </group>
                        </group>
					</sheet>
				</form>
			</field>
		</record>

        <record id="bank_status_tree" model="ir.ui.view">
			<field name="name">Payment Status Tree</field>
			<field name="model">bank.status</field>
			<field name="arch" type="xml">
				<tree string="Payment Status">
                    <field name="society_id"/>
				    <field name="school_id"/>
                    <field name="academic_year_id"/>
                    <field name="payment_mode"/>
                    <field name="bank_status"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="cleared_amt"/>
                    <field name="uncleared_amt"/>
                    <field name="total_amt"/>
				</tree>
			</field>
		</record>

        <record id="bank_status_search" model="ir.ui.view">
			<field name="name">Payment Status Search</field>
			<field name="model">bank.status</field>
            <field name="arch" type="xml">
                <search string="Payment Status">
                    <field name="society_id"/>
                    <field name="school_id"/>
                    <field name="academic_year_id"/>
                    <field name="payment_mode"/>
                    <field name="bank_status"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <group expand="0" string="Group By...">
                        <filter string="Payment Mode" domain="[]" context="{'group_by':'payment_mode'}"/>
                        <filter string="Bank Status" domain="[]" context="{'group_by':'bank_status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_bank_status">
            <field name="name">Payment Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank.status</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>