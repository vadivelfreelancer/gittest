<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="bank_deposit_clearance_form" model="ir.ui.view">
			<field name="name">Bank Deposit Clearance Form</field>
			<field name="model">bank.deposit.clearance</field>
			<field name="arch" type="xml">
				<form string="Bank Deposit Clearance" duplicate="0">
					<header>
						 <field name="status" widget="statusbar" statusbar_visible="draft,deposit" invisible="1"/>
					</header>
					<sheet>
                        <!--<group>-->
                            <group col="4">
                                <field name="school_id" options="{'no_open': True,'no_create':True}" domain="[('type','=','branch')]"  required="1" class="asterik" attrs="{'readonly':[('read_only','=',True)]}"/>
                                <field name="academic_year_id" options="{'no_open': True,'no_create':True}" required="1" class="asterik" attrs="{'readonly':[('read_only','=',True)]}"/>
                                <field name="payment_mode_id" domain="[('is_cash','=',False)]" options="{'no_open': True,'no_create':True}" required="1" class="asterik" attrs="{'readonly':[('read_only','=',True)]}"/>
                                <field name="read_only" invisible="1"/>
                                <field name="confirm_on" invisible="1"/>
                            </group>
                        <!--</group>-->

                        <!--Cheque-->
                        <separator string="Payment Details" class="asterik"/>
                        <!--DD-->
<!--                         <separator string="Demand Draft (DD)" attrs="{'invisible': [('payment_mode_id.is_cheque','=',False)],'required': [('payment_mode_id.is_cheque','!=',False)]}" class="asterik"/>
                        POS
                        <separator string="PoS" attrs="{'invisible': [('payment_mode_id.is_card','=',False)],'required': [('payment_mode_id.is_card','!=',False)]}" class="asterik"/>
 -->                        <!--Neft/RTGS-->
                        <!-- <separator string="Neft/RTGS" attrs="{'invisible': [('payment_mode','not in',['neft/rtgs'])],'required': [('payment_mode','in',['neft/rtgs'])]}" class="asterik"/> -->

                        <group>
                        <field name="line_ids" open="false" nolabel="1" attrs="{'invisible': [('payment_mode_id','=', False)]}">
                            <tree create="false" editable="bottom" delete="false" open="false">
                            	<field name="receipt_id" invisible="1" />
                                <field name="is_select" attrs="{'readonly':[('read_only','=',True)]}"/>
                                <field name="receipt_date" readonly="1"/>
                                <!-- <field name="name" string="Receipt No" readonly="1"/>
                                <field name="grade_id" readonly="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="enrollment_number" readonly="1"/>
                                <field name="student_id" readonly="1" options="{'no_open': True,'no_create':True}"/> -->
                                <field name="cheque_dd" readonly="1" string="Ref No"/>
                                 <field name="cheque_mode" invisible="1"/>
                                <field name="cheque_date" attrs="{'invisible': [('cheque_mode','=', False)]}" readonly="1"/>
                                <field name="late_reason" attrs="{'invisible': [('cheque_mode','=', False)]}"/>
                                <field name="payment_mode_id" invisible="1"/>
                                <field name="total" readonly="1" string="Paid Amount"/>
                                <field name="attachment" filename="file_name" widget="binary"/>
                                <field name="file_name" invisible="1"/>
                                <field name="state" readonly="1"/>
                                <field name="read_only" invisible="1"/>
                            </tree>
                            <form>
                                <group col="2" colspan="2">
                                    <field name="receipt_id" invisible="1" />
                                    <field name="is_select" attrs="{'readonly':[('read_only','=',True)]}"/>
                                    <field name="receipt_date" readonly="1"/>
                                    <!-- <field name="name" string="Receipt No" readonly="1"/>
                                    <field name="grade_id" readonly="1" options ="{'no_open': True,'no_create':True}"/>
                                    <field name="enrollment_number" readonly="1"/>
                                    <field name="student_id" readonly="1" options="{'no_open': True,'no_create':True}"/> -->
                                    <field name="cheque_dd" readonly="1" string="Ref No"/>
                                    <field name="payment_mode_id" invisible="1"/>
                                    <field name="total" readonly="1" string="Paid Amount"/>
                                    <field name="state" readonly="1"/>
                                    <field name="attachment" filename="file_name" />
                                    <field name="file_name" invisible="1"/>
                                    <field name="read_only" invisible="1"/>
                                </group>
                            </form>
                        </field>
                        </group>
                        <group>
                        <group>
	                        <!--<field name="c_bank_id"  class="asterik" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('status','not in',['draft'])],'required':[('status','in',['draft'])]}"/>-->
                            <field name="deposit_bank_id" class="asterik" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('status','not in',['draft'])],'required':[('status','in',['draft'])]}"/>
	                        <field name="remarks" attrs="{'readonly':[('status','not in',['draft'])]}"/>
                        </group>
                        </group>
                        <footer>
							<div class="text-center">
								<button name="confirm" string="Confirm" attrs="{'invisible': ['|',('status','not in',['draft']),('payment_mode_id','=', False)]}"
								        type="object" class="oe_highlight"
                                        groups="pappaya_base.group_admission_admin,pappaya_base.group_admission_revenue_operation_head,
                                                pappaya_base.group_admission_revenue_operation_assistant,pappaya_base.hr_branch_accountants"/>
							</div>
						</footer>
                    </sheet>
				</form>
			</field>
		</record>

        <record id="bank_deposit_clearance_tree" model="ir.ui.view">
			<field name="name">Bank Deposit Clearance Tree</field>
			<field name="model">bank.deposit.clearance</field>
			<field name="arch" type="xml">
				<tree string="Bank Deposit Clearance" default_order='confirm_on desc,id desc'>
				    <field name="school_id"/>
                    <field name="academic_year_id"/>
                    <field name="payment_mode_id"/>
                    <field name="status"/>
                    <field name="confirm_on" invisible="1"/>
                </tree>
			</field>
		</record>

        <record id="bank_deposit_clearance_search" model="ir.ui.view">
			<field name="name">Bank Deposit Clearance Search</field>
			<field name="model">bank.deposit.clearance</field>
            <field name="arch" type="xml">
                <search string="Bank Deposit Clearance">
                    <field name="school_id"/>
                    <field name="academic_year_id"/>
                    <field name="payment_mode_id"/>
                    <field name="status"/>
                    <group expand="0" string="Group By...">
                        <filter string="Payment Mode" domain="[]" context="{'group_by':'payment_mode_id'}"/>
                        <filter string="Academic Year" domain="[]" context="{'group_by':'academic_year_id'}"/>
						<filter string="Deposited Bank" domain="[]" context="{'group_by':'c_bank_id'}"/>
                        <filter string="Status" domain="[]" context="{'group_by':'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_bank_deposit_clearance">
            <field name="name">Non Cash Deposit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank.deposit.clearance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
             <field name="view_ids"
				eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('bank_deposit_clearance_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('bank_deposit_clearance_form')})]" />
        </record>

    </data>
</odoo>