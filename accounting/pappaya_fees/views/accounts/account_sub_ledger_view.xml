<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_pappaya_account_sub_ledger_tree" model="ir.ui.view">
			<field name="name">pappaya.account.sub.ledger.tree</field>
			<field name="model">pappaya.account.sub.ledger</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Sub Ledger">
					<field name="name" />
					<field name="color" />
					<field name="main_group_id" />
					<field name="group_id" />
					<field name="sub_group_id" />
					<field name="ledger_id" />
				</tree>
			</field>
		</record>

		<record id="view_pappaya_account_sub_ledger_form" model="ir.ui.view">
			<field name="name">pappaya.account.sub.ledger.form</field>
			<field name="model">pappaya.account.sub.ledger</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Sub Ledger">
					<sheet>
						<group>
							<group>
								<field name="name" required="1" />
								<field name="color" required="1"/>
							</group>
							<group>
								<field name="main_group_id" required="1"  options="{'no_open': True,'no_create':True}"/>
								<field name="group_id" domain="[('main_group_id','=',main_group_id)]" required="1" options="{'no_open': True,'no_create':True}"/>
								<field name="sub_group_id" domain="[('group_id','=',group_id)]" required="1" options="{'no_open': True,'no_create':True}"/>
								<field name="ledger_id" domain="[('sub_group_id','=',sub_group_id)]" required="1" options="{'no_open': True,'no_create':True}"/>
							</group>
							<separator string="Description"/>
							<field name="description" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_pappaya_account_sub_ledger_action" model="ir.actions.act_window">
			<field name="name">Sub Ledger</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.account.sub.ledger</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
	</data>
</odoo>