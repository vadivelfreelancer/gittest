<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_pappaya_sms_content_tree" model="ir.ui.view">
            <field name="name">pappaya.sms.content.tree</field>
            <field name="model">pappaya.sms.content</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="SMS Content" delete="0">
                    <field name="type"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_pappaya_sms_content_form" model="ir.ui.view">
            <field name="name">pappaya.sms.content.form</field>
            <field name="model">pappaya.sms.content</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="SMS Content" delete="0" duplicate="0">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check" >
                                <field name="active" widget="boolean_button" options='{"terminology": "active"}'/>
                            </button>
                        </div>
                        <group>
                            <field name="type" required="1" />
                            <field name="description" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pappaya_sms_content_search" model="ir.ui.view">
            <field name="name">pappaya.sms.content.search</field>
            <field name="model">pappaya.sms.content</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="SMS Content">
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By...">
						<filter string="Type" name="type" domain="[]" context="{'group_by':'type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_pappaya_sms_content_view">
            <field name="name">SMS Content</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pappaya.sms.content</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pappaya_sms_content_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>


        
    
    </data>
</odoo>