<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="bank_account_config_form" model="ir.ui.view">
			<field name="name">Bank Account Form</field>
			<field name="model">bank.account.config</field>
			<field name="arch" type="xml">
				<form string="Bank Account" create="false" duplicate="0">
					<sheet>
                        <group>
                            <group>
                                <field name="school_ids"  widget="many2many_tags" options="{'no_open': True,'no_create':True}" domain="[('type','=','branch')]" required="1" class="asterik"/>
                                <field name="bank_id" options="{'no_open': True,'no_create':True}" required="1" class="asterik"/>
                                <field name="name_on_bank" required="1" class="asterik"/>
                                <field name="account_number" required="1" class="asterik"/>
                                <field name="ifsc_code"/>
                                <field name="bank_address"/>
                                <field name="created_on" options="{'no_open': True,'no_create':True}" readonly="1" invisible="1"/>
                                <field name="created_by" options="{'no_open': True,'no_create':True}" readonly="1" invisible="1"/>
                            </group>
                            <group/>
                        </group>
					</sheet>
				</form>
			</field>
		</record>

        <record id="bank_account_config_tree" model="ir.ui.view">
			<field name="name">Bank Account Tree</field>
			<field name="model">bank.account.config</field>
			<field name="arch" type="xml">
				<tree string="Bank Account">
				    <field name="school_ids"/>
				    <field name="bank_id"/>
                    <field name="name_on_bank"/>
				    <field name="account_number"/>
				</tree>
			</field>
		</record>

        <record id="bank_account_config_search" model="ir.ui.view">
			<field name="name">Bank Account Search</field>
			<field name="model">bank.account.config</field>
            <field name="arch" type="xml">
                <search string="Bank Account">
                    <field name="school_ids"/>
                    <field name="bank_id"/>
                    <field name="name_on_bank"/>
                    <field name="account_number"/>
					<group expand="0" string="Group By...">
						<filter string="Bank Name" domain="[]" context="{'group_by':'bank_id'}"/>
                        <filter string="Name on Bank" domain="[]" context="{'group_by':'name_on_bank'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_bank_account_config">
            <field name="name">Bank Account</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank.account.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>