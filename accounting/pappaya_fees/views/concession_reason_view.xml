<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="pappaya_concession_reason_form" model="ir.ui.view">
			<field name="name">pappaya.concession.reason.form</field>
			<field name="model">pappaya.concession.reason</field>
			<field name="arch" type="xml">
				<form string="Concession Reason" version="7.0">
					<sheet>
						<group col="4" colspan="2">
							<field name="name" required="1"/>
							<field name="description" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="pappaya_concession_reason_tree" model="ir.ui.view">
			<field name="name">pappaya_concession_reason_tree</field>
			<field name="model">pappaya.concession.reason</field>
			<field name="priority" eval="5" />
			<field name="arch" type="xml">
				<tree string="Concession Reason">
					<field name="name" />
					<field name="description" />
					
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_pappaya_concession_reason_id">
			<field name="name">Concession Reason</field>
			<field name="res_model">pappaya.concession.reason</field>
			<field name="view_mode">tree,form</field>
		</record>



	</data>
</odoo>
