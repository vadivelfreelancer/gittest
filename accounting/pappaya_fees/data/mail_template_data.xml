<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!--Email template to remove View Quotation button-->
        <record id="email_template_fee_details" model="mail.template">
            <field name="name">Fee Details - Send By Email</field>
            <field name="subject">Fee Details - Followup</field>
            <field name="email_from">noreply@pappaya.com</field>
            <field name="email_to">${object.enquiry_id.father_email or object.enquiry_id.mother_email | safe}</field>
            <field name="model_id" ref="model_pappaya_fees_collection"/>
            <field name="auto_delete" eval="True"/>
            <field name="user_signature" eval="True"/>
            <field name="body_html"><![CDATA[
             <div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">
                <table style='width:100%;'>
                    <tr>
                        <td style='text-align:left;margin-bottom:15px'><b>Dear Parent,</b></td>
                    </tr>
                    <tr>
                        <td style='text-align:center;'><b>FEE DETAILS</b></td>
                    </tr>
                </table>
                <table style='width:100%;border:1px solid black;margin-bottom:15px'>
                    <tr>
                        <td style='text-align:center;border-right: 1px solid black;'><b>Reservation No</b></td>
                        <td style='text-align:center;border-right: 1px solid black;'><b>Student Name</b></td>
                        <td style='text-align:center;border-right: 1px solid black;'><b>Date</b></td>
                        <td style='text-align:center;border-right: 1px solid black;'><b>Paid Fees</b></td>
                        <td style='text-align:center;width:10%'><b>Pending Fees</b></td>
                    </tr>
                    <tr>
                        <td style='text-align:center;border-right: 1px solid black;border-top: 1px solid black;'>${object.enquiry_id.res_no or ''}</td>
                        <td style='text-align:center;border-right: 1px solid black;border-top: 1px solid black;'>${object.enquiry_id.name or ''}</td>
                        <td style='text-align:center;border-right: 1px solid black;border-top: 1px solid black;'>${object.collection_date or ''}</td>
                        <td style='text-align:center;border-right: 1px solid black;border-top: 1px solid black;'>${object.paid_total or 0.0}</td>
                        <td style='text-align:center;border-top: 1px solid black;width:10%'>${object.due_total or 0.0}</td>
                    </tr>
                </table>
                <table style='width:100%;margin-bottom:20px;font-size:12px'>
                    <tr>
                        <td style='text-align:left;'>Thanks & Regards,</td>
                    </tr>
                    <tr>
                        <td style='text-align:left;'>${object.enquiry_id.branch_id.name}</td>
                    </tr>
                </table>
                <p><medium><b>Note:</b> This is a system generated email. Please do not reply to this.</medium></p>
            </div>
            ]]></field>
        </record>

    </data>
</odoo>
