        <!-- Purpose : Displaying 'Upgrade Button' in Kanban view itself. -->
		<record id="custom_upgrade_option_kanban_view" model="ir.ui.view">
			<field name="name">Apps Kanban</field>
			<field name="model">ir.module.module</field>
			<field name="inherit_id" ref="base.module_view_kanban" />
			<field name="arch" type="xml">
				<data>
					<xpath expr="//span[@t-if='installed']" position="attributes">
						<attribute name="invisible">1</attribute>
					</xpath>
					<xpath expr="//span[@t-if='installed']" position="after">
						<button type="object" class="btn btn-primary  pull-right btn-sm"
							name="button_immediate_upgrade" states="installed" string="Upgrade">Upgrade
						</button>
					</xpath>
				</data>
			</field>
		</record>

	</data>
