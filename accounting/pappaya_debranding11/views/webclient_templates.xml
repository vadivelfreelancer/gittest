<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!--Settings - Incoming/Outgoing mail servers-->
		<menuitem id="fetchmail.menu_action_fetchmail_server_tree" parent="base.menu_administration" action="fetchmail.action_email_server_tree" name="Incoming Mail Servers" sequence="14" groups="base.group_system"/>
		<menuitem id="base.menu_mail_servers" parent="base.menu_administration" action="base.action_ir_mail_server_list" name="Outgoing Mail Servers" sequence="15" groups="base.group_system"/>

		<!-- Purpose : Adds all assets in Odoo -->
		<template id="assets_backend_pappaya_custom_design" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/pappaya_debranding11/static/src/js/narayana.js"/>
                <script type="text/javascript" src="/pappaya_debranding11/static/src/js/dialog.js"/>
                <script type="text/javascript" src="/pappaya_debranding11/static/src/js/title.js"/>
            </xpath>
        </template>

        <!-- Purpose : Changing 'Odoo' title string into '' and favion image -->
        <template id="pappaya_crm_fav_ico" name=" Icon" inherit_id="web.layout">
        	<xpath expr="//html/head/title" position="replace">
        		<title>Pappaya</title>
        	</xpath>
        	<xpath expr="//html/head/link[1]" position="replace">
        	 	<link rel="shortcut icon" href="/pappaya_debranding11/static/src/img/favicon.ico" type="image/x-icon"/>
        	</xpath>
        </template>

        <!-- Purpose : Renaming 'Email' into 'Username' in login screen. -->
		<template id="web_login_inherited_pappaya_crm" inherit_id="web.login">
			<xpath expr="//div[@class='form-group field-login']" position="replace">
				<div class="form-group field-login form-element">
                    <input type="text" name="login" t-att-value="login" id="login" class="form-control form-element-field" required="required" autofocus="autofocus" autocapitalize="off" placeholder=" "/>
					<div class="form-element-bar"></div>
      					<label class="form-element-label"><img src="/pappaya_theme11/static/src/img/user-icon.png" />&amp;nbsp; User ID</label>
                	</div>
			</xpath>

			<xpath expr="//div[@class='form-group field-password']" position="replace">
				<div class="form-group field-password form-element">
                    <input type="password" name="password" id="password" class="form-control form-element-field" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096" placeholder=" "/>
					<div class="form-element-bar"></div>
					<label class="form-element-label"><img src="/pappaya_theme11/static/src/img/pwd-icon.png" />&amp;nbsp; Password</label>
				</div>
<!-- 				<div class="width-100-per margin-bottom-20">
					  <div class="pull-left">
					  <label class="form-checkbox-label">
						  <input name='rap' class="form-checkbox-field" type="checkbox" />
						  <i class="form-checkbox-button"></i>Remember me
					  </label>
				  </div>
				  <a href="javascript:void(0)" class="pull-right">Forgot password?</a>
				</div> -->
			</xpath>

			<xpath expr="//div[@class='clearfix oe_login_buttons']" position="replace">
				<div class="clearfix oe_login_buttons">
                    <button type="submit" class="btn btn-primary LoginBtn">Login</button>
                </div>
			</xpath>

		</template>

