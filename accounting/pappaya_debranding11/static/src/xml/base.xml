			<button class="btn btn-sm btn-primary pull-right ml8 o_clipboard_button">
				<!-- <i class="fa fa-clipboard mr8"/>Copy the full error to clipboard -->
			</button>
			<p><b>An error occurred.Please contact Pappaya Admin.</b></p>
			<!-- <p>Please use the copy button to report the error to your support service.</p> -->
		</div>

		<t t-set="errUID" t-value="_.uniqueId()"/>
		<!-- <button class="btn btn-sm btn-link" t-att-data-target="'#o_error_detail' + errUID" data-toggle="collapse">See details</button> -->
		<!-- <div t-att-id="'o_error_detail' + errUID" class="collapse alert alert-danger o_error_detail">
			<pre><t t-esc="error.message"/></pre>
			<pre><t t-esc="error.data.debug"/></pre>
		</div> -->
	</div>

	<t t-extend="mail.client_action">
		<t t-jquery=".o_mail_request_permission" t-operation="inner">
			Your permission is required to <a href="#"> enable desktop notifications</a>.
		</t>
	</t>

	<div t-name="SearchView.GroupByMenu" class="btn-group hidden-xs o_dropdown">
		<button class="o_dropdown_toggler_btn btn btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
			<span class="fa fa-bars"/> Group By <span class="caret"/>
		</button>
		<ul class="dropdown-menu o_group_by_menu" role="menu">
			<li class="divider"/>
			<li class="o_add_custom_group o_closed_menu">
				<a href="#">Add Custom Group</a>
			</li>
		</ul>
	</div>

	<t t-extend="DashboardMain">
		<t t-jquery=".o_web_settings_dashboard" t-operation="replace">
			<div class="container-fluid o_web_settings_dashboard">
				<div class="row">
					<div class="o_web_settings_dashboard_enterprise"/>
					<div class="col-md-3 col-sm-6 col-xs-12 o_web_settings_dashboard_col">
						<div class="text-center o_web_settings_dashboard_invitations"></div>
					<div class="col-md-12">
						<a t-if="debug != true" class="oe_activate_debug_mode pull-right" href="?debug" >Activate the developer mode</a>
						<br t-if="debug != true"/>
						<a t-if="debug != 'assets'" class="oe_activate_debug_mode pull-right" href="?debug=assets" >Activate the developer mode (with assets)</a>
						<br t-if="debug != 'assets'"/>
						<a t-if="debug != false" class="oe_activate_debug_mode pull-right" href="/web" >Deactivate the developer mode</a>
					</div>
				</div>
				</div>
			</div>
		</t>
	</t>

	<!-- Purpose: Hiding chat and actvitiy button in top right corner. -->
	<t t-name="mail.chat.ActivityMenu">
		<t t-jquery="li.o_mail_navbar_item" t-operation="replace"/>
	</t>
	<t t-name="mail.chat.MessagingMenu">
		<t t-jquery="li.o_mail_navbar_item" t-operation="replace"/>
	</t>

