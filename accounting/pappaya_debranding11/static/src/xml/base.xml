<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-extend="UserMenu">

		<t t-jquery="li.o_user_menu" t-operation="replace">
			<li class="o_user_menu">
        <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">
            <img class="img-circle oe_topbar_avatar custom_avatar" t-att-src="_s + '/pappaya_debranding11/static/src/img/user_avatar.jpeg'"/>
            <span class="oe_topbar_name pl5"/>
        </a>
			<ul class="dropdown-menu">
				<li><a href="#" data-menu="settings">Preferences</a></li>
			</ul>
			</li>
			<a class="fa fa-7x o_hr_attendance_sign_in_out_icon fa-sign-out" href="/web/session/logout?redirect=/web">Logout</a>
		</t>

	</t>

	<t t-extend="Dialog">
		<t t-jquery="h4" t-operation="replace">
			<h4 class="modal-title">
				<t t-raw="title"/>  <!-- <span>Notification</span> -->
				<span class="o_subtitle text-muted small"><t t-esc="subtitle"/></span>
			</h4>
		</t>
	</t>

	<div t-name="CrashManager.error" class="o_dialog_error">
