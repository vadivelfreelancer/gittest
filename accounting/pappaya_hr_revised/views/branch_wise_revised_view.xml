<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
		<record id="view_pappaya_branch_wise_revised_form" model="ir.ui.view">
			<field name="name">branch.wise.revised.form</field>
			<field name="model">branch.wise.revised</field>
			<field name="arch" type="xml">
				<form string="Branch Wise Revised">
					<header>
						<button name="to_request" string="Request" states="draft" type="object" class="oe_highlight" />
						<button name="to_confirm" string="Confirm" states="request" type="object" class="oe_highlight" />
						<field name="state" widget="statusbar" readonly="1" />
					</header>
					<sheet>
						<group>
							<group>
								<field name="branch_id" required="1" domain="[('type','=','branch')]" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="category_id" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="sub_category_id" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
							</group>
							<group>
								<field name="department_id" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="designation_id" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="month_id" required="1" options="{'no_open': True,'no_create':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="date" required="1" readonly="1" force_save="1"/>
							</group>
						</group>
						
						<field name="line_ids">
							<tree editable="bottom" create="false" open="false" delete="false">
								<field name="branch_incre_id" invisible="1" />
								<field name="date" invisible="1" />
								<field name="emp_no" readonly="1" force_save="1"/>
								<field name="employee_id" readonly="1" force_save="1" options="{'no_open': True,'no_create':True}"/>
								<field name="branch_id" invisible="1" options="{'no_open': True,'no_create':True}"/>
								<field name="category_id" readonly="1" force_save="1" options="{'no_open': True,'no_create':True}"/>
								<field name="sub_category_id" readonly="1" force_save="1" options="{'no_open': True,'no_create':True}"/>
								<field name="department_id" readonly="1" force_save="1" options="{'no_open': True,'no_create':True}"/>
								<field name="designation_id" readonly="1" force_save="1" options="{'no_open': True,'no_create':True}"/>
								<field name="effective_month" required="1" options="{'no_open': True,'no_create':True}"/>
								<field name="existing_salary" readonly="1" force_save="1" />
								<field name="increment_amt" />
								<field name="new_salary" />
								<field name="arrears_amt" />
								<field name="state" readonly="1" force_save="1"/>
							</tree>
							<form>
							</form>
						</field>
					</sheet>
				</form>
			</field>
		</record>
    
        <record id="view_pappaya_branch_wise_revised_tree" model="ir.ui.view">
            <field name="name">branch.wise.revised.tree</field>
            <field name="model">branch.wise.revised</field>
            <field name="arch" type="xml">
                 <tree string="Branch Wise Revised">
                    <field name="date"/>
                    <field name="branch_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>    
    
        <record id="action_pappaya_branch_wise_revised" model="ir.actions.act_window">
            <field name="name">Branch Wise Revised</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">branch.wise.revised</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>    
    
        <menuitem id="menu_action_pappaya_branch_wise_revised"  parent="hr.menu_hr_root" action="action_pappaya_branch_wise_revised" name="Revised" sequence="4" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>
    

    </data>
</odoo>
