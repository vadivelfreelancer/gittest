<?xml version="1.0" encoding="utf-8"?>


<odoo>

	<record id="view_hr_and_payroll_update" model="ir.ui.view">
	    <field name="name">hr.and.payroll.update.form</field>
	    <field name="model">hr.and.payroll.update</field>
	    <field name="arch" type="xml">
	        <form string="HR and Payroll Update">
	        	<group>
	        		<field name="branch_id"/>
				</group>
	            <footer>
	                <button name="action_update" string="Update"
	                    type="object" class="oe_highlight"/>
	                or
	                <button string="Cancel" class="oe_link" special="cancel"/>
	            </footer>
	        </form>
	    </field>
	</record>
	
	<record id="action_view_hr_and_payroll_update" model="ir.actions.act_window">
	    <field name="name">HR and Payroll Update</field>
	    <field name="res_model">hr.and.payroll.update</field>
	    <field name="view_mode">form</field>
	    <field name="view_id" ref="view_hr_and_payroll_update"/>
	    <field name="target">new</field>
	</record>
	
	<menuitem
	            id="menu_action_view_hr_and_payroll_update"
	            action="action_view_hr_and_payroll_update"
	            sequence="500" groups="base.group_no_one"/>

</odoo>
