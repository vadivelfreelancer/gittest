<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_pappaya_main_group_tree" model="ir.ui.view">
		<field name="name">pappaya.main.group.tree</field>
		<field name="model">pappaya.main.group</field>
		<field name="type">tree</field>
		<field name="priority" eval="8" />
		<field name="arch" type="xml">
			<tree string="Main Group">
				<field name="name" />
				<field name="color" />
				<field name="description" />
			</tree>
		</field>
	</record>

	<record id="view_pappaya_main_group_form" model="ir.ui.view">
		<field name="name">pappaya.main.group.form</field>
		<field name="model">pappaya.main.group</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Main Group">
				<sheet>
					<group>
						<field name="name" required="1"/>
						<field name="color" />
						<field name="description" />
					</group>
					<group/>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="act_open_pappaya_main_group_view">
		<field name="name">Main Group</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">pappaya.main.group</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="menu_pappaya_main_group" parent="account.account_account_menu"
		name="Main Group" sequence="-4" action="act_open_pappaya_main_group_view" />

</odoo>