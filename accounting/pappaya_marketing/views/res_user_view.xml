<?xml version="1.0" encoding="utf-8" ?>

<odoo>

	<record id="view_users_form_simple_modify" model="ir.ui.view">
		<field name="name">res.users.preferences</field>
		<field name="model">res.users</field>
		<field name="inherit_id" ref="base.view_users_form_simple_modif" />
		<field name="arch" type="xml">
			<xpath expr="//form" position="replace">
				<form string="My Profile">
                    <field name="image" readonly="0" widget='image' class="oe_left oe_avatar" options='{"preview_image": "image_small"}'/>
                    <div class="oe_title">
						<h3>
							<field name="name" readonly="1" class="oe_inline"/>
						</h3>
						<button name="preference_change_password" type="object" string="Change Password"/>
					</div>
                    <group name="preferences" col="4" groups="base.group_no_one">
                        <field name="lang" readonly="0"/>
                        <field name="tz" widget="timezone_mismatch" options="{'tz_offset_field': 'tz_offset'}" readonly="0"/>
                        <field name="tz_offset" invisible="1"/>
                        <field name="company_id" options="{'no_create': True}" readonly="0"
                            groups="base.group_light_multi_company"/>
                    </group>
                    <group string="Email Preferences" groups="base.group_no_one">
                        <field name="email" widget="email" readonly="0"/>
                        <field name="signature" readonly="0"/>
                    </group>
                    <footer>
                        <button name="preference_save" type="object" string="Save" class="btn-primary"/>
                        <button name="preference_cancel" string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </form>
			</xpath>
		</field>
	</record>

	<!--Changed the title-->
	<record id="base.action_res_users_my" model="ir.actions.act_window">
		<field name="name">My Profile</field>
	</record>

</odoo>