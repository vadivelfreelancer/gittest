                <!-- Rule for University user  to see own Record. -->
            
            <record model="ir.rule" id="attendance_register_university_login_rule">
                <field name="name">university Attendance Register Login rule</field>
                <field name="model_id" ref="model_pappaya_attendance_register" />
                <field name="groups" eval="[(4, ref('pappayaed_core.group_pappaya_university'))]" />
                <field name="domain_force"> [('university_id','in',[x.id for x in
