<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_employee_attendance_tree" model="ir.ui.view">
            <field name="name">hr.employee.attendance.tree</field>
            <field name="model">hr.employee.attendance</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Employee Attendance" delete="false" duplicate="false">
                    <field name="emp_id"/>
                    <field name="employee_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="branch_id"/>
                    <field name="department_id"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employee_attendance_form" model="ir.ui.view">
            <field name="name">hr.employee.attendance.form</field>
            <field name="model">hr.employee.attendance</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Employee Attendance" delete="false" duplicate="false">
                    <header>
                        <button name="attendance_confirm" string="Confirm" type="object" attrs="{'invisible':[('state','!=','draft')]}" groups="pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="emp_id"/>
                                <field name="employee_id" options="{'no_open': True,'no_create':True}"/>
                                <field name="branch_id" options="{'no_open': True,'no_create':True}" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="department_id" options="{'no_open': True,'no_create':True}" readonly="1" force_save="1"/>
                            </group>
                        </group>
                        <field name="employee_attendance_line" force_save="1">
                            <tree string="Employee Attendance" editable="bottom" create="false" delete="false">
                                <field name="daily_attendance_line_id" invisible="1"/>
                                <field name="attendance_date" readonly="1" force_save="1"/>
                                <field name="biometric_id" readonly="1" force_save="1"/>
                                <field name="check_in" force_save="1"/>
                                <field name="check_out" force_save="1"/>
                                <field name="attendance_status"/>
                                <field name="worked_hours"/>
                                <field name="state" readonly="1"/>
                            </tree>
                            <form string="Employee Attendance">
                                <header>
                                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                                </header>
                                <group col="4">
                                    <field name="daily_attendance_line_id" invisible="1"/>
                                    <field name="attendance_date"/>
                                    <field name="biometric_id"/>
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                    <field name="attendance_status"/>
                                    <field name="worked_hours"/>
                                </group>
                            </form>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_employee_attendance_search" model="ir.ui.view">
            <field name="name">hr.employee.attendance.search</field>
            <field name="model">hr.employee.attendance</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Employee Attendance">
                    <field name="emp_id" />
                    <field name="employee_id" />
                    <field name="branch_id" />
                    <group expand="0" string="Group By...">
                        <filter name="branch_id" string="Branch" domain="[]" context="{'group_by':'branch_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_hr_employee_attendance_view">
            <field name="name">Employee Attendance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.attendance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_employee_attendance_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to configure Employee Attendance.
                </p>
            </field>
        </record>

        <menuitem id="menu_hr_employee_attendance" parent="hr_attendance.menu_hr_attendance_manage_attendances" action="action_hr_employee_attendance_view"
                  sequence="-7" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>

    </data>
</odoo>
