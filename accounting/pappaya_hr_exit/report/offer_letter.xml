<openerp>
    <data>

        <template id="template_relieving_letter">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.internal_layout">
                        <div class="page">
                            <style>
                            .table-condensed1 {
                                width:100%;
                            }
                            .result1 td {
                                text-align:center;
                                padding-bottom:3px;
                            }
                        </style>
                            <div>
                                <div class="col-xs-2" style="text-align:center;padding-top:7px;">
                                    <img t-if="o.employee_id.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)"
                                         style="max-height:60px;margin-left:22px;"/>
                                </div>
                                <div class="col-xs-10">
                                    <div style="font-weight:300;font-size:24px;text-align:center;padding-top:15px;padding-bottom:60px;">
                                        <strong><span t-field="o.employee_id.company_id.name"/></strong>
                                    </div>
                                </div>
                                <br/><br/><br/><br/><br/>
                            </div>
                            <div style="text-align:center;width:100%;font-size:20px;">
                                <b> RELIEVING LETTER </b>
                            </div>
                            <br/>
                            <table>
                                <tr>
                                    <td style="text-align:justify; font-size:16px; padding-bottom:10px; width:100%" >
                                         Mr/Mrs <b><span t-field="o.employee_id.name"/></b>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:justify; font-size:16px;; padding-bottom:50px; width:100%" >
                                         Date <b><span t-field="o.date_to"/></b>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:justify; font-size:16px;; padding-bottom:50px; width:100%" >
                                         Sub: Relieving Letter
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:justify; font-size:16px; padding-bottom:20px; width:100%" >
                                         Dear <b><span t-field="o.employee_id.name"/></b>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:justify; font-size:16px; padding-bottom:20px; width:100%" >
                                       
                                        This has reference to your letter of resignation dated <b><span t-field="o.date_to"/></b>,
                                         wherein you have requested to be relieved from the services of the company at the earliest.

                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:justify; font-size:16px; padding-bottom:20px; width:100%" >
                                       We wise to inform you that your resignation is hereby accepted and you are being relieved from the services of the company with effect from close of office hours on
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:justify; font-size:16px; padding-bottom:100px; width:100%">
                                        We  wish you all the best in your future endeavors.
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:justify; font-size:16px; width:100%">
                                        Yours sincerely, <br/>
                                       <span t-field="o.employee_id.company_id.name"/>
                                    </td>
                                </tr>
                            </table>

                        </div>
                         </t>
					</t>
                </t>
        </template>

        <report
            id="print_releiving_letter"
            model="hr.exit"
            string="Resignation Letter"
            report_type="qweb-pdf"
            name="pappaya_hr_exit.template_relieving_letter"
            file="pappaya_hr_exit.template_relieving_letter"
            menu="False"
        />

      <!--Paperformat-->
        <record id="paperformat_rl_report" model="report.paperformat">
            <field name="name">European A4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <record id="pappaya_hr_exit.print_releiving_letter" model="ir.actions.report">
            <field name="paperformat_id" ref="pappaya_hr_exit.paperformat_rl_report"/>
        </record>

    </data>
</openerp>

