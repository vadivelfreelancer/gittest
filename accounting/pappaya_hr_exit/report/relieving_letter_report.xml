<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <template id="report_relieving_letter">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="pappaya_hr_exit.pappaya_narayana_report_custom_layout">
                        <div class="page">

                            <style>
                                th,td,tr {border-collapse:collapse; font-family:Liberation Serif;}
                                th,td {vertical-align:middle; font-size:14px;}
                            </style>

                            <div class="row">

                                <div style="text-align:right; width:100%; padding-top:20px;">
                                    <strong>Date: </strong><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%b-%Y')"/>
                                </div>

                                <div style="text-align:center; width:100%; padding-top:20px; font-size:16px;">
                                    <!--<u><strong>Relieving Letter - <span t-field ="o.employee_id.name"/></strong></u>-->
                                    <u><strong>TO WHOMSOEVER IT MAY CONCERN</strong></u>
                                </div>

                                <table width="100%" cellpadding="0px" cellspacing="0px" style="padding:0px">
                                    <tr>
                                        <td style="padding-top:20px; padding-left:3px;">
                                            This is to certify that <span t-field ="o.employee_id.name"/> bearing Employee ID <span t-field ="o.employee_id.emp_id"/> worked at
                                            Nspira Management Services Pvt. Ltd. <br/>as a <span t-field ="o.job_id"/> - <span t-field ="o.department_id"/> at
                                            <span t-field ="o.employee_id.branch_id"/> from <span t-field ="o.employee_id.date_of_joining" t-field-options='{"format": "dd-MMM-Y"}'/> to <span t-field ="o.date_to" t-field-options='{"format": "dd-MMM-Y"}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top:20px; padding-left:3px;">
                                            During his/her tenure, we found him/her to be hard working and his/her services were found to be satisfactory.
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top:20px; padding-left:3px;">
                                            Wish him/her all the best in his/her future endeavors.
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top:30px; padding-left:3px;">For Nspira Management Services Pvt. Ltd.</td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top:20px; padding-left:3px;">
                                            <span t-field="o.hr_manager_by_id.employee_id.name"/><br/>
                                           	<span t-field="o.hr_manager_by_id.employee_id.job_id.name"/><br/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top:30px; padding-left:3px;">
                                            Acknowledgement:
                                            <span style="padding-left:180px; border-bottom:1px solid black;"></span>
                                        </td>
                                    </tr>
                                </table>

                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>

        <report
			id="relieving_letter_report"
			model="hr.exit"
			string="Nspira Relieving Letter"
			report_type="qweb-pdf"
			name="pappaya_hr_exit.report_relieving_letter"
			file="pappaya_hr_exit.report_relieving_letter"
            print_report_name="'Nspira Relieving Letter - %s' % (object.employee_id.name)"
		/>

        <record id="paperformat_relieving_letter_report" model="report.paperformat">
            <field name="name">European A4 - Relieving Letter</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">30</field>
            <field name="dpi">80</field>
        </record>

        <record id="pappaya_hr_exit.relieving_letter_report" model="ir.actions.report">
            <field name="paperformat_id" ref="pappaya_hr_exit.paperformat_relieving_letter_report"/>
        </record>

    </data>
</odoo>
