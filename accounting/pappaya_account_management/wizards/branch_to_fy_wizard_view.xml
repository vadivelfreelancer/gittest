<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="branch_linking_to_financial_wizard_form_view" model="ir.ui.view">
        <field name="name">Branch Linking to FY Form</field>
        <field name="model">branch.fy.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group >
                        <group>
                            <field name="financial_year"/>
                        </group>
                    </group>
                    <field name="branches" string="Branchs">
                        <tree>
                            <field name="name" string="Branches"/>
                        </tree>
                    </field>
                </sheet>
                 <footer class="oe_edit_only">
                    <button special="save" type="object" string="Save" class="oe_highlight"/>
                    <button string="Discard" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="branch_linking_to_financial_wizard_action" model="ir.actions.act_window">
        <field name="name">Branch Financial Year Mapping</field>
        <field name="res_model">branch.fy.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="branch_linking_to_financial_wizard_menu" parent="accounting_main_sub_menu"
              action="branch_linking_to_financial_wizard_action" name=" Branch Financial Year Mapping" sequence="9"/>


</odoo>