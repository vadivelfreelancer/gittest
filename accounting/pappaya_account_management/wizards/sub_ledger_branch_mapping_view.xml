<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sub_ledger_link_to_branch_fywizard_form_view" model="ir.ui.view">
        <field name="name">Branch Linking to Sub Ledger Form</field>
        <field name="model">subledger.branch.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group >
                            <field name="financial_year"/>
                            <field name="sub_ledgers"/>
                    </group>
                    <field name="branches" string="Branches">
                        <tree>
                            <field name="name" string="Branches"/>
                        </tree>
                    </field>
                </sheet>
                 <footer class="oe_edit_only">
                    <button special="save" type="object" string="Save" class="oe_highlight"/>
                    <button string="Discard" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sub_ledger_link_to_branch_fywizard_action" model="ir.actions.act_window">
        <field name="name">Sub Ledger Branch Mapping</field>
        <field name="res_model">subledger.branch.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="sub_ledger_link_to_branch_fywizard_menu" parent="accounting_main_sub_menu"
              action="sub_ledger_link_to_branch_fywizard_action" name="Sub Ledger Branch Mapping" sequence="9"/>


</odoo>