<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		
		<!-- Set Multi Companies by default for admin user -->
		<record model="res.groups" id="base.group_multi_company">
            <field name="name">Multi Companies</field>
            <field name="category_id" ref="base.module_category_extra"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <!-- End -->
		
		<!-- Purpose: Common Groups for Pappaya -->
		<record id="group_pappaya_company_common" model="res.groups">
			<field name="name">Common Group</field>
			<field name="category_id" ref="base.module_category_extra"/>
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
			<field name="users" eval="[(4, ref('base.user_root'))]"/>
			<!-- <field name="implied_ids" eval="[(4, ref('base.group_multi_company')),(4, ref('base.group_user'))]"/> -->
		</record>

        <record id="pappaya_group_hidden" model="res.groups">
            <field name="name">Group Hidden</field>
            <field name="category_id" ref="base.module_category_extra"/>
        </record>
		<!-- End -->
		
    <!-- Begin : Categories -->
        <record id="module_pappaya_marketing_category" model="ir.module.category">
            <field name="name">Narayana Marketing Management</field>
            <field name="sequence">301</field>
        </record>
        <record id="module_pappaya_hr_payroll_category" model="ir.module.category">
            <field name="name">HR &amp; Payroll Management</field>
            <field name="sequence">302</field>
        </record>
        <record id="module_pappaya_admission_category" model="ir.module.category">
            <field name="name">Admission</field>
            <field name="sequence">303</field>
        </record>
    <!--  End : Categories-->

    <!-- Begin : Marketing Groups -->
        <record id="marketing_pro_user" model="res.groups">
            <field name="name">PRO</field>
            <field name="category_id" ref="module_pappaya_marketing_category"/>
            <field name="implied_ids" eval="[(4, ref('group_pappaya_company_common'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record id="marketing_pro_admin" model="res.groups">
            <field name="name">PRO ADMIN</field>
            <field name="category_id" ref="module_pappaya_marketing_category"/>
            <field name="implied_ids" eval="[(4, ref('group_pappaya_company_common'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record model="ir.rule" id="res_company_rule_group_marketing_pro_admin">
           <field name="name">Admission Branch for Pro Admin</field>
           <field name="model_id" ref="model_res_company"/>
           <field name="domain_force">[(1,'=',1)]</field>
           <field name="groups" eval="[(4, ref('pappaya_base.marketing_pro_admin'))]"/>
        </record>
    <!-- End : Marketing Groups -->


    <!-- Begin : HR & Payroll Groups -->
        <record id="hr_administrator" model="res.groups">
