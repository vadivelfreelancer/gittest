<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="meta_data_master_tree_view" model="ir.ui.view">
			<field name="name">meta.data.master.tree</field>
			<field name="model">meta.data.master</field>
			<field name="arch" type="xml">
				<tree string="Employee ID Sequence">
					<!--<field name="sequence" widget="handle" attrs="{'readonly':[('last_sequence','=',True)]}"/>-->
					<field name="sequence" />
					<field name="name" />
					<field name="length" />
					<field name="start_series" />
					<field name="increment" />
					<field name="last_sequence" invisible="1"/>
					<field name="description" />
				</tree>
			</field>
		</record>

		<record id="meta_data_master_form_view" model="ir.ui.view">
			<field name="name">meta.data.master.form</field>
			<field name="model">meta.data.master</field>
			<field name="arch" type="xml">
				<form string="Employee ID Sequence">
					<sheet>
                        <group >
                            <group>
                            	<field name="name" required="1" />
								<field name="length" required="1"/>
								<field name="start_series" required="1"/>
								<field name="model_name" invisible="1"/>
								<field name="sequence" />
                            </group>
                            <group>
								<field name="increment" required="1"/>
								<field name="last_sequence"  invisible="1"/>
								<field name="description" required="1"/>
                            </group>
                        </group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="meta_data_master_search_view" model="ir.ui.view">
            <field name="name">meta.data.master.search</field>
            <field name="model">meta.data.master</field>
            <field name="arch" type="xml">
                <search string="Employee ID Sequence">
                    <field name="name"/>
					<field name="length"/>
					<field name="start_series"/>
					<field name="description"/>
               </search>
            </field>
        </record>

		<record id="meta_data_master_action" model="ir.actions.act_window">
			<field name="name">Employee ID Sequence</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">meta.data.master</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to configure new Employee ID Sequence.
				</p>
			</field>
		</record>

	</data>
</odoo>
