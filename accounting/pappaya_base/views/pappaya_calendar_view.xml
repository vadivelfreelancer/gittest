<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="pappaya_hr_calendar_view_tree" model="ir.ui.view">
            <field name="name">pappaya.hr.calendar.tree</field>
            <field name="model">hr.calendar</field>
            <field name="arch" type="xml">
            <tree string="Calendar" create="false" duplicate="false" delete="false">
            	<field name="name"/>
                <field name="branch_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="state" string="Status"/>
            </tree>
        </field>
		</record>

		<record id="pappaya_hr_calendar_view_form" model="ir.ui.view">
            <field name="name">pappaya.hr.calendar.form</field>
            <field name="model">hr.calendar</field>
            <field name="arch" type="xml">
                <form string="Calendar" create="false" duplicate="false" delete="false">
                    <header>
                        <button name="action_submit" string="Request" type="object" attrs="{'invisible':[('state','!=','draft')]}" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>
                        <button name="action_approve" string="Approve" type="object" attrs="{'invisible':[('state','!=','request')]}" groups="pappaya_base.hr_executives,pappaya_base.hr_operations_head,pappaya_base.hr_cpo"/>
                        <!-- <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible':[('state','!=','request')]}"/> -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,request,approve" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" force_save="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_from" readonly="1" force_save="1"/>
                                <field name="branch_id" readonly="1" force_save="1" options="{'no_open': True,'no_create':True}"/>
                            </group>
                            <group>
                                <field name="date_to" readonly="1" force_save="1"/>
                            </group>
                        </group>
                        <field name="calendar_line" attrs="{'readonly':[('state','=','approve')]}">
                            <tree string="Calendar" create="false" editable="bottom" delete="0">
                                <field name="date" readonly="1" force_save="1"/>
                                <field name="work_type"/>
                                <field name="remarks"/>
                            </tree>
                            <form string="Calendar">
                                <group col="4">
                                    <field name="date"/>
                                    <field name="work_type"/>
                                    <field name="remarks"/>
                                </group>
                            </form>
                        </field>
                    </sheet>
                </form>
			</field>
		</record>

        <record id="pappaya_hr_calendar_view_search" model="ir.ui.view">
            <field name="name">pappaya.hr.calendar.search</field>
            <field name="model">hr.calendar</field>
            <field name="arch" type="xml">
                <search string="Calendar">
                    <field name="branch_id"/>
                    <separator />
                        <group expand="0" string="Group By...">
                            <filter name="branch_id" string="Branch" domain="[]" context="{'group_by':'branch_id'}" />
                        </group>
                </search>
            </field>
        </record>

