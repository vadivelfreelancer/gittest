											<field name="tem_district_id" placeholder="District" class="o_address_city" domain="[('state_id','=',tem_state_id)]"
													options="{'no_open':True, 'no_create':True}"/>
											<field name="tem_city_id" placeholder="City" class="o_address_city" domain="[('district_id','=',tem_district_id)]"
													options="{'no_open':True, 'no_create':True}"/>
                                            <field name="tem_zip" required="1" placeholder="ZIP" class="o_address_zip"/>
                                            <field name="tem_country_id" required="1" placeholder="Country" class="o_address_country"  options="{'no_open':True, 'no_create':True}"/>
