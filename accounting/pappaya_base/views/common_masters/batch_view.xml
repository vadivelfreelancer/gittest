<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="view_pappaya_batch_tree" model="ir.ui.view">
			<field name="name">pappaya.batch.tree</field>
			<field name="model">pappaya.batch</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="batch">
					<field name="name"/>
					<field name="group_id" invisible="1"/>
					<!-- <field name="office_type_id"/> -->
					<!-- <field name="academic_year" />
					<field name="zone_id" />
					<field name="branch_id" /> -->
				</tree>
			</field>
		</record>

		<record id="view_pappaya_batch_form" model="ir.ui.view">
			<field name="name">pappaya.batch.form</field>
			<field name="model">pappaya.batch</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="batch" duplicate="0">
					<sheet>
						<group>
							<group>
								<field name="name" required="1"/>
								<!-- <field name="office_type_id" options="{'no_open': True,'no_create':True}" required="1"/> -->
								<field name="group_id" invisible="1" options="{'no_open': True,'no_create':True}"/>
								<!-- <field name="academic_year" required="1" options="{'no_open': True,'no_create':True}"/>
								<field name="branch_id" domain="[('type','=', 'school')]" required="1" options="{'no_open': True,'no_create':True}"/>
								<field name="zone_id" invisible="1"/> -->
							</group>
							<group/>
						</group>
						<separator string="Description"/>
                        <field name="description" nolabel="1" style="height:100px !important"/>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_pappaya_batch_search" model="ir.ui.view">
			<field name="name">pappaya.batch.search</field>
			<field name="model">pappaya.batch</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="batch">
					<field name="name" />
					<field name="group_id"/>
					<field name="description"/>
					<!-- <field name="academic_year" />
					<field name="branch_id" />
					<field name="zone_id" />
					<newline />
					<batch expand="0" string="batch By...">
                        <filter name="academic_year" string="Academic Year" domain="[]" context="{'batch_by':'academic_year'}" />
                        <filter name="branch_id" string="Branch" domain="[]" context="{'batch_by':'branch_id'}" />
                        <filter name="zone_id" string="Zone" domain="[]" context="{'batch_by':'zone_id'}" />
                    </batch> -->
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_pappaya_batch_view">
			<field name="name">Batch</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.batch</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_pappaya_batch_search" />
			<field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Batch.
                </p>
            </field>
		</record>


	</data>
</odoo>
