<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_pappaya_other_feehead_tree" model="ir.ui.view">
			<field name="name">pappaya.other.feehead.tree</field>
			<field name="model">pappaya.other.feehead</field>
			<field name="arch" type="xml">
				<tree string="Other Fee Head">
					<field name="id" groups="base.group_system" invisible="1"/>
					<field name="name" />
					<field name="school_id" invisible="1"/>
				</tree>
			</field>
		</record>

		<record id="view_pappaya_other_feehead_form" model="ir.ui.view">
			<field name="name">pappaya.other.feehead.form</field>
			<field name="model">pappaya.other.feehead</field>
			<field name="arch" type="xml">
				<form string="Other Fee Head" duplicate="0" delete="false">
					<sheet>
                        <group>
                        	<group>
                        		<field name="name" default_focus="1"/>
                        		<field name="status"/>
								<field name="is_refund"/>
                        		<field name="is_tax"/>
                        		<field name="subledger_slno"/>
                        		<field name="can_status"/>
                        	</group>
                        	<group>
								<field name="description"/>
								<field name="is_college"/>
								<field name="is_school"/>
								<field name="tax_slno"/>
								<field name="hsnsac_slno"/>
                        		<field name="school_id" domain="[('type','=','branch')]" options="{'no_open': True,'no_create':True}" required="1" invisible="1" />
                        	</group>
                        </group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="view_pappaya_other_feehead_search" model="ir.ui.view">
            <field name="name">pappaya.other.feehead.search</field>
            <field name="model">pappaya.other.feehead</field>
            <field name="arch" type="xml">
                <search string="Other Fee Head">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <separator />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

		<record id="action_pappaya_other_feehead_form" model="ir.actions.act_window">
			<field name="name">Other Fee Head</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.other.feehead</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_pappaya_other_feehead_search"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new Other Fee Head.
				</p>
			</field>
		</record>

	</data>
</odoo>