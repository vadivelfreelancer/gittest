<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!--    Job Position Name Master  -->

        <record id="view_hr_job_name_tree" model="ir.ui.view">
			<field name="name">hr.job.name.tree</field>
			<field name="model">hr.job.name</field>
			<field name="arch" type="xml">
				<tree string="Designation">
					<field name="name" />
					<field name="description"/>
				</tree>
			</field>
		</record>

		<record id="view_hr_job_name_form" model="ir.ui.view">
			<field name="name">hr.job.name.form</field>
			<field name="model">hr.job.name</field>
			<field name="arch" type="xml">
				<form string="Designation" duplicate="0" delete="false">
					<sheet>
                        <group>
                        	<group>
                        		<field name="name" default_focus="1" required="1"/>
                        		<field name="description"/>
                        	</group>
                        </group>
					</sheet>
					<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
				</form>
			</field>
		</record>

		<record id="view_hr_job_name_search" model="ir.ui.view">
            <field name="name">hr.job.name.search</field>
            <field name="model">hr.job.name</field>
            <field name="arch" type="xml">
                <search string="Designation">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <separator />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

		<record id="action_hr_job_name_form" model="ir.actions.act_window">
			<field name="name">Designation</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.job.name</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_hr_job_name_search"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new Designation.
				</p>
			</field>
		</record>

	</data>
</odoo>