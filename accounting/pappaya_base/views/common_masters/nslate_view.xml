<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!--Nslate-->

        <record id="view_nslate_template_tree" model="ir.ui.view">
            <field name="name">nslate.template.tree</field>
            <field name="model">product.template</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Nslate">
                    <field name="name" string="Name"/>
                    <field name="lst_price" string="Price"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_nslate_template_form" model="ir.ui.view">
            <field name="name">nslate.template.common.form</field>
            <field name="model">product.template</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Nsalte">
                    <sheet>
                        <field name='product_variant_count' invisible='1'/>
                        <field name='is_product_variant' invisible='1'/>
                        <field name="id" invisible="True"/>
                        <field name="image_medium" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Name"/>
                            <h2><field name="name" placeholder="Name"/></h2>
                            <div name="options" invisible="1">
                                <div>
                                    <field name="sale_ok"/>
                                    <label for="sale_ok"/>
                                </div>
                                <div>
                                    <field name="purchase_ok"/>
                                    <label for="purchase_ok"/>
                                </div>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="lst_price" string="Price" required="1" />
                                <field name="company_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                                <field name="select_type" invisible="1"/>
                                <field name="type" invisible="1"/>
                                <field name="categ_id" string="Category" invisible="1"/>
                            </group>
                            <group>
                                <field name="property_account_income_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                                <field name="property_account_expense_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                            </group>
                            <separator string="Variants"/>
                            <field name="attribute_line_ids" widget="one2many_list" context="{'show_attribute': False}">
                                <tree string="Variants" editable="bottom">
                                    <field name="attribute_id" options="{'no_open': True,'no_create':True}"/>
                                    <field name="value_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True}" domain="[('attribute_id', '=', attribute_id)]" context="{'default_attribute_id': attribute_id}"/>
                                </tree>
                                <form>
                                    <group colspan="4" col="4">
                                        <field name="attribute_id" options="{'no_open': True,'no_create':True}" readonly="1"/>
                                        <field name="value_ids" widget="many2many_tags"
                                               options="{'no_open': True,'no_create':True}" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                            <separator string="Description"/>
                            <field name="description" nolabel="1" style="height:100px !important"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_nslate_template_search" model="ir.ui.view">
            <field name="name">nslate.template.search</field>
            <field name="model">product.template</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Nslate">
                    <field name="name" select="True"/>
                    <group expand="0" string="Group By">
                        <filter name="name" string="Name" domain="[]" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="nslate_template_action" model="ir.actions.act_window">
            <field name="name">Nslate Item</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('select_type','=','nslate')]</field>
            <field name="context">{"default_select_type":'nslate'}</field>
            <field name="search_view_id" ref="view_nslate_template_search"/>
            <field name="view_ids" eval="[(5, 0, 0),
                        (0, 0, {'view_mode': 'tree', 'view_id': ref('view_nslate_template_tree')}),
                        (0, 0, {'view_mode': 'form', 'view_id': ref('view_nslate_template_form')})]" />
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new Nslate Item.
              </p>
            </field>
        </record>

        <!--Nslate Variant-->

        <record id="view_nslate_variant_tree" model="ir.ui.view">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="type">tree</field>
             <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Nslate Variant" create="false" delete="false">
                    <field name="name" string="Name"/>
                    <field name="attribute_value_ids" widget="many2many_tags" string="Variants"/>
                    <field name="lst_price" string="Price"/>
                    <field name="product_tmpl_id" invisible="1"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_nslate_variant_form" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Nslate Variant" create="false" delete="false">
                    <sheet>
                        <field name='product_variant_count' invisible='1'/>
                        <field name='is_product_variant' invisible='1'/>
                        <field name="id" invisible="True"/>
                        <field name="image_medium" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Name"/>
                            <h2><field name="name" placeholder="Name"/></h2>
                            <field name="attribute_value_ids" widget="many2many_tags" readonly="1" invisible="1"/>
                            <div name="options" invisible="1">
                                <div>
                                    <field name="sale_ok"/>
                                    <label for="sale_ok"/>
                                </div>
                                <div>
                                    <field name="purchase_ok"/>
                                    <label for="purchase_ok"/>
                                </div>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="lst_price" string="Price" required="1"/>
                                <field name="company_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                                <field name="select_type" invisible="1"/>
                                <field name="type" invisible="1"/>
                                <field name="categ_id" string="Category" invisible="1"/>
                            </group>
                            <group>
                                <field name="property_account_income_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                                <field name="property_account_expense_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                            </group>
                            <separator string="Description"/>
                            <field name="description" nolabel="1" style="height:100px !important"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_nslate_variant_search" model="ir.ui.view">
            <field name="name">product.product.search</field>
            <field name="model">product.product</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Nslate Variant">
                    <field name="name" select="True"/>
                    <group expand="0" string="Group By">
                        <filter name="name" string="Name" domain="[]" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="nslate_variant_action" model="ir.actions.act_window">
            <field name="name">Nslate Variants</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('select_type','=','nslate')]</field>
            <field name="context">{"default_select_type":'nslate'}</field>
            <field name="search_view_id" ref="view_nslate_variant_search"/>
            <field name="view_ids" eval="[(5, 0, 0),
                            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_nslate_variant_tree')}),
                            (0, 0, {'view_mode': 'form', 'view_id': ref('view_nslate_variant_form')})]"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new Nsalte Variants.
              </p>
            </field>
        </record>

    </data>
</odoo>