<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_pappaya_dhobi_provider_tree" model="ir.ui.view">
			<field name="name">pappaya.dhobi.provider.tree</field>
			<field name="model">pappaya.dhobi.provider</field>
			<field name="arch" type="xml">
				<tree string="Dhobi Provider">
					<field name="id" groups="base.group_system" invisible="1"/>
					<field name="name"/>
					<field name="state_id"/>
					<field name="district_id"/>
					<field name="mobile_1"/>
				</tree>
			</field>
		</record>

		<record id="view_pappaya_dhobi_provider_form" model="ir.ui.view">
			<field name="name">pappaya.dhobi.provider.form</field>
			<field name="model">pappaya.dhobi.provider</field>
			<field name="arch" type="xml">
				<form string="Dhobi Provider" duplicate="0" delete="false">
					<sheet>
                        <group>
							<group>
								<field name="name" default_focus="1" required="1"/>
							</group>
							<group>
								<field name="school_id" invisible="1"/>
							</group>
							<group>
								<label for="street" string="Address"/>
								<div class="o_address_format">
									<field name="street" placeholder="Street..." class="o_address_street" required="1"/>
									<field name="street2" placeholder="Street 2..." class="o_address_street"/>
									<field name="city" placeholder="City" class="o_address_city"/>
									<field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True,'no_create':True}" required="1"/>
									<field name="zip" placeholder="ZIP" class="o_address_zip"/>
									<field name="district_id" domain="[('state_id','=',state_id)]" class="o_address_district" placeholder="District" options="{'no_open': True,'no_create':True}" required="1"/>
									<field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True,'no_create':True}" />
								</div>
								<field name="mobile_1" required="1"/>
								<field name="mobile_2"/>
							</group>
							<group>
								<field name="pickup_date"/>
								<field name="delivery_date"/>
								<field name="opinion"/>
								<field name="head_count"/>
								<field name="used_count"/>
								<field name="remarks"/>
							</group>
                        </group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="view_pappaya_dhobi_provider_search" model="ir.ui.view">
            <field name="name">pappaya.dhobi.provider.search</field>
            <field name="model">pappaya.dhobi.provider</field>
            <field name="arch" type="xml">
                <search string="Dhobi Provider">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
					<field name="state_id"/>
					<field name="district_id"/>
                    <separator />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

		<record id="action_pappaya_dhobi_provider_form" model="ir.actions.act_window">
			<field name="name">Dhobi Provider</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.dhobi.provider</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_pappaya_dhobi_provider_search"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new Dhobi Provider.
				</p>
			</field>
		</record>

	</data>
</odoo>