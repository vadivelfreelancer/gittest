<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record id="view_pappaya_course_provider_tree" model="ir.ui.view">
			<field name="name">pappaya.course.provider.tree</field>
			<field name="model">pappaya.course.provider</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Apex">
					<field name="name" />
					<field name="is_gst_applicable"/>
				</tree>
			</field>
		</record>

		<record id="view_pappaya_course_provider_form" model="ir.ui.view">
			<field name="name">pappaya.course.provider.form</field>
			<field name="model">pappaya.course.provider</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Apex">
					<sheet>
						<group>
							<group>
								<field name="name" />
								<field name="is_gst_applicable"/>
							</group>
							<group/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_pappaya_course_provider_search" model="ir.ui.view">
			<field name="name">pappaya.course.provider.search</field>
			<field name="model">pappaya.course.provider</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Apex">
					<field name="name"/>
					<field name="is_gst_applicable"/>
					<filter name="GST" string="GST Applicable?" domain="[('is_gst_applicable','=',True)]" />
					<separator />
					<!-- <newline />
					<group expand="0" string="Group By...">
                        <filter name="is_gst_applicable" string="Is GST Applicable?" context="{'group_by': 'is_gst_applicable'}" />
                    </group> -->
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="view_pappaya_course_provider_action">
			<field name="name">Apex</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.course.provider</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_pappaya_course_provider_search" />
			<field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Apex.
                </p>
            </field>
		</record>

	</data>
</openerp>