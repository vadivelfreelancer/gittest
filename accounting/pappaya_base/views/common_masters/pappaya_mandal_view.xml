<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_pappaya_mandal_tree" model="ir.ui.view">
		<field name="name">pappaya.group.tree</field>
		<field name="model">pappaya.mandal</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Mandal">
				<field name="name" />
				<field name="code" />
				<field name="pappaya_division_id" />
				<field name="state_district_id" />
				<field name="state_id" />
			</tree>
		</field>
	</record>

	<record id="view_pappaya_mandal_form" model="ir.ui.view">
		<field name="name">pappaya.group.form</field>
		<field name="model">pappaya.mandal</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Mandal">
				<sheet>
					<group>
						<group>
							<field name="name" required="1"/>
							<field name="code" required="1"/>
						</group>
						<group>
							<field name="pappaya_division_id" required="1" options="{'no_open': True,'no_create':True}"/>
							<field name="state_district_id" invisible="1" options="{'no_open': True,'no_create':True}"/>
							<field name="state_id" invisible="1" options="{'no_open': True,'no_create':True}"/>
						</group>
					</group>
					<group/>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_pappaya_mandal_view">
		<field name="name">Mandal</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">pappaya.mandal</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				Click to add a new Mandal.
			</p>
		</field>
	</record>

</odoo>