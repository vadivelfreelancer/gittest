<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="view_pappaya_zone_tree" model="ir.ui.view">
            <field name="name">pappaya.zone.tree</field>
            <field name="model">pappaya.zone</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Zone">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="zone_code"/>
                </tree>
            </field>
        </record>

        <record id="view_pappaya_zone_form" model="ir.ui.view">
            <field name="name">pappaya.zone.form</field>
            <field name="model">pappaya.zone</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Zone">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="zone_code"/>
                                <field name="col_daystn"/>
                                <field name="schl_daystn"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="ip_address"/>
                                <field name="col_hosttn"/>
                                <field name="schl_hosttn"/>
                                <field name="user_slno"/>
                            </group>
                            <group/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pappaya_zone_search" model="ir.ui.view">
            <field name="name">pappaya.zone.search</field>
            <field name="model">pappaya.zone</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Zone">
                    <field name="name" select="True"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_pappaya_zone_view">
            <field name="name">Zone</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pappaya.zone</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pappaya_zone_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Zone.
                </p>
            </field>
        </record>

    </data>
</odoo>