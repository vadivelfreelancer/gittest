<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_pappaya_status_tree" model="ir.ui.view">
			<field name="name">pappaya.status.tree</field>
			<field name="model">pappaya.status</field>
			<field name="arch" type="xml">
				<tree string="Status">
					<field name="id" groups="base.group_system" invisible="1"/>
					<field name="name" />
					<field name="school_id" invisible="1"/>
				</tree>
			</field>
		</record>

		<record id="view_pappaya_status_form" model="ir.ui.view">
			<field name="name">pappaya.status.form</field>
			<field name="model">pappaya.status</field>
			<field name="arch" type="xml">
				<form string="Status" duplicate="0" delete="false">
					<sheet>
                        <group>
                        	<group>
                        		<field name="name" default_focus="1"/>
                        	</group>
                        	<group>
								<field name="description"/>
								<field name="status"/>
                        		<field name="school_id" domain="[('type','=','branch')]" options="{'no_open': True,'no_create':True}" required="1" invisible="1" />
                        	</group>
                        </group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="view_pappaya_status_search" model="ir.ui.view">
            <field name="name">pappaya.status.search</field>
            <field name="model">pappaya.status</field>
            <field name="arch" type="xml">
                <search string="Status">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <separator />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

		<record id="action_pappaya_status_form" model="ir.actions.act_window">
			<field name="name">Status</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.status</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_pappaya_status_search"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new Status.
				</p>
			</field>
		</record>

	</data>
</odoo>