<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="view_pappaya_package_tree" model="ir.ui.view">
			<field name="name">pappaya.package.tree</field>
			<field name="model">pappaya.package</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="package">
					<field name="name" />
					<field name="academic_year_id" invisible="1"/>
					<!-- <field name="office_type_id"/> -->
					<!--<field name="is_active"/>-->
					<field name="branch_id" invisible="1"/>
				</tree>
			</field>
		</record>

		<record id="view_pappaya_package_form" model="ir.ui.view">
			<field name="name">pappaya.package.form</field>
			<field name="model">pappaya.package</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Package" duplicate="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" default_focus="1" required="1"/>
								<!-- <field name="office_type_id" options="{'no_open': True,'no_create':True}" required="1"/> -->
                                <field name="is_active" invisible="1"/>
                            </group>
                            <group>
                                <field name="branch_id" domain="[('type','=','branch')]" options="{'no_open': True,'no_create':True}" invisible="1"/>
                                <field name="academic_year_id" options="{'no_open': True,'no_create':True}" domain="[('is_active','=',True)]" invisible="1"/>
								<!--<field name="new_pak_sno" attrs="{'invisible': [('type','!=','school')]}"/>-->
                            </group>
                        </group>
						<separator string="Description"/>
                        <field name="description" nolabel="1" style="height:100px !important"/>
                    </sheet>
                </form>
			</field>
		</record>

		<record id="view_pappaya_package_search" model="ir.ui.view">
			<field name="name">pappaya.package.search</field>
			<field name="model">pappaya.package</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Package">
					<field name="name" />
					<field name="description"/>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_pappaya_package_view">
			<field name="name">Package</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.package</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_pappaya_package_search"/>
			 <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Package.
                </p>
            </field>
		</record>


	</data>
</odoo>
