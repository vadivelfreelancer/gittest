<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!--Uniform Masters -> Uniform Set-->

        <record id="view_uniform_set_tree" model="ir.ui.view">
            <field name="name">uniform.set.tree</field>
            <field name="model">uniform.set</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Uniform Set" delete="false">
                    <field name="name" string="Name"/>
                </tree>
            </field>
        </record>

        <record id="view_uniform_set_form1" model="ir.ui.view">
            <field name="name">uniform.set.form</field>
            <field name="model">uniform.set</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Uniform Set" delete="false">
                <sheet>
                    <group col="2" colspan="2">
                        <field name="name" select="1" required="1" string="Name"/>
                    </group>
                    <separator string="Uniform Item"/>
                    <group>
                    <field name="uniform_set_item_ids">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="product_template_id" options="{'no_open': True, 'no_create': True}" required="True" domain="[('select_type','=','uniform')]"/>
                            <field name="product_variant_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="product_id" domain="[('select_type','=','uniform')]" options="{'no_open': True, 'no_create': True}" invisible="1"/>
                            <field name="quantity" required="1"/>
                            <field name="price" required="1"/>
                            <field name="total_price"/>
                        </tree>
                        <form>
                            <group>
                                <field name="product_template_id" options="{'no_open': True, 'no_create': True}" required="True" domain="[('select_type','=','uniform')]"/>
                                <field name="product_variant_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="product_id" domain="[('select_type','=','uniform')]" options="{'no_open': True, 'no_create': True}" invisible="1"/>
                                <field name="quantity" required="1"/>
                                <field name="price" required="1"/>
                                <field name="total_price"/>
                            </group>
                        </form>
                    </field>
                    <group class="oe_subtotal_footer oe_right" colspan="2">
                        <field name="total_amount" readonly="1"/>
                    </group>
                    </group>
                </sheet>
            </form>
            </field>
        </record>

        <record id="view_uniform_set_search" model="ir.ui.view">
            <field name="name">uniform.set.search</field>
            <field name="model">uniform.set</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Uniform Set">
                    <field name="name" select="True" string="Name"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_uniform_set_view">
            <field name="name">Uniform Set</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">uniform.set</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_uniform_set_search"/>
        </record>

        <!--Uniform-->

        <record id="view_uniform_template_tree" model="ir.ui.view">
            <field name="name">product.template.common.tree</field>
            <field name="model">product.template</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Uniform Item" delete="false">
                    <field name="name" string="Name"/>
                    <field name="lst_price" string="Price"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_uniform_template_form" model="ir.ui.view">
            <field name="name">product.template.common.uniform.form</field>
            <field name="model">product.template</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Uniform Item" delete="false">
                    <sheet>
                        <field name='product_variant_count' invisible='1'/>
                        <field name='is_product_variant' invisible='1'/>
                        <field name="id" invisible="True"/>
                        <field name="image_medium" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Name"/>
                            <h2><field name="name" placeholder="Name"/></h2>
                            <div name="options" invisible="1">
                                <div>
                                    <field name="sale_ok"/>
                                    <label for="sale_ok"/>
                                </div>
                                <div>
                                    <field name="purchase_ok"/>
                                    <label for="purchase_ok"/>
                                </div>
                            </div>
                        </div>
                        <group>
                            <group invisible="1">
                                <field name="lst_price" string="Price" invisible="1"/>
                                <field name="company_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                                <field name="select_type" invisible="1"/>
                                <field name="type" invisible="1"/>
                                <field name="categ_id" string="Category" invisible="1"/>
                            </group>
                            <group invisible="1">
                                <field name="property_account_income_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                                <field name="property_account_expense_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                            </group>
                            <separator string="Variants"/>
                            <field name="attribute_line_ids" widget="one2many_list" context="{'show_attribute': False}">
                                <tree string="Variants" editable="bottom">
                                    <field name="attribute_id" options="{'no_open': True,'no_create':True}"/>
                                    <field name="value_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True}" domain="[('attribute_id', '=', attribute_id)]" context="{'default_attribute_id': attribute_id}"/>
                                </tree>
                                <form>
                                    <group colspan="4" col="4">
                                        <field name="attribute_id" options="{'no_open': True,'no_create':True}" readonly="1"/>
                                        <field name="value_ids" widget="many2many_tags" options="{'no_open': True,'no_create':True}" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                            <separator string="Description"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_uniform_template_search" model="ir.ui.view">
            <field name="name">product.template.common.search</field>
            <field name="model">product.template</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Uniform Item">
                    <field name="name" select="True"/>
                    <group expand="0" string="Group By">
                        <filter name="name" string="Name" domain="[]" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="uniform_template_action" model="ir.actions.act_window">
            <field name="name">Uniform Item</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('select_type','=','uniform')]</field>
            <field name="context">{"default_select_type":'uniform'}</field>
            <field name="search_view_id" ref="view_uniform_template_search"/>
            <field name="view_ids" eval="[(5, 0, 0),
                        (0, 0, {'view_mode': 'tree', 'view_id': ref('view_uniform_template_tree')}),
                        (0, 0, {'view_mode': 'form', 'view_id': ref('view_uniform_template_form')})]" />
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new Uniform Item.
              </p>
            </field>
        </record>

        <!--Uniform Variant-->

        <record id="view_uniform_variant_tree" model="ir.ui.view">
            <field name="name">uniform.variant.tree</field>
            <field name="model">product.product</field>
            <field name="type">tree</field>
             <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Uniform Variant" create="false" delete="false" edit="false">
                    <field name="name" string="Uniform Name"/>
                    <field name="attribute_value_ids" widget="many2many_tags" string="Variants"/>
                    <field name="lst_price" string="Uniform Price" invisible="1"/>
                    <field name="product_tmpl_id" invisible="1"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_uniform_variant_form" model="ir.ui.view">
            <field name="name">uniform.variant.form</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Uniform" create="false" delete="false" edit="false">
                    <sheet>
                        <field name='product_variant_count' invisible='1'/>
                        <field name='is_product_variant' invisible='1'/>
                        <field name="id" invisible="True"/>
                        <field name="image_medium" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Name"/>
                            <h2><field name="name" placeholder="Name"/></h2>
                            <field name="attribute_value_ids" widget="many2many_tags" readonly="1" invisible="1"/>
                            <div name="options" invisible="1">
                                <div>
                                    <field name="sale_ok"/>
                                    <label for="sale_ok"/>
                                </div>
                                <div>
                                    <field name="purchase_ok"/>
                                    <label for="purchase_ok"/>
                                </div>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="lst_price" string="Price" invisible="1"/>
                                <field name="attribute_value_ids" widget="many2many_tags" string="Variants"/>
                                <field name="description"/>
                                <field name="company_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                                <field name="select_type" invisible="1"/>
                                <field name="type" invisible="1"/>
                                <field name="categ_id" string="Category" invisible="1"/>
                            </group>
                            <group>
                                <field name="property_account_income_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                                <field name="property_account_expense_id" options="{'no_open': True,'no_create':True}" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_uniform_variant_search" model="ir.ui.view">
            <field name="name">uniform.variant.search</field>
            <field name="model">product.product</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Uniform Variant">
                    <field name="name" select="True"/>
                    <group expand="0" string="Group By">
                        <filter name="name" string="Name" domain="[]" context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="uniform_variant_action" model="ir.actions.act_window">
            <field name="name">Uniform Variants</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">[('select_type','=','uniform')]</field>
            <field name="context">{"default_select_type":'uniform'}</field>
            <field name="search_view_id" ref="view_uniform_variant_search"/>
            <field name="view_ids" eval="[(5, 0, 0),
                            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_uniform_variant_tree')}),
                            (0, 0, {'view_mode': 'form', 'view_id': ref('view_uniform_variant_form')})]"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new Uniform Variants.
              </p>
            </field>
        </record>

    </data>
</odoo>