<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="view_pappaya_lead_course_tree" model="ir.ui.view">
			<field name="name">pappaya.lead.course.tree</field>
			<field name="model">pappaya.lead.course</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Lead Course">
					<field name="record_id"/>
					<field name="name" />
					<field name="description" />
				</tree>
			</field>
		</record>

		<record id="view_pappaya_lead_course_form" model="ir.ui.view">
			<field name="name">pappaya.lead.course.form</field>
			<field name="model">pappaya.lead.course</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Lead Course">
					<sheet>
						<group>
							<group>
								<field name="name" required="1"/>
								<field name="description"/>
							</group>
							<group>
								<field name="record_id" invisible="1"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_pappaya_lead_course_search" model="ir.ui.view">
			<field name="name">pappaya.lead.course.search</field>
			<field name="model">pappaya.lead.course</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Lead Course">
					<field name="name"/>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_pappaya_lead_course_view">
			<field name="name">Lead Course</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">pappaya.lead.course</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_pappaya_lead_course_search" />
			<field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Lead Course.
                </p>
            </field>
		</record>

	</data>
</odoo>