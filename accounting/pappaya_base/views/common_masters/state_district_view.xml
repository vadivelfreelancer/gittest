<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_state_district_tree" model="ir.ui.view">
            <field name="name">state.district.tree</field>
            <field name="model">state.district</field>
            <field name="arch" type="xml">
                <tree string="Districts">
                    <field name="record_id" invisible="1"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state_id"/>
                    <field name="country_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_state_district_form" model="ir.ui.view">
            <field name="name">state.district.form</field>
            <field name="model">state.district</field>
            <field name="arch" type="xml">
                <form string="District">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="state_id" required="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="ip_address" invisible="1"/>
                                <field name="ap_nonap" invisible="1"/>
                                <field name="area_slno" invisible="1"/>
                                <field name="short_name" invisible="1"/>
                                <field name="record_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="code" required="1"/>
                                <field name="description"/>
                                <field name="country_id" invisible="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="short_name1" invisible="1"/>
                                <field name="is_update" invisible="1"/>
                                <field name="is_feelock" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_state_district_action_view" model="ir.actions.act_window">
            <field name="name">District</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">state.district</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_state_district_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_state_district_form')})]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new District.
                </p>
            </field>
        </record>

    </data>
</odoo>
