<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_pappaya_deduction_tree" model="ir.ui.view">
            <field name="name">pappaya.deduction.tree</field>
            <field name="model">pappaya.deduction</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Deduction">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_pappaya_deduction_form" model="ir.ui.view">
            <field name="name">pappaya.deduction.form</field>
            <field name="model">pappaya.deduction</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Deduction">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pappaya_deduction_search" model="ir.ui.view">
            <field name="name">pappaya.deduction.search</field>
            <field name="model">pappaya.deduction</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Deduction">
                    <field name="name" select="True"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_pappaya_deduction_view">
            <field name="name">Deduction</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pappaya.deduction</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pappaya_deduction_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Deduction.
                </p>
            </field>
        </record>

    </data>
</odoo>