<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="view_pappaya_country_tree" model="ir.ui.view">
			<field name="name">res.country.tree</field>
			<field name="model">res.country</field>
			<field name="arch" type="xml">
				<tree string="Country" create="false">
					<field name="name"/>
					<field name="code"/>
					<field name="phone_code"/>
					<field name="is_active"/>
				</tree>
			</field>
		</record>

		<record id="view_pappaya_country_form" model="ir.ui.view">
			<field name="name">res.pappaya.country.form</field>
			<field name="model">res.country</field>
			<field name="arch" type="xml">
				<form string="Country" create="false">
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="code"/>
							</group>
							<group>
								<field name="phone_code"/>
								<field name="is_active"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_pappaya_country_view" model="ir.actions.act_window">
			<field name="name">Country</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.country</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_pappaya_country_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_pappaya_country_form')})]" />
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new Country.
				</p>
			</field>
		</record>

	</data>
</odoo>
