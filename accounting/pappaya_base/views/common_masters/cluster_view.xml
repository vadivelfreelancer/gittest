<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="view_pappaya_cluster_tree" model="ir.ui.view">
            <field name="name">pappaya.cluster.tree</field>
            <field name="model">pappaya.cluster</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Cluster">
                    <field name="name"/>
                    <field name="academic_year_id"/>
                </tree>
            </field>
        </record>

        <record id="view_pappaya_cluster_form" model="ir.ui.view">
            <field name="name">pappaya.cluster.form</field>
            <field name="model">pappaya.cluster</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Cluster">
                    <sheet>
                        <group>
                        	<group>
                        		<field name="name" required="1"/>
                        		<field name="state_ids_m2m" widget="many2many_tags" options="{'no_create':True}" required="1"/>
                        	</group>
                        	<group>
                        		<field name="academic_year_id" options="{'no_open':True,'no_create':True}" readonly="1"/>
                        	</group>
                        </group>
                       	<group>
                            <field name="district_ids_m2m" string="Districts" options="{'no_create':True}" domain="[('state_id','in',state_ids_m2m)]" required="1">
                            	<tree editable="bottom">
                            		<field name="name"/>
                            		<field name="code"/>
                            		<field name="state_id"/>
                            	</tree>
                            </field>
                            <field name="description" placeholder="Add a description.."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="view_pappaya_cluster_search" model="ir.ui.view">
            <field name="name">pappaya.cluster.search</field>
            <field name="model">pappaya.cluster</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Cluster">
                    <field name="name" select="True"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_pappaya_cluster_view">
            <field name="name">Cluster</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pappaya.cluster</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pappaya_cluster_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new Cluster.
                </p>
            </field>
        </record>


    </data>
</odoo>