<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Employees -> Configuration -> Bank Accounts-->
	
		<record id="base.view_partner_bank_tree" model="ir.ui.view">
            <field name="name">res.partner.bank.tree.pappaya.inherit</field>
            <field name="model">res.partner.bank</field>
            <field name="arch" type="xml">
                <tree string="Bank account">
	                <field name="bank_id" required="1" options="{'no_open': True,'no_create':True}"/>
	                <field name="bic" string="Bank Identifier Code" readonly="1"/>
	                <field name="ifsc_no" required="1"/>
	                <field name="acc_number" required="1"/>
	                <field name="bank_acc_branch_id" required="1" options="{'no_open': True,'no_create':True}"/>
	        	</tree>
            </field>
        </record>
        
        <record id="base.view_partner_bank_form" model="ir.ui.view">
            <field name="name">res.partner.bank.form.pappaya.inherit</field>
            <field name="model">res.partner.bank</field>
            <field name="arch" type="xml">
                <form string="Bank account" delete="false" duplicate="false">
                    <sheet>
                        <group>
                            <group string="Bank Details">
                                <field name="bank_id" required="1" options="{'no_open': True,'no_create':True}"/>
                                <field name="bic" string="Bank Identifier Code" readonly="1"/>
                                <field name="ifsc_no" />
                                <field name="acc_number" required="1"/>
                                <field name="bank_acc_branch_id" required="1" options="{'no_open': True,'no_create':True}"/>
                            </group>
                            <!-- <group string="Employee Details">
                                <field name="emp_id" options="{'no_open': True,'no_create':True}" readonly="1"  />
                                <field name="department_id" readonly="1" options="{'no_open': True,'no_create':True}" />
                                <field name="job_id" readonly="1" options="{'no_open': True,'no_create':True}" />
                                <field name="company_id" string='School' groups="base.group_no_one" readonly="1"
                                    invisible="1" options="{'no_open': True,'no_create':True}"/>
                            </group> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="base.view_res_bank_form" model="ir.ui.view">
            <field name="name">res.bank.form.inherit</field>
            <field name="model">res.bank</field>
            <field name="arch" type="xml">
                <form string="Bank" duplicate="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Bank Name"/>
                                <field name="bic" string="Code" required="1"/>
                                <field name="is_payroll_bank"/>
                            </group>
                            <group>
                                <field name="office_type_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="ifsc_code_prefix" required="1"/>
                                <field name="account_number_length" required="1"/>
                            </group>
                            <group string="Address">
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Address..." class="o_address_street"/>
                                    <field name="street2" placeholder="Address 2..." class="o_address_street"/>
                                    <field name="state" class="o_address_state" placeholder="State" domain="[('country_id','=',country)]" options='{"no_open": True, "no_create": True}'/>
                                    <field name="district_id" class="o_address_state" placeholder="District" options="{'no_open': True,'no_create':True}" domain="[('state_id','=',state)]" />
                                    <field name="city" class="o_address_state" placeholder="City" options="{'no_open': True,'no_create':True}" domain="[('district_id','=',district_id)]" />
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                </div>
                            </group>
                            <group string="Communication">
                                <field name="email" widget="email"/>
                                <field name="mobile"/>
                                <field name="phone"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="base.view_res_bank_tree" model="ir.ui.view">
            <field name="name">res.bank.tree</field>
            <field name="model">res.bank</field>
            <field name="arch" type="xml">
                <tree string="Banks">
                    <field name="name" string="Bank Name"/>
                    <field name="bic"/>
                    <field name="is_payroll_bank" string="Payroll Bank"/>
                    <field name="country"/>
                </tree>
            </field>
        </record>
	
	</data>
</odoo>
