        <!-- Res country Update -->
        
		<record id="view_pappaya_branch_form_inherit" model="ir.ui.view">
            <field name="name">res.pappaya.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="view_pappaya_branch_form"/>
            <field name="arch" type="xml">
	            <xpath expr="//form/sheet/group/group[2]" position="after">
	                 <group string="Geo Location">
	                 	<field name="state_id" options="{'no_open': True,'no_create':True}"/>
	                 	<field name="state_district_id" domain="[('state_id','=',state_id)]" options="{'no_open': True,'no_create':True}"/>
	                 	<field name="pappaya_division_id" attrs="{'invisible':[('state_district_id','=',False)]}" options="{'no_open': True,'no_create':True}"/>
	              	<!-- Note : There is not relation in division and mandal.I don't know what is the use of mandal_ids_m2m field in division model.
	              				We need to map the relation of division and mandal by adding any field in maldal or division model. -->
	              	<field name="pappaya_mandal_id" 
	              			domain="[('state_id','=',state_id),('district_id','=',state_district_id)]" 
	              			attrs="{'invisible':[('pappaya_division_id','=',False)]}" options="{'no_open': True,'no_create':True}"/>
	              	<!-- ('division_id','=',pappaya_division_id) Need to discuss and add this field. 
	              			Need to confirm whethe we use pappaya.mandal or pappaya.mandal.marketing model-->
	              </group>
	            </xpath>
                <xpath expr="//form/sheet/notebook/page[@name='device']" position="after">
                    <page string="Dhobi Provider" attrs="{'invisible': [('student_type','=','day')],'required': [('student_type','!=','day')]}">
                        <field name="dhobi_provider_ids" domain="[('state_id','=',state_id),('district_id','=',state_district_id)]">
                            <tree>
                                <field name="name" options="{'no_open': True,'no_create':True}" string="Dhobi Provider Name"/>
                                <field name="pickup_date"/>
                                <field name="delivery_date"/>
                                <field name="head_count"/>
                                <field name="used_count"/>
                                <field name="opinion"/>
                                <field name="remarks"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
        	</field>
        </record>
        
	</data>
</odoo>