	                        	<field name="district_id" options="{'no_open': True,'no_create':True}" required="1"
	                        			domain="[('state_id','=',state_id)]"/>
	                        	<field name="city_id" options="{'no_open': True,'no_create':True}" required="1"
	                        			domain="[('district_id','=',district_id)]"/>
	                        	<field name="ward_id" options="{'no_open': True,'no_create':True}" required="1"
