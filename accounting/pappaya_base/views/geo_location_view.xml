<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		<!-- Import file template -->
		<record id="view_import_address_template_tree" model="ir.ui.view">
            <field name="name">view.import.address.template.tree</field>
            <field name="model">address.import.template</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Template">
                    <field name="name"/>
                    <field name="file_name"/>
                </tree>
            </field>
        </record>

        <record id="view_import_address_template_form" model="ir.ui.view">
            <field name="name">view.import.address.template.tree</field>
            <field name="model">address.import.template</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Template">
                    <sheet>
                    	<group>
	                        <group>
	                            <field name="name" required="1"/>
	                            <field name="file" filename="file_name"/>
	                            <field name="file_name"/>
	                        </group>
	                        <group/>	
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_address_import_template">
            <field name="name">Address Import Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">address.import.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_import_address_template_tree"/>
            <field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new Address Import Template.
				</p>
			</field>
        </record>		
		
				<!-- Begin : region -->
		<record id="view_pappaya_region_tree" model="ir.ui.view">
            <field name="name">pappaya.region.tree</field>
            <field name="model">pappaya.region</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="region">
                    <field name="name"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>

        <record id="view_pappaya_region_form" model="ir.ui.view">
            <field name="name">pappaya.region.form</field>
            <field name="model">pappaya.region</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="region">
                    <sheet>
                    	<group>
	                        <group>
	                            <field name="name" required="1"/>
	                            <field name="state_id" widget="many2many_tags" options="{'no_open': True,'no_create':True}" required="1"/>
	                        </group>
	                        <group/>	
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_pappaya_region_search" model="ir.ui.view">
            <field name="name">pappaya.region.search</field>
            <field name="model">pappaya.region</field>
            <field name="arch" type="xml">
                <search string="region">
                    <field name="name" />
                    <separator />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_pappaya_region_view">
            <field name="name">Region</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pappaya.region</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pappaya_region_search"/>
            <field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a new region.
				</p>
			</field>
        </record>
        <!-- End : region -->
	
	
		<!-- Begin : City -->
		<record id="view_pappaya_city_tree" model="ir.ui.view">
            <field name="name">pappaya.city.tree</field>
            <field name="model">pappaya.city</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="City">
                   	<field name="record_id" invisible="1"/>
                    <field name="name"/>
                    <field name="district_id"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>

        <record id="view_pappaya_city_form" model="ir.ui.view">
            <field name="name">pappaya.city.form</field>
            <field name="model">pappaya.city</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="City">
                    <sheet>
                    	<group>
	                        <group>
	                        	<field name="state_id" options="{'no_open': True,'no_create':True}" required="1"/>
	                        	<field name="district_id" domain="[('state_id','=',state_id)]" options="{'no_open': True,'no_create':True}" required="1"/>
	                            <field name="name" required="1"/>
	                            <field name="record_id" invisible="1"/>
	                        </group>
	                        <group/>	
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_pappaya_city_search" model="ir.ui.view">
            <field name="name">pappaya.city.search</field>
            <field name="model">pappaya.city</field>
            <field name="arch" type="xml">
                <search string="City">
                    <field name="name" />
                    <field name="district_id"/>
                    <separator />
                    <group expand="0" string="Group By...">
                    	<filter name="group_by_state_id" string="State" context="{'group_by':'state_id'}"/>
                        <filter name="group_by_district_id" string="District" context="{'group_by':'district_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_pappaya_city_view">
