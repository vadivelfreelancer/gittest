					Click to add a new City.
				</p>
			</field>
        </record>
        <!-- End : City -->
        
        <!-- Begin : Mandal -->
        <record id="view_pappaya_mandal_marketing_tree" model="ir.ui.view">
            <field name="name">pappaya.mandal.marketing.tree</field>
            <field name="model">pappaya.mandal.marketing</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Mandal">
                	<field name="record_id" invisible="1"/>
                    <field name="name"/>
                    <field name="district_id"/>
                    <field name="state_id"/>
                </tree>
            </field>
        </record>

        <record id="view_pappaya_mandal_marketing_form" model="ir.ui.view">
            <field name="name">pappaya.mandal.marketing.form</field>
            <field name="model">pappaya.mandal.marketing</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Mandal">
                    <sheet>
                    	<group>
	                        <group>
	                        	<field name="state_id" options="{'no_open': True,'no_create':True}" required="1"/>
	                        	<field name="district_id" options="{'no_open': True,'no_create':True}" required="1"
	                        			domain="[('state_id','=',state_id)]" />
	                            <field name="name" required="1"/>
	                            <field name="record_id" invisible="1"/>
                                <field name="taluka_slno"/>
                                <field name="disthead_slno"/>
                                <field name="user_slno"/>
	                        </group>
                            <group>
                                <field name="description"/>
                                <field name="status"/>
                                <field name="strength"/>
                                <field name="population"/>
                                <field name="city_slno"/>
                                <field name="is_update"/>
                            </group>
	                        <group/>	
                        </group>
                        <notebook>
                        	<page string="Population">
                        		<field name="population_ids">
                        			<tree editable="bottom">
										<field name="mandal_id" invisible="1"/>
		                        		<field name="year"/>
		                        		<field name="population"/>
		                        		<field name="is_active" invisible="1"/>
                        			</tree>
                        		</field>
                        	</page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_pappaya_mandal_marketing_search" model="ir.ui.view">
            <field name="name">pappaya.mandal.marketing.search</field>
            <field name="model">pappaya.mandal.marketing</field>
            <field name="arch" type="xml">
                <search string="Mandal">
                    <field name="name" />
                    <field name="district_id"/>
                    <field name="state_id"/>
                    <separator />
                    <group expand="0" string="Group By...">
                    	<filter name="group_by_state_id" string="State" context="{'group_by':'state_id'}"/>
                        <filter name="group_by_district_id" string="District" context="{'group_by':'district_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_pappaya_mandal_marketing_view">
            <field name="name">Mandal</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pappaya.mandal.marketing</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pappaya_mandal_marketing_search"/>
            <field name="help" type="html">
