<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="academic_year_tree_view" model="ir.ui.view">
			<field name="name">academic.year.tree</field>
			<field name="model">academic.year</field>
			<field name="arch" type="xml">
				<tree string="Academic Year">
					<field name="name" default_focus="1"/>
					<field name="is_active"/>
					<field name="start_date"/>
					<field name="end_date"/>
				</tree>
			</field>
		</record>

		<record id="academic_year_form_view" model="ir.ui.view">
			<field name="name">academic.year.form</field>
			<field name="model">academic.year</field>
			<field name="arch" type="xml">
				<form string="Academic Year">
					<sheet string="Academic Year">
                        <group string="Duration Details">
                            <group>
                            	<field name="start_date" required="1"/>
								<field name="end_date" required="1"/>
								<field name="name" readonly ="1"/>
                            </group>
                            <group>
								<field name="is_active"/>
								<field name="is_next_academic_year"/>
								<field name="description"/>
                            </group>
                        </group>
                        <!-- <notebook>
                        	<page string="Branch Details">
								<group>
									<field name="school_id" domain="[('type','=','branch')]" options="{'no_open': True,'no_create':True}" invisible="1" />
									<field name="all_branches"/>
									<field name="school_ids" required="1" widget="many2many_tags" domain="[('type','=','branch')]" options="{'no_open': True,'no_create':True}"/>
									<newline/>
									<button string="Update Academic Year" type="object" name="update_academic_year" class="oe_highlight"/>
								</group>
                        	</page>
                        </notebook> -->
					</sheet>
				</form>
			</field>
		</record>

		<record id="academic_year_action" model="ir.actions.act_window">
			<field name="name">Academic Year</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">academic.year</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to configure a new Academic Year.
				</p>
			</field>
		</record>

	</data>
</odoo>
