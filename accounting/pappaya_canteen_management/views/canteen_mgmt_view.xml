<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_pappaya_canteen_mgmt_tree" model="ir.ui.view">
            <field name="name">pappaya_canteen_mgmt.tree</field>
            <field name="model">pappaya.canteen.mgmt.billing</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Canteen Management">
                    <field name="sequence"/>
                    <field name="student_id"/>
                    <field name="total_amount"/>
                </tree>
            </field>
        </record>

        <record id="view_pappaya_canteen_mgmt_form" model="ir.ui.view">
            <field name="name">pappaya_canteen_mgmt.form</field>
            <field name="model">pappaya.canteen.mgmt.billing</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Canteen Management">
                    <header>
                        <button string="Verify RFID" class="oe_highlight" attrs="{'invisible': ['|',('status','=','done'),('is_rfid_verified','=',True)]}" type="object" name="verify_rfid_and_finger_print"/>
                        <button string="Verify FingerPrint" attrs="{'invisible': ['|',('status','=','done'),('is_rfid_verified','!=',True)]}" type="object" name="verify_fingerprint"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="sequence" readonly="1"/>
                            <field name="student_id" />
                            <field name="is_rfid_verified" invisible="1" />
                            <field name="is_fingerprint_verified" invisible="1"/>
                        </group>
                        <group>
                            <field name="billing_line_o2m_id" nolabel="1">
                                <tree string="Products" editable="bottom">
                                    <field name="product_id" required="1" />
                                    <field name="amount"/>
                                    <field name="quantity"/>
                                    <field name="sum_amount"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="total_amount" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pappaya_canteen_mgmt_search" model="ir.ui.view">
            <field name="name">pappaya_canteen_mgmt.search</field>
            <field name="model">pappaya.canteen.mgmt.billing</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Canteen Management">
                    <field name="sequence" select="True"/>
                    <field name="student_id" select="True"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_pappaya_canteen_mgmt_view">
            <field name="name">Canteen Management</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pappaya.canteen.mgmt.billing</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pappaya_canteen_mgmt_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_pappaya_canteen_mgmt_view_form">
            <field name="act_window_id" ref="act_open_pappaya_canteen_mgmt_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_pappaya_canteen_mgmt_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_pappaya_canteen_mgmt_view_tree">
            <field name="act_window_id" ref="act_open_pappaya_canteen_mgmt_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_pappaya_canteen_mgmt_tree"/>
        </record>
        

        
        
        
    </data>
</odoo>