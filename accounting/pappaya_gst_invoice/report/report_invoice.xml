<odoo>
	<data>
        <template id="wk_report_account_invoice_inherit" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@class='clearfix']" position="after">
                <div class="row" t-if="len(o.tax_line_ids) > 1">
                    <div class="col-xs-6">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>HSN</th>
                                    <th>Tax</th>
                                    <th class="text-right">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.tax_line_ids" t-as="t">
                                    <td><span t-field="t.hsn_code"/></td>
                                    <td><span t-field="t.tax_id.description"/></td>
                                    <td class="text-right">
                                        <span t-field="t.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </xpath>
            <!-- <xpath expr="//div[@class='col-xs-6']//table[@class='table table-condensed']//tbody//tr//td[1]" position="before">
                <td><span t-field="t.hsn_code"/></td>
            </xpath> -->
        </template>
  </data>
</odoo>
