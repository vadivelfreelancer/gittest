    <record id="bulk_update_menu_action" model="ir.actions.act_window">
        <field name="name">Bulk Update</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bulk.update</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="bulk_update_sub_menu"
      name="Bulk Upload"
      parent="academic_main_menu"
      sequence="205"
      action="bulk_update_menu_action"/>

</odoo>