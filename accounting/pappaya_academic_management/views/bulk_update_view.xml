<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="bulk_update_view_form" model="ir.ui.view">
        <field name="name">result.upload.view.form</field>
        <field name="model">bulk.update</field>
        <field name="arch" type="xml">
            <form string="Lock">

                    <group>
                        <group>
                            <field name="academic_year"/>
                        </group>
                        <group>
                            <field name="institution_type"/>
                        </group>
                    </group>
                    <separator string="Bulk Update"/>
                    <group>
                        <group>
                            <field name="type"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="from_subbatch" attrs="{'invisible': [('type', '=', 'exam_target')]}"/>
                            <field name="from_exam" attrs="{'invisible': [('type', '=', 'sub_batch')]}"/>

                        </group>
                        <group>
                            <field name="to_subbatch" attrs="{'invisible': [('type', '=', 'exam_target')]}"/>
                            <field name="to_exam" attrs="{'invisible': [('type', '=', 'sub_batch')]}"/>
                        </group>
                    </group>

                    <div style="text-align:center">
                        <button special="save" class="oe_highlight" string="Upload File"/>
                    </div>

            </form>
        </field>
    </record>

