<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <record id="student_section_map_batch_view_form" model="ir.ui.view">
        <field name="name">student.section.batch.view.form</field>
        <field name="model">student.section.map</field>
        <field name="arch" type="xml">
            <form string="Student Section Map(Batch Mode)">
<!--                <sheet>-->
                    <group>
                        <group>
                            <field name="academic_year"/>
                        </group>
                        <group>
                            <field name="institution_type"/>
                        </group>
                    </group>
                    <separator string="Student Section(Details)"/>
                    <group>
                        <group>
                            <field name="exam_branch"/>
                            <field name="group"/>
                            <field name="course"/>
                            <field name="batch"/>
                        </group>
                        <group>
                            <field name="medium"/>
                            <field name="student_type"/>
                            <field name="gender"/>
                            <field name="section"/>
                        </group>
                    </group>
                    <div style="text-align:center">
                        <button special="save" class="oe_highlight" string="Search"/>
                    </div>
                <group>
                    <field name="section"/>
                    <field name="date"/>
                </group>
                <field name="student_section_map_line_ids" >
                    <tree editable="bottom">
                        <field name="admission_no"/>
                        <field name="student_name"/>
                        <field name="section"/>
                        <field name="exam_branch"/>
                        <field name="branch"/>
                        <field name="course"/>
                        <field name="group"/>
                        <field name="batch"/>
                        <field name="medium"/>
                        <field name="gender"/>
                        <field name="student_type"/>
                    </tree>
                </field>
                                                        <footer>
                    <button special="save" class="oe_highlight" string="Save"/>
                    <button special="cancel" class="oe_highlight" string="Cancel"/>
                </footer>



<!--                </sheet>-->
            </form>
        </field>
    </record>

    <record id="student_section_map_batch_menu_action" model="ir.actions.act_window">
        <field name="name">Student Section Map(Batch Mode)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.section.map</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="student_section_map_batch_view_form"/>
        <field name="target">new</field>
    </record>





    <record id="student_section_map_view_form" model="ir.ui.view">
        <field name="name">student.section.map.view.form</field>
        <field name="model">student.section.map</field>
        <field name="arch" type="xml">
            <form string="Student Section Map">
<!--                <sheet>-->
                    <group>
                        <group>
                            <field name="academic_year"/>
                        </group>
                        <group>
                            <field name="institution_type"/>
                        </group>
                    </group>
                    <separator string="Student Section(Details)"/>
                    <group>
                        <group>
                            <field name="exam_branch"/>
                            <field name="group"/>
                            <field name="course"/>
                            <field name="batch"/>
                        </group>
                        <group>
                            <field name="medium"/>
                            <field name="student_type"/>
                            <field name="gender"/>
                            <field name="section"/>
                        </group>
                    </group>
                    <div style="text-align:center">
                        <button special="save" class="oe_highlight" string="Search"/>
                    </div>
                <field name="student_section_map_line_ids" string="Student Section Map(Single Mode)">
                    <tree>
                        <field name="admission_no"/>
                        <field name="student_name"/>
                        <field name="section"/>
                        <field name="exam_branch"/>
                        <field name="branch"/>
                        <field name="course"/>
                        <field name="group"/>
                        <field name="batch"/>
                        <field name="medium"/>
                        <field name="gender"/>
                        <field name="student_type"/>
                    </tree>
                    <form string="Student Section Map(Single Mode)">
                        <group>

                            <group>
                                <field name="exam_branch"/>
                                <field name="group"/>
                                <field name="medium"/>
                                <field name="gender"/>
                            </group>
                            <group>
                                <field name="course"/>
                                <field name="batch"/>
                                <field name="student_type"/>
                            </group>
                        </group>
                        <div style="text-align:center">
                            <button special="save" class="oe_highlight" string="Search"/>
                        </div>
                        <group>
                            <field name="section"/>
                            <field name="student_name"/>
                        </group>
                                        <footer>
                    <button special="save" class="oe_highlight" string="Save"/>
                    <button special="cancel" class="oe_highlight" string="Cancel"/>
                </footer>

                    </form>
                </field>
                <div style="text-align:center;">

                        <button string="Batch Mode" class="oe_highlight" type="action"
                                name="%(pappaya_academic_management.student_section_map_batch_menu_action)d"
                                />
                        <button string="Batch Update" class="oe_highlight" type="action"
                                name="%(pappaya_academic_management.student_section_map_batch_menu_action)d"
                                />
                    </div>


<!--                </sheet>-->
            </form>
        </field>
    </record>

    <record id="student_section_map_view_tree" model="ir.ui.view">
        <field name="name">student.section.map.view.tree</field>
        <field name="model">student.section.map</field>
        <field name="arch" type="xml">
            <tree string="Subject Order">
                <field name="academic_year"/>
                <!--<field name="pre_course"/>-->
            </tree>
        </field>
    </record>

    <record id="student_section_map_menu_action" model="ir.actions.act_window">
        <field name="name">Student Section Map</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.section.map</field>
        <field name="view_mode">form</field>
