<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sections_view_view_form" model="ir.ui.view">
        <field name="name">pappaya.sections.view.form</field>
        <field name="model">pappaya.sections</field>
        <field name="arch" type="xml">
            <form string="Sections">
                <sheet>
                    <group>
                        <group>
                            <field name="section"/>
                            <field name="academic_year"/>
                            <field name="course"/>
                        </group>
                        <group>
                            <field name="institution_type"/>
                            <field name="batch"/>
                            <field name="group"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sections_view_view_tree" model="ir.ui.view">
        <field name="name">pappaya.sections.view.tree</field>
        <field name="model">pappaya.sections</field>
        <field name="arch" type="xml">
            <tree string="Sections">
                <field name="section"/>
                <field name="academic_year"/>
                <field name="course"/>
                <field name="batch"/>
                <field name="institution_type"/>
                <field name="group"/>
            </tree>
        </field>
    </record>

    <record id="sections_view_only_action" model="ir.actions.act_window">
        <field name="name">Sections</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pappaya.sections</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>