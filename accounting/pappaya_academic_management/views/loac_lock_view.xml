<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="lock_lock_view_form" model="ir.ui.view">
        <field name="name">lock.lock.view.form</field>
        <field name="model">lock.lock</field>
        <field name="arch" type="xml">
            <form string="Lock">
<!--                <sheet>-->
                    <group>
                        <group>
                            <field name="academic_year"/>
                        </group>
                        <group>
                            <field name="institution_type"/>
                        </group>
                    </group>
                    <separator string="Lock"/>
                    <group>
                        <field name="sub_batch"/>
                        <field name="sub_section"/>
                        <field name="hyd_dn"/>
                        <field name="adoni"/>
                    </group>
                    <div style="text-align:center">
                        <button special="save" class="oe_highlight" string="Save"/>
                    </div>
<!--                </sheet>-->
            </form>
        </field>
    </record>

    <record id="lock_lock_view_tree" model="ir.ui.view">
        <field name="name">lock.lock.view.tree</field>
        <field name="model">lock.lock</field>
        <field name="arch" type="xml">
            <tree string="Subject Order">
                <field name="sub_batch"/>
                <field name="sub_section"/>
                <field name="hyd_dn"/>
                <field name="adoni"/>
            </tree>
        </field>
    </record>

    <record id="lock_lock_menu_action" model="ir.actions.act_window">
        <field name="name">Lock</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lock.lock</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="lock_lock_sub_menu"
      name="Lock"
      parent="academic_main_menu"
      sequence="280"
      action="lock_lock_menu_action"/>

</odoo>