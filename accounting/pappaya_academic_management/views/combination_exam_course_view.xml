<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="combination_exam_course_view_form" model="ir.ui.view">
        <field name="name">combination.exam.course.view.form</field>
        <field name="model">combination.exam.course</field>
        <field name="arch" type="xml">
            <form string="Combination Exam Course">
                <sheet>
                    <group>
                        <field name="institution_type"/>
                    </group>
                    <separator string="Combination Exam Course"/>
                    <group>
                        <group>
                            <field name="exam_course"/>
                        </group>
                        <group>
                            <field name="mapping"/>
                        </group>
                    </group>
                    <div class="col-xs-12">
                        <div class="col-xs-5">
                            <field name="combination_keys" nolabel="1">
                                <tree create="false">
                                    <field name="name" string="Combination Keys"/>
                                </tree>
                            </field>
                        </div>
                        <div class="btn-group-vertical col-xs-2">
                            <button name="" type="object" class="oe_highlight" string="&gt;"/>
                            <button name="" type="object" class="oe_highlight" style="margin-top:5px" string="&gt;&gt;"/>
                            <button name="" type="object" class="oe_highlight" style="margin-top:5px" string="&lt;"/>
                            <button name="" type="object" class="oe_highlight" style="margin-top:5px" string="&lt;&lt;"/>
                        </div>
                        <div class="col-xs-5">
                            <field name="selected_combinations" nolabel="1">
                                <tree create="false">
                                    <field name="name" string="Selected"/>
                                </tree>
                            </field>
                        </div>

                    </div>
                    <div style="text-align:center">
                        <button special="cancel" class="oe_highlight" string="Save"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="combination_exam_course_action" model="ir.actions.act_window">
        <field name="name">Combination Exam Course</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">combination.exam.course</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="combination_exam_course_sub_menu" name="Combination Exam Course" parent="academic_main_menu"
              action="combination_exam_course_action" sequence="416"/>
</odoo>