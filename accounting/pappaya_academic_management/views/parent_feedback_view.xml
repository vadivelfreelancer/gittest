    <record id="parent_feedback_view_tree" model="ir.ui.view">
        <field name="name">parent.feedback.view.tree</field>
        <field name="model">parent.feedback</field>
        <field name="arch" type="xml">
            <tree string="VC Parent Phone Enquiry">
