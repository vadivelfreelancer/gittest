    <record id="parent_feedback_menu_action" model="ir.actions.act_window">
        <field name="name">VC Parent Phone Enquiry</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">parent.feedback</field>
        <field name="view_mode">form</field>
