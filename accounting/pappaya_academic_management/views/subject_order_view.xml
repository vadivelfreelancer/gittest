<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="subject_order_view_form" model="ir.ui.view">
        <field name="name">subject.order.view.form</field>
        <field name="model">subject.order</field>
        <field name="arch" type="xml">
            <form string="Subject Order">
                <!--                <sheet>-->
                <group>
                    <group>
                        <field name="academic_year"/>
                    </group>
                    <group>
                        <field name="institution_type"/>
                    </group>
                </group>
                <separator string="Subject Order Entry"/>
                <field name="subject_type_collage" attrs="{'invisible':[('institution_type', '!=', 'college')]}">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="rep_order"/>
                        <field name="jr_order"/>
                        <field name="sr_order"/>
                        <field name="ssc_order"/>
                    </tree>
                </field>
                <field name="subject_type_school" attrs="{'invisible':[('institution_type', '!=', 'school')]}">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="rep_order"/>
                    </tree>
                </field>
                <div style="text-align:center">
                    <button special="save" class="oe_highlight" string="Save"/>
                </div>
                <!--                </sheet>-->
            </form>
        </field>
    </record>

    <record id="subject_order_view_tree" model="ir.ui.view">
        <field name="name">subject.order.view.tree</field>
        <field name="model">subject.order</field>
        <field name="arch" type="xml">
            <tree string="Subject Order">
                <field name="academic_year"/>
                <field name="institution_type"/>
            </tree>
        </field>
    </record>

    <record id="subject_order_menu_action" model="ir.actions.act_window">
        <field name="name">Subject Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">subject.order</field>
        <field name="view_mode">form</field>
        <!--        <field name="target">inline</field>-->
    </record>
</odoo>