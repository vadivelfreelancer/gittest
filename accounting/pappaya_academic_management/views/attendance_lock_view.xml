<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="attendance_lock_view_form" model="ir.ui.view">
        <field name="name">attendance.lock.view.form</field>
        <field name="model">attendance.lock</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="academic_year"/>
                        <field name="institution_type"/>
                    </group>
                    <separator string="Academic Attendance Status"/>
                    <group>
                        <field name="academic_year"/>
                    </group>
                    <div style="text-align:center">
                        <label for="select_all"/>
                        <field name="select_all"/>
                    </div>
                    <group>
                        <field name="courses" widget="many2many_checkboxes" class="oe_inline" nolabel="1"/>
                    </group>

                    <div style="text-align:center">
                        <button special="cancel" class="oe_highlight" string="Save"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="attendance_lock_action" model="ir.actions.act_window">
        <field name="name">Academic Attendance Status</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">attendance.lock</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="academics_root_menu"
              name="Academics"
              sequence="2"/>

    <menuitem id="attendance_sub_menu"
              name="Attendance"
              parent="academics_root_menu"
              sequence="1"/>

    <menuitem id="attendance_lock_sub_menu"
              name="Attendance Lock"
              parent="pappaya_academic_management.attendance_sub_menu"
              action="attendance_lock_action"
              sequence="1"/>

</odoo>
