<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="branch_mapping_with_division_view_form" model="ir.ui.view">
        <field name="name">branch.mapping.with.division.view.form</field>
        <field name="model">branch.mapping.with.division</field>
        <field name="arch" type="xml">
            <form string="Subject Order">
<!--                <sheet>-->
                    <group>
                        <group>
                            <field name="academic_year"/>
                        </group>
                        <group>
                            <field name="institution_type"/>
                        </group>
                    </group>
                    <separator string="Branch Mapping With Division"/>
                    <group col="6">
                        <field name="state"/>
                        <field name="district"/>
                        <field name="division"/>
                    </group>
                <group>
                    <group>
                        <field name="branch_search"/>
                    </group>
                    <group>
                        <div style="text-align:left">
                            <button special="save" class="oe_highlight" string="Search"/>
                        </div>
                    </group>
                </group>
                    <field name="mapping_lines">
                        <tree editable="bottom">
                            <field name="exam_branch"/>
                            <field name="division"/>
                            <field name="zone"/>
                            <field name="do"/>
                            <button special="save" class="oe_highlight" string="Save"/>
                        </tree>
                    </field>
                    <!--<div style="text-align:center">-->
                        <!--<button special="save" class="oe_highlight" string="Save"/>-->
                    <!--</div>-->
<!--                </sheet>-->
            </form>
        </field>
    </record>

    <record id="branch_mapping_with_division_view_tree" model="ir.ui.view">
        <field name="name">branch.mapping.with.division.view.tree</field>
        <field name="model">branch.mapping.with.division</field>
        <field name="arch" type="xml">
            <tree string="Branch Mapping With Division">
                <field name="academic_year"/>
                <field name="institution_type"/>
            </tree>
        </field>
    </record>

    <record id="branch_mapping_with_division_menu_action" model="ir.actions.act_window">
        <field name="name">Branch Mapping With Division</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">branch.mapping.with.division</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="branch_mapping_with_division_sub_menu"
      name="Branch Mapping With Division"
      parent="academic_main_menu"
      sequence="290"
      action="branch_mapping_with_division_menu_action"/>

</odoo>