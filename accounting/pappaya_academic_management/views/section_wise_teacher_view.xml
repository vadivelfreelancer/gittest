<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="section_wise_teacher_view_form" model="ir.ui.view">
        <field name="name">section.wise.class.view.form</field>
        <field name="model">section.class.teacher</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="academic_year"/>
                    <field name="institution_type"/>
                </group>
                <separator string="Section Wise Teachers Mapping"/>
                <group col="2">
                    <group>
                        <field name="exam_branch"/>
                    </group>
                    <group>
                        <button string="Search" class="oe_highlight" type="action" name="sub_batch_section_batch_go"/>
                    </group>
                </group>
                <field name="section_class_teacher_line">
                    <tree editable="bottom">
                        <field name="exam_branch_name"/>
                        <field name="course"/>
                        <field name="group_name"/>
                        <field name="batch"/>
                        <field name="section"/>
                        <field name="strn"/>
                        <field name="section_class_teacher_id"/>
                    </tree>
                </field>
                <div style="text-align:center">
                    <button special="cancel" class="oe_highlight" string="Save"/>
                </div>
            </form>
        </field>
    </record>

    <record id="section_wise_teacher_view_only_action" model="ir.actions.act_window">
        <field name="name">Section Wise Class Teacher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">section.class.teacher</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="section_wise_teacher_view_sub_menu"
          name="Section Wise Class Teacher"
          parent="academic_main_menu"
          sequence="201"
          action="section_wise_teacher_view_only_action"/>

</odoo>