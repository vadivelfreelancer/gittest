<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="university_batch_view_view_form" model="ir.ui.view">
        <field name="name">university.batch.view.form</field>
        <field name="model">university.view</field>
        <field name="arch" type="xml">
            <form string="University">
                    <group col="4">
                        <field name="academic_year"/>
                        <field name="institution_type"/>
                    </group>
                    <separator string="University"/>
                    <field name="university_lines">
                        <tree editable="bottom" create="false">
                            <field name="name"/>
                            <field name="description"/>
                        </tree>
                    </field>
                <div style="text-align:center;">
                    <button string="Single Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.university_single_mode_action)d"
                            context="{'default_academic_year': academic_year, 'default_institution_type': institution_type}"/>
                    <button style="margin-left:10px;" string="Batch Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.university_batch_mode_action)d"
                            context="{'default_academic_year': academic_year, 'default_institution_type': institution_type}"
                    />
                </div>
            </form>
        </field>
    </record>

    <record id="university_batch_view_only_action" model="ir.actions.act_window">
        <field name="name">University</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">university.view</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

        <menuitem id="university_batch_view_sub_menu"
              name="University"
              parent="academic_main_menu"
              sequence="110"
              action="university_batch_view_only_action"/>

</odoo>