<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="special_batch_view_view_form" model="ir.ui.view">
        <field name="name">sub.batch.view.view.form</field>
        <field name="model">special.batch.view</field>
        <field name="arch" type="xml">
            <form string="Special Batches">
<!--                <sheet>-->
                    <group col="4">
                        <field name="academic_year"/>
                        <field name="institution_type"/>
                    </group>
                    <separator string="Special Batches"/>
                    <field name="special_batch_lines">
                        <tree editable="bottom" create="false">
                            <field name="name"/>
                            <field name="description"/>
                        </tree>
                    </field>
<!--                </sheet>-->
                <div style="text-align:center">
                    <button string="Single Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.special_batch_line_line_type_action)d"
                            context="{'default_academic_year': academic_year, 'default_institution_type': institution_type}"/>
                    <button string="Batch Mode" class="oe_highlight" type="action"
                            style="margin-left:10px"
                            name="%(pappaya_academic_management.batch_special_batch_view_addition_action)d"
                            context="{'default_academic_year': academic_year, 'default_institution_type': institution_type}"
                    />
<!--                    <button special="cancel" string="Cancel"/>-->
                </div>
            </form>
        </field>
    </record>

    <record id="special_batch_view_only_action" model="ir.actions.act_window">
        <field name="name">Sub Batch</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">special.batch.view</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

        <menuitem id="special_batch_view_sub_menu"
              name="Special Batch"
              parent="academic_main_menu"
              sequence="100"
              action="special_batch_view_only_action"/>

</odoo>