<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="combination_view_view_form" model="ir.ui.view">
        <field name="name">combination.view.view.form</field>
        <field name="model">combination.view</field>
        <field name="arch" type="xml">
            <form string="Combinations">
<!--                <sheet>-->
                    <group col="4">
                        <field name="academic_year"/>
                        <field name="institution_type"/>
                        <field name="course"/>
                    </group>
                    <separator string="Combinations"/>
                    <field name="combination_lines">
                        <tree editable="bottom" create="false">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="exam_type"/>
                            <field name="course"/>
                            <field name="group"/>
                        </tree>
                    </field>
<!--                </sheet>-->
                <div style="text-align:center">
                    <button string="Single Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.combination_line_type_action)d"
                            context="{'default_academic_year': academic_year, 'default_institution_type': institution_type}"/>
                    <button string="Batch Mode" class="oe_highlight" type="action"
                            style="margin-left: 10px"
                            name="%(pappaya_academic_management.batch_batch_combination_view_addition_action)d"
                            context="{'default_academic_year': academic_year, 'default_institution_type': institution_type}"
                    />
<!--                    <button special="cancel" string="Cancel"/>-->
                </div>
            </form>
        </field>
    </record>

    <record id="combination_view_only_action" model="ir.actions.act_window">
        <field name="name">Combinations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">combination.view</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

        <menuitem id="combinations_sub_menu"
              name="Combinations"
              parent="academic_main_menu"
              sequence="80"
              action="combination_view_only_action"/>

</odoo>
