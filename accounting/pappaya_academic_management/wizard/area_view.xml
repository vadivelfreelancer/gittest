<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="area_batch_view_view_form" model="ir.ui.view">
        <field name="name">area.batch.view.form</field>
        <field name="model">area.view</field>
        <field name="arch" type="xml">
            <form string="Area Details">
                <group col="4">
                    <field name="academic_year"/>
                    <field name="institution_type"/>
                </group>
                <separator string="Area Details"/>
                <field name="area_lines">
                    <tree editable="bottom" create="false">
                        <field name="name"/>
                        <field name="description"/>
                    </tree>
                </field>
                <div style="text-align:center;">
                    <button string="Single Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.area_single_mode_action)d"
                            context="{'default_academic_year': academic_year,
                                  'default_institution_type': institution_type,}"/>
                    <button string="Batch Mode" class="oe_highlight" type="action"
                            style="margin-left:10px"
                            name="%(pappaya_academic_management.area_batch_view_addition_action)d"
                            context="{'default_academic_year': academic_year,
                            'default_institution_type': institution_type}"
                    />

                </div>
            </form>
        </field>
    </record>

    <record id="area_batch_view_only_action" model="ir.actions.act_window">
        <field name="name">Area</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">area.view</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="area_batch_view_sub_menu"
          name="Area"
          parent="academic_main_menu"
          sequence="150"
          action="area_batch_view_only_action"/>

</odoo>