<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sub_section_batch_view_view_form" model="ir.ui.view">
        <field name="name">sub.section.batch.view.form</field>
        <field name="model">sub.section.view</field>
        <field name="arch" type="xml">
            <form string="Sub Section">
                <group col="4">
                    <field name="academic_year"/>
                    <field name="institution_type"/>
                </group>
                <group string="Subsection Section (Details)">
                    <group>
                        <field name="character_type"/>
                    </group>
                </group>

                <field name="sub_section_lines">
                    <tree editable="bottom" create="false">
                        <field name="name"/>
                        <field name="description"/>
                    </tree>
                </field>
                <div style="text-align:center;">
                    <button string="Single Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.sub_section_single_mode_action)d"
                            context="{'default_academic_year': academic_year,
                                  'default_institution_type': institution_type,
                                  'default_character_type':character_type}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="sub_section_batch_view_only_action" model="ir.actions.act_window">
        <field name="name">Exam Course</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sub.section.view</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

        <menuitem id="sub_section_batch_view_sub_menu"
              name="Sub Section"
              parent="academic_main_menu"
              sequence="130"
              action="sub_section_batch_view_only_action"/>

</odoo>