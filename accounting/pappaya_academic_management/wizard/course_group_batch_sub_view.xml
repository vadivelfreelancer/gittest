<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="course_group_batch_subbatch_view_form" model="ir.ui.view">
        <field name="name">course.group.batch.subbatch.view.form</field>
        <field name="model">cg.batch.sb.view</field>
        <field name="arch" type="xml">
            <form>
                    <group col="4">
                        <field name="academic_year"/>
                        <field name="institution_type"/>
                    </group>
                <separator string="Course Group Batch Sub Batch"/>
                    <group col="2">
                        <group>
                            <field name="course"/>
                            <field name="batch"/>
                        </group>
                        <group>
                            <field name="group"/>
                            <button string="Go" class="oe_highlight" type="action" name="course_group_batch_go"/>
                        </group>
                    </group>

                    <field name="cg_batch_lines">
                        <tree editable="bottom" create="false">
                            <field name="sub_batch"/>
                            <field name="course"/>
                            <field name="group"/>
                            <field name="batch"/>
                            <field name="description"/>

                        </tree>
                    </field>

                <div style="text-align:center">
                    <button string="Single Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.course_group_batch_single_action)d"
                            context="{'default_academic_year': academic_year, 'default_institution_type': institution_type}"/>
                    <!--<button string="Batch Mode" class="oe_highlight" type="action"-->
                            <!--style="margin-left:10px"-->
                            <!--name="%(pappaya_academic_management.course_group_batch_mode_action)d"-->
                            <!--context="{'default_academic_year': academic_year,-->
                                       <!--'default_institution_type': institution_type,}"-->
                    <!--/>-->
                </div>
            </form>
        </field>
    </record>

    <record id="course_group_batch_subbatch_view_only_action" model="ir.actions.act_window">
        <field name="name">Course Group Batch Sub Batch</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cg.batch.sb.view</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

        <menuitem id="course_group_batch_subbatch_view_sub_menu"
              name="Course Group Batch Sub Batch"
              parent="academic_main_menu"
              sequence="191"
              action="course_group_batch_subbatch_view_only_action"/>

</odoo>