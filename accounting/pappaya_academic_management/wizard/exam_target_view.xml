<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="exam_target_batch_view_view_form" model="ir.ui.view">
        <field name="name">exam.target.batch.view.form</field>
        <field name="model">exam.target.view</field>
        <field name="arch" type="xml">
            <form string="Exam Target Details">
                <group col="4">
                    <field name="academic_year"/>
                    <field name="institution_type"/>
                </group>
                <separator string="Exam Target Details"/>
                <field name="exam_target_lines">
                    <tree editable="bottom" create="false">
                        <field name="name"/>
                        <field name="status"/>
                    </tree>
                </field>
                <div style="text-align:center;">
                    <button string="Single Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.exam_target_single_mode_action)d"
                            context="{'default_academic_year': academic_year,
                                  'default_institution_type': institution_type,}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="exam_target_batch_view_only_action" model="ir.actions.act_window">
        <field name="name">Exam Target</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">exam.target.view</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="exam_target_batch_view_sub_menu"
          name="Exam Target"
          parent="academic_main_menu"
          sequence="140"
          action="exam_target_batch_view_only_action"/>

</odoo>