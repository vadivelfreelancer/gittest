<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="previous_course_previous_type_wizard_view_form" model="ir.ui.view">
        <field name="name">previous.course.previous.type.wizard.view.form</field>
        <field name="model">previous.course.previous.view</field>
        <field name="arch" type="xml">
            <form string="Previous Course And Present Course Details">

                <group col="4">
                    <field name="academic_year"/>
                    <field name="institution_type"/>
                </group>
                <separator string="Previous Course And Present Course Details"/>
                <field name="previous_course_lines">
                    <tree editable="bottom" create="false">
                        <field name="course"/>
                        <field name="previous_course"/>
                        <field name="description"/>
                        <field name="pre_type"/>
                    </tree>
                </field>

                <div style="text-align:center">
                    <button string="Single Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.previous_course_type_single_action)d"
                            context="{'default_academic_year': academic_year, 'default_institution_type': institution_type}"/>
                    <button string="Batch Mode" class="oe_highlight" type="action"
                            style="margin-left:10px"
                            name="%(pappaya_academic_management.previous_course_type_batch_mode_action)d"
                            context="{'default_academic_year': academic_year,
                                       'default_institution_type': institution_type,}"
                    />
                </div>
            </form>
        </field>
    </record>

    <record id="previous_course_previous_type_batch_view_only_action" model="ir.actions.act_window">
        <field name="name">Class Group Wise Subject Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">previous.course.previous.view</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>