<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="exam_name_view_view_form" model="ir.ui.view">
        <field name="name">exam.name.view.form</field>
        <field name="model">exam.name.view</field>
        <field name="arch" type="xml">
            <form string="Exam Name">
                <group col="4">
                    <field name="academic_year"/>
                    <field name="institution_type"/>
                    <field name="course"/>
                </group>
                <separator string="Exam Name"/>
                <field name="exam_name_line">
                    <tree editable="bottom" create="false">
                        <field name="course"/>
                        <field name="name"/>
                        <field name="status"/>
                        <field name="description"/>
                    </tree>
                </field>
                <div style="text-align:center;">
                    <button string="Single Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.exam_name_single_action)d"
                            context="{'default_academic_year': academic_year,
                                  'default_institution_type': institution_type,'default_course': course}"/>
                    <button string="Batch Mode" class="oe_highlight" type="action" style="margin-left:10px"
                                name="%(pappaya_academic_management.exam_name_batch_mode_action)d"
                                context="{'default_academic_year': academic_year,
                                'default_institution_type': institution_type, 'default_course': course}"
                        />
                </div>
            </form>
        </field>
    </record>

    <record id="exam_name_view_only_action" model="ir.actions.act_window">
        <field name="name">Exam Name</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">exam.name.view</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="exam_name_view_sub_menu"
          name="Exam Name"
          parent="academic_main_menu"
          sequence="180"
          action="exam_name_view_only_action"/>

</odoo>