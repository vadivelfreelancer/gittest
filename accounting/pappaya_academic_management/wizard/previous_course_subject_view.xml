<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pc_subject_view_view_form" model="ir.ui.view">
        <field name="name">previous.course.subject.view.view.form</field>
        <field name="model">previous.course.subject.view</field>
        <field name="arch" type="xml">
            <form string="Previous Course Wise Subject Details">
                <group col="4">
                    <field name="academic_year"/>
                    <field name="institution_type"/>
                    <field name="previous_course"/>
                </group>
                <group>
                </group>
                <separator string="Previous Course Wise Subject Details"/>
                <field name="pc_subjects">
                    <tree editable="bottom" create="false">
                        <field name="subject"/>
                        <field name="previous_course"/>
                        <field name="marks" string="Max Marks"/>
                        <field name="description"/>
                    </tree>
                </field>
                <div style="text-align:center">
                    <button string="Single Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.previous_course_single_action)d"
                            context="{'default_academic_year': academic_year, 'default_previous_course': previous_course,
                            'default_institution_type': institution_type}"/>
                    <button string="Batch Mode" class="oe_highlight" type="action"
                            style="margin-left:10px"
                            name="%(pappaya_academic_management.pc_subject_batch_mode_action)d"
                            context="{'default_academic_year': academic_year,
                                       'default_institution_type': institution_type,
                                       'default_previous_course': previous_course}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="pc_subjects_view_only_action" model="ir.actions.act_window">
        <field name="name">Previous Course Subjects</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">previous.course.subject.view</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="pc_subject_view_sub_menu"
              name="Previous Course - Subjects"
              parent="academic_main_menu" sequence="191"
              action="pc_subjects_view_only_action"/>
</odoo>