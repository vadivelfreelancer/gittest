<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="language_mapping_view_view_form" model="ir.ui.view">
        <field name="name">language.mapping.view.view.form</field>
        <field name="model">language.mapping.view</field>
        <field name="arch" type="xml">
            <form string="Subject Mapping Wise Details">
                    <group col="4">
                        <field name="academic_year"/>
                        <field name="institution_type"/>
                        <field name="subject"/>
                    </group>
                <group>
                </group>
                    <separator string="Subject Mapping Wise Details"/>
                    <field name="lang_mapping">
                        <tree editable="bottom" create="false">
                            <field name="sub" string="Name"/>
                            <field name="subject"/>
                            <field name="description"/>
                        </tree>
                    </field>

                <div style="text-align:center">
                    <button string="Single Mode" class="oe_highlight" type="action"
                            name="%(pappaya_academic_management.language_mapping_single_action)d"
                            context="{'default_academic_year': academic_year, 'default_subject': subject,
                            'default_institution_type': institution_type}"/>
                    <button string="Batch Mode" class="oe_highlight" type="action"
                            style="margin-left:10px"
                            name="%(pappaya_academic_management.language_mapping_batch_mode_action)d"
                            context="{'default_academic_year': academic_year,
                                       'default_institution_type': institution_type,
                                       'default_subject': subject}"
                    />
                </div>
            </form>
        </field>
    </record>

    <record id="language_mapping_view_only_action" model="ir.actions.act_window">
        <field name="name">Subject Mapping Wise Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">language.mapping.view</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

        <menuitem id="language_mapping_view_sub_menu"
              name="Languages Mapping"
              parent="academic_main_menu"
              sequence="191"
              action="language_mapping_view_only_action"/>

</odoo>