<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_financial_operating_units"
              inherit_id="account.report_financial">
        <xpath expr="//div[hasclass('row', 'mt32', 'mb32')]" position="inside">
            <div class="col-xs-4" t-if="data['operating_units']">
                <strong>Branches:</strong>
                  <p t-esc="data['operating_units']"/>
            </div>
        </xpath>
    </template>
    
    <!-- Partner Ledger Report -->
    
    <template id="report_partnerledger_operating_units"
              inherit_id="account.report_partnerledger">
        <xpath expr="//div[@class='row']" position="inside">
        	<t t-if="'operating_units' in data">
	            <div class="col-xs-4" t-if="data['operating_units']">
	                <strong>Branches:</strong>
	                  <p t-esc="data['operating_units']"/>
	            </div>
            </t>
        </xpath>
    </template>    
    
    <!-- General Ledger Report -->
    
    <template id="report_generalledger_operating_units"
              inherit_id="account.report_generalledger">
        <xpath expr="//div[@class='row mt32']" position="inside">
        	<t t-if="'operating_units' in data">
	            <div class="col-xs-4" t-if="data['operating_units']">
	                <strong>Branches:</strong>
	                  <p t-esc="data['operating_units']"/>
	            </div>
            </t>
        </xpath>
    </template>    

</odoo>
